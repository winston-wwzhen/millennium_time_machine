/**
 * QCIO 2005 完整样式表
 * 严格遵循 Windows 98 像素视觉规范
 */

/* --- 全局盒模型修复 --- */
page {
  box-sizing: border-box;
}

/* --- 核心 3D 视觉引擎 --- */

/* 标准 Win98 凸起边框 (用于窗口、按钮、状态栏) */
.win98-window, .win98-btn-std, .status-btn, .tab-btn {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  box-sizing: border-box;
}

/* 标准 Win98 凹陷边框 (用于输入框、列表容器、头像框) */
.win98-input, .win98-progress-container, .avatar-inset, .list-container, .dialog-textarea {
  background: #ffffff;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  box-shadow: inset 1px 1px #0a0a0a, inset -1px -1px #dfdfdf;
  box-sizing: border-box;
}

/* --- 基础页面布局 --- */

.qcio-container {
  height: 100vh;
  background-color: #008080; /* 经典桌面蓝绿色 */
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

/* --- 标题栏 (Title Bar) 优化 --- */

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0); /* 经典 XP/98 渐变 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px; /* 强制固定高度确保像素对齐 */
  box-sizing: border-box;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 控制按钮容器 */
.win98-title-controls {
  display: flex;
  gap: 2px;
}

/* 按钮样式重写：彻底消除小程序默认干扰 */
.win98-title-controls button {
  all: unset; 
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  padding: 0 !important;
  margin: 0 !important;
  min-height: unset !important;
  min-width: 16px !important;
  line-height: 1 !important;
  box-sizing: border-box;
  border-radius: 0;
}

/* 按钮点击下沉效果 */
.win98-title-controls button:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  box-shadow: inset 1px 1px #0a0a0a, inset -1px -1px #dfdfdf;
  padding: 1px 0 0 1px !important;
}

/* 注销按钮字体 */
.win98-btn-minimize {
  font-size: 9px;
  font-weight: normal;
  color: #000;
  padding-bottom: 1px;
}

/* 关闭按钮图标 - 直接使用文本 */
.win98-btn-close {
  font-size: 16px;
  font-weight: bold;
  color: #000;
  line-height: 14px;
}

/* --- 登录界面 --- */

.login-screen, .register-screen {
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.4);
  display: flex; justify-content: center; align-items: center;
  z-index: 1000;
}

.login-dialog { width: 280px; }
.register-dialog { width: 320px; }

.login-header, .register-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20px 0;
}

.big-icon { font-size: 50px; filter: drop-shadow(2px 2px #808080); }
.login-brand, .register-brand {
  font-weight: bold;
  font-size: 16px;
  color: #000080;
  margin-top: 5px;
}

.register-subtitle {
  font-size: 11px;
  color: #666;
  margin-top: 5px;
}

.field-row { display: flex; align-items: center; margin-bottom: 12px; padding: 0 20px; }
.field-row label { width: 80px; font-size: 12px; color: #000; }

/* QCIO 号码显示 */
.qcio-id-display {
  flex: 1;
  height: 24px;
  background: #e8e8e8;
  border: 2px inset #808080;
  padding: 0 8px;
  font-size: 12px;
  color: #000;
  display: flex;
  align-items: center;
  font-family: 'Courier New', monospace;
  font-weight: bold;
}

/* 头像选择区域 */
.avatar-inline {
  display: flex;
  gap: 4px;
  align-items: center;
}

.avatar-item {
  width: 22px;
  height: 22px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  background: #fff;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  cursor: pointer;
  box-sizing: border-box;
}

.avatar-item.selected {
  background: #000080;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

.avatar-item:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  padding: 1px 0 0 1px;
}

.login-footer-actions, .register-footer-actions {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin: 15px 0;
}

.win98-progress-container {
  height: 20px; background: white; margin: 10px 20px; padding: 2px;
}
.win98-progress-fill { height: 100%; background: #000080; }

/* --- 主面板 (Main UI) --- */

.main-panel {
  height: 100%;
  padding: 2px;
  display: flex;
  box-sizing: border-box;
  width: 100%;
}
.full-panel {
  flex: 1;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.user-profile-bar {
  display: flex; padding: 8px; background: #c0c0c0;
  border-bottom: 1px solid #808080;
}

.avatar-inset {
  width: 50px; height: 50px; flex-shrink: 0; margin-right: 10px;
  display: flex; justify-content: center; align-items: center; position: relative;
}
.avatar-emoji { font-size: 32px; }
.online-status {
  position: absolute; bottom: 0; right: 0; width: 10px; height: 10px;
  background: #00ff00; border: 1px solid #000; border-radius: 50%;
}

.profile-details { flex: 1; overflow: hidden; }
.name-row { display: flex; align-items: center; gap: 5px; }
.display-name { font-weight: bold; font-size: 14px; color: #000080; text-decoration: underline; }
.lvl-ico { font-size: 10px; color: #ffd700; }
.id-row { font-size: 10px; color: #444; margin: 2px 0; }
.sig-row { font-size: 11px; color: #333; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

/* 钱包显示区域 */
.wallet-display {
  display: flex;
  flex-direction: column;
  gap: 3px;
  align-items: flex-end;
}

.wallet-item {
  display: flex;
  align-items: center;
  gap: 2px;
  background: linear-gradient(180deg, #fffbe6, #f0e68c);
  border: 1px solid;
  border-color: #daa520 #8b6914 #8b6914 #daa520;
  padding: 2px 5px;
  border-radius: 2px;
}

.wallet-icon {
  font-size: 10px;
}

.wallet-amount {
  font-size: 9px;
  font-weight: bold;
  color: #8b4513;
  font-family: 'Arial', sans-serif;
  min-width: 12px;
  text-align: right;
}

/* --- Tabs --- */

.qcio-tabs {
  display: flex;
  background: #c0c0c0;
  box-sizing: border-box;
  width: 100%;
}
.qcio-tab {
  flex: 1;
  text-align: center;
  font-size: 12px;
  padding: 6px;
  border: 1px solid #808080;
  border-top: none;
  background: #d0d0d0;
  box-sizing: border-box;
}
.qcio-tab.active {
  background: #fff;
  font-weight: bold;
  border-bottom: none;
}

/* --- 好友列表 --- */

.group-title { background: #e1e1e1; padding: 5px 10px; font-size: 12px; border-bottom: 1px solid #ccc; display: flex; align-items: center; }
.arrow { font-size: 8px; margin-right: 6px; color: #000; }

.contact-card { display: flex; padding: 8px 10px; border-bottom: 1px solid #f0f0f0; }
.contact-card:active { background-color: #000080; }
.contact-card:active .c-name, .contact-card:active .c-sig { color: #fff; }

.c-avatar-box { 
  width: 36px; height: 36px; background: #eee; border: 1px solid #ccc;
  display: flex; justify-content: center; align-items: center; font-size: 20px; margin-right: 10px;
}
.c-avatar-box.offline { filter: grayscale(1); opacity: 0.5; }
.c-info { display: flex; flex-direction: column; justify-content: center; overflow: hidden; }
.c-name { font-size: 13px; font-weight: bold; color: #000; }
.c-sig { font-size: 10px; color: #888; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

/* --- 自定义弹窗 (Dialogs) --- */

.win98-overlay {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.5); display: flex; justify-content: center; align-items: center; z-index: 2000;
}

.dialog-box { width: 260px; }
.dialog-content { padding: 12px; }
.dialog-label { display: block; font-size: 12px; margin-bottom: 8px; color: #000; }
.dialog-textarea { 
  height: 60px; width: 100%; font-size: 14px; padding: 5px; 
  box-sizing: border-box; font-family: monospace;
}
.dialog-actions { display: flex; justify-content: flex-end; gap: 8px; margin-top: 12px; }

/* 底部状态栏 */
.qcio-status-bar { 
  height: 30px; background: #c0c0c0; border-top: 1px solid #808080; 
  display: flex; justify-content: space-between; align-items: center; padding: 0 5px;
}
.status-btn { font-size: 11px; padding: 2px 8px; height: 20px; line-height: 14px; margin: 0; }
.status-right { font-size: 12px; color: #000; display: flex; gap: 8px; margin-right: 5px; }

/* 通用按钮 */
.win98-btn-std {
  font-size: 12px; color: #000; height: 24px; padding: 0 12px;
  display: flex; align-items: center; justify-content: center;
}

/* 钱包信息弹窗 */
.wallet-info-box {
  width: 320px;
}

.wallet-info-content {
  padding: 15px;
  max-height: 400px;
  overflow-y: auto;
}

.currency-section {
  margin-bottom: 15px;
}

.currency-title {
  font-size: 16px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 5px;
}

.currency-desc {
  font-size: 12px;
  color: #666;
  margin-bottom: 10px;
}

.info-section {
  margin-top: 8px;
}

.info-label {
  font-size: 12px;
  font-weight: bold;
  color: #000;
  display: block;
  margin-bottom: 5px;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.info-item {
  font-size: 11px;
  color: #333;
  line-height: 1.6;
}

.divider-line {
  height: 1px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  margin: 15px 0;
}

/* 主按钮样式 */
.win98-btn-primary {
  font-size: 12px;
  color: #000;
  height: 26px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  font-weight: bold;
}

.win98-btn-primary[disabled] {
  color: #808080;
  background: #a0a0a0;
}

/* 小按钮 */
.win98-btn-sm {
  font-size: 11px;
  color: #000;
  height: 20px;
  padding: 0 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
}

/* 空状态提示 */
.empty-view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
  color: #808080;
  font-size: 12px;
  font-family: 'SimSun', serif;
}

/* 空间内容容器 */
.zone-content {
  padding: 10px;
  background: #ffffff;
  min-height: 100%;
}

/* 空间二级Tab导航 */
.zone-sub-tabs {
  display: flex;
  background: #e8e8e8;
  border-bottom: 1px solid #c0c0c0;
  box-sizing: border-box;
  width: 100%;
  padding: 0 10px;
}

.zone-sub-tab {
  flex: 0 0 auto;
  text-align: center;
  font-size: 11px;
  padding: 6px 12px;
  background: transparent;
  color: #666666;
  font-family: 'SimSun', serif;
  cursor: pointer;
  box-sizing: border-box;
  position: relative;
  margin-right: 2px;
}

.zone-sub-tab:last-child {
  margin-right: 0;
}

.zone-sub-tab.active {
  color: #000080;
  font-weight: bold;
  border-bottom: 2px solid #000080;
  background: #ffffff;
}

.zone-sub-tab:active {
  background: #d0d0d0;
}

/* 滚动容器优化 */
.list-container {
  flex: 1;
  background: white;
  overflow-y: auto;
  box-sizing: border-box;
  width: 100%;
}

/* 消息提示优化 */
.list-container::-webkit-scrollbar {
  width: 8px;
}

.list-container::-webkit-scrollbar-thumb {
  background: #c0c0c0;
  border: 1px solid #808080;
}

.list-container::-webkit-scrollbar-track {
  background: #ffffff;
}

/* 注销确认弹窗样式 */
.logout-dialog-box {
  width: 280px;
}

.logout-dialog-content {
  padding: 20px 15px;
  text-align: center;
}

.logout-icon {
  font-size: 50px;
  margin-bottom: 12px;
}

.logout-message {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 10px;
  font-family: 'SimSun', serif;
}

.logout-submessage {
  font-size: 11px;
  color: #666;
  font-family: 'SimSun', serif;
}