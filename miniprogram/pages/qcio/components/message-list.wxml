<!-- 群聊列表组件 -->
<view class="group-list-container">
  <!-- 群聊会话列表 -->
  <view class="group-sessions">
    <view
      class="group-session"
      wx:for="{{groupList}}"
      wx:key="id"
      bindtap="openChat"
      data-group="{{item}}"
    >
      <!-- 群头像区域 - 多头像拼接效果 -->
      <view class="group-avatar-box">
        <view class="group-avatars">
          <block wx:for="{{item.members}}" wx:for-item="member" wx:for-index="idx" wx:key="idx">
            <text class="member-avatar" style="display: {{idx < 4 ? 'block' : 'none'}}">{{member.avatar}}</text>
          </block>
        </view>
        <!-- 群成员数量角标 -->
        <view class="member-count-badge">{{item.memberCount}}</view>
      </view>

      <!-- 内容区域 -->
      <view class="session-content">
        <view class="session-header">
          <text class="session-name">{{item.name}}</text>
          <text class="session-time">{{item.time}}</text>
        </view>
        <view class="session-preview">
          <text class="preview-text">{{item.lastMsg}}</text>
        </view>
      </view>

      <!-- 未读消息数 -->
      <view class="session-unread" wx:if="{{item.unreadCount > 0}}">
        <text class="unread-badge">{{item.unreadCount > 99 ? '99+' : item.unreadCount}}</text>
      </view>
    </view>
  </view>
</view>
