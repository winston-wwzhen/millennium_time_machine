/* 留言板组件样式 */
.guestbook-container {
  padding: 10px;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
}

.section-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  padding: 8px 0;
  border-bottom: 1px dotted #808080;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.refresh-hint {
  font-size: 11px;
  color: #000080;
  cursor: pointer;
  font-weight: normal;
}

/* 留言列表 */
.guestbook-list {
  max-height: 300px;
  overflow-y: auto;
}

.guestbook-item {
  display: flex;
  gap: 8px;
  padding: 8px;
  margin-bottom: 8px;
  background: #ffffff;
  border: 1px solid #c0c0c0;
}

.guestbook-avatar {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  background: #e0e0e0;
  border: 1px solid #808080;
  flex-shrink: 0;
}

.guestbook-content {
  flex: 1;
  min-width: 0;
}

.guestbook-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.guestbook-name {
  font-size: 12px;
  color: #000080;
  font-weight: bold;
}

.guestbook-time {
  font-size: 10px;
  color: #808080;
}

.guestbook-text {
  font-size: 12px;
  font-family: 'SimSun', serif;
  color: #333333;
  line-height: 1.5;
  word-break: break-all;
}

/* 底部提示 */
.guestbook-footer {
  text-align: center;
  padding: 10px;
  margin-top: 10px;
  border-top: 1px dotted #808080;
}

.footer-text {
  font-size: 10px;
  color: #808080;
}
