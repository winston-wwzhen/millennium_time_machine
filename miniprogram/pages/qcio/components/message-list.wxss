/* 群聊列表组件样式 */
.group-list-container {
  padding: 5px;
  box-sizing: border-box;
  width: 100%;
}

/* 群聊会话列表 */
.group-sessions {
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  box-sizing: border-box;
}

.group-session {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #e0e0e0;
  box-sizing: border-box;
  width: 100%;
}

.group-session:last-child {
  border-bottom: none;
}

.group-session:active {
  background: #e6f0ff;
}

/* 群头像区域 - QCIO 风格多头像拼接 */
.group-avatar-box {
  position: relative;
  width: 45px;
  height: 45px;
  margin-right: 10px;
  flex-shrink: 0;
}

.group-avatars {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  background: #e8e8e8;
  border: 1px solid #c0c0c0;
}

.member-avatar {
  width: 50%;
  height: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  box-sizing: border-box;
  border: 0.5px solid #ffffff;
}

/* 群成员数量角标 */
.member-count-badge {
  position: absolute;
  bottom: -4px;
  right: -4px;
  min-width: 14px;
  height: 14px;
  padding: 0 3px;
  background: #ff6600;
  color: #ffffff;
  font-size: 9px;
  font-weight: bold;
  text-align: center;
  line-height: 14px;
  border: 1px solid #ffffff;
  border-radius: 7px;
}

/* 内容区域 */
.session-content {
  flex: 1;
  min-width: 0;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.session-name {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
}

.session-time {
  font-size: 11px;
  color: #808080;
}

.session-preview {
  overflow: hidden;
}

.preview-text {
  font-size: 12px;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-family: 'SimSun', serif;
}

/* 未读消息数 */
.session-unread {
  margin-left: 8px;
  flex-shrink: 0;
}

.unread-badge {
  display: inline-block;
  min-width: 18px;
  height: 18px;
  padding: 0 5px;
  background: #ff4444;
  color: #ffffff;
  font-size: 10px;
  font-weight: bold;
  text-align: center;
  line-height: 18px;
  border-radius: 9px;
}
