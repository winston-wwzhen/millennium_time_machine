/* 消息列表组件样式 */
.message-list-container {
  padding: 10px;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
}

.section-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  padding: 8px 0;
  border-bottom: 1px dotted #808080;
  margin-bottom: 10px;
}

/* 消息会话列表 */
.message-sessions {
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
}

.message-session {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #e0e0e0;
  cursor: pointer;
}

.message-session:last-child {
  border-bottom: none;
}

.message-session:active {
  background: #e6f0ff;
}

/* 头像区域 */
.session-avatar {
  position: relative;
  width: 45px;
  height: 45px;
  margin-right: 10px;
  flex-shrink: 0;
}

.avatar-emoji {
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  background: #e8e8e8;
  border: 1px solid #c0c0c0;
}

.online-dot {
  position: absolute;
  bottom: 2px;
  right: 2px;
  width: 10px;
  height: 10px;
  background: #00ff00;
  border: 1px solid #000000;
  border-radius: 50%;
}

/* 内容区域 */
.session-content {
  flex: 1;
  min-width: 0;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.session-name {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
}

.session-time {
  font-size: 11px;
  color: #808080;
}

.session-preview {
  overflow: hidden;
}

.preview-text {
  font-size: 12px;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-family: 'SimSun', serif;
}

/* 未读消息数 */
.session-unread {
  margin-left: 8px;
  flex-shrink: 0;
}

.unread-badge {
  display: inline-block;
  min-width: 18px;
  height: 18px;
  padding: 0 5px;
  background: #ff4444;
  color: #ffffff;
  font-size: 10px;
  font-weight: bold;
  text-align: center;
  line-height: 18px;
  border-radius: 9px;
}

/* 快速操作 */
.quick-actions {
  margin-top: 10px;
}

.action-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  font-size: 12px;
  font-family: 'SimSun', serif;
}

.action-icon {
  font-size: 16px;
}

.action-text {
  font-size: 12px;
}
