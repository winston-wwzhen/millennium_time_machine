/* 农场成就徽章组件样式 */
.farm-badge-container {
  padding: 10px;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  margin-bottom: 15px;
}

.section-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  padding: 8px 0;
  border-bottom: 1px dotted #808080;
  margin-bottom: 10px;
}

/* 农场卡片 */
.farm-card {
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  padding: 12px;
}

.farm-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
  padding-bottom: 8px;
  border-bottom: 1px dotted #c0c0c0;
}

.farm-icon {
  font-size: 20px;
}

.farm-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
}

/* 农场统计 */
.farm-stats {
  background: #f5f5f5;
  border: 1px solid #e0e0e0;
  padding: 12px;
  margin-bottom: 12px;
}

.stat-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.stat-value {
  font-size: 20px;
  font-weight: bold;
  color: #ff6600;
  font-family: 'Arial', sans-serif;
}

.stat-label {
  font-size: 11px;
  color: #808080;
}

.stat-divider {
  width: 1px;
  height: 35px;
  background: #c0c0c0;
}

/* 农场操作 */
.farm-actions {
  display: flex;
  gap: 8px;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
  padding: 8px;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  font-size: 11px;
  font-family: 'SimSun', serif;
}

.btn-icon {
  font-size: 14px;
}

.btn-text {
  font-size: 11px;
}

/* 分享对话框 */
.achievement-preview {
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  padding: 12px;
  margin-bottom: 12px;
  min-height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-text {
  font-size: 12px;
  font-family: 'SimSun', serif;
  text-align: center;
  line-height: 1.6;
  color: #333333;
}

.dialog-actions {
  display: flex;
  justify-content: space-between;
  gap: 8px;
}

.dialog-actions .win98-btn-std {
  flex: 1;
  font-size: 11px;
}
