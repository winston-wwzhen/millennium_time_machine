/* 每日签到组件样式 */
.checkin-container {
  padding: 10px;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  margin-bottom: 15px;
}

.section-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  padding: 8px 0;
  border-bottom: 1px dotted #808080;
  margin-bottom: 10px;
}

/* 签到卡片 */
.checkin-card {
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  padding: 12px;
}

/* 签到头部 */
.checkin-header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 12px;
  padding-bottom: 10px;
  border-bottom: 1px dotted #c0c0c0;
}

.consecutive-info, .total-info {
  display: flex;
  align-items: baseline;
  gap: 4px;
}

.consecutive-label, .total-label {
  font-size: 11px;
  color: #808080;
}

.consecutive-days, .total-days {
  font-size: 24px;
  font-weight: bold;
  color: #ff6600;
  font-family: 'Arial', sans-serif;
}

.consecutive-unit, .total-unit {
  font-size: 12px;
  color: #666666;
}

/* 签到状态 */
.checkin-status {
  text-align: center;
  padding: 8px;
  margin-bottom: 10px;
}

.status-text {
  font-size: 12px;
  color: #333333;
  font-family: 'SimSun', serif;
}

/* 签到按钮 */
.checkin-btn {
  width: 100%;
  padding: 10px;
  background: linear-gradient(180deg, #ffcc00, #ff9900);
  border: 2px solid;
  border-color: #ffcc00 #cc6600 #cc6600 #ffcc00;
  color: #000;
  font-size: 14px;
  font-weight: bold;
  font-family: 'SimSun', serif;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkin-btn.checked {
  background: linear-gradient(180deg, #cccccc, #999999);
  border-color: #cccccc #666666 #666666 #cccccc;
  color: #666666;
}

/* 奖励说明 */
.reward-info {
  margin-top: 12px;
  padding-top: 10px;
  border-top: 1px dotted #e0e0e0;
}

.reward-title {
  font-size: 11px;
  color: #808080;
  margin-bottom: 6px;
}

.reward-items {
  display: flex;
  flex-direction: column;
  gap: 3px;
}

.reward-item {
  font-size: 10px;
  color: #666666;
  font-family: 'SimSun', serif;
}
