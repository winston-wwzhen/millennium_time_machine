  padding: 8rpx;
}

.shop-section-title {
  font-size: 24rpx;
  color: #808080;
  padding: 16rpx 8rpx 8rpx;
  border-bottom: 1px solid #c0c0c0;
}

.shop-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
