/**
 * 农场页面样式 - Win98 风格
 */

/* ==================== 基础样式 ==================== */
.farm-container {
  min-height: 100vh;
  background: #008080;
  padding: 20rpx;
  box-sizing: border-box;
}

/* ==================== Win98 窗口 ==================== */
.win98-window {
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
}

/* ==================== 标题栏 ==================== */
.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  padding: 8rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.win98-title-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  font-family: 'SimSun', serif;
}

.win98-title-controls {
  display: flex;
  gap: 8rpx;
}

.win98-btn-close {
  width: 48rpx;
  height: 48rpx;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  font-size: 32rpx;
  line-height: 44rpx;
  padding: 0;
  text-align: center;
  color: #000;
  font-weight: bold;
}

.win98-btn-close:active {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
}

/* ==================== 窗口内容 ==================== */
.win98-content {
  padding: 24rpx;
}

/* ==================== 农场信息栏 ==================== */
.farm-info-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #c0c0c0;
  border-top: 2px solid #808080;
  border-left: 2px solid #808080;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #000;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #000080;
}

.info-value.gold {
  color: #d4a017;
}

/* ==================== 农场网格 ==================== */
.farm-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding: 20rpx;
  background: #8d6e63;
  border-top: 2px solid #808080;
  border-left: 2px solid #808080;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  margin-bottom: 24rpx;
}

.farm-plot {
  aspect-ratio: 1;
  background: #5d4037;
  border-top: 2px solid #8d6e63;
  border-left: 2px solid #8d6e63;
  border-right: 2px solid #3e2723;
  border-bottom: 2px solid #3e2723;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  min-height: 180rpx;
}

.farm-plot:active {
  border-top: 2px solid #3e2723;
  border-left: 2px solid #3e2723;
  border-right: 2px solid #8d6e63;
  border-bottom: 2px solid #8d6e63;
}

.farm-plot.locked {
  background: #424242;
  opacity: 0.6;
}

.plot-icon {
  font-size: 80rpx;
  margin-bottom: 12rpx;
}

.plot-hint,
.harvest-hint,
.lock-hint {
  font-size: 22rpx;
  color: #fff;
  text-shadow: 1px 1px 2px #000;
}

/* 生长中状态 */
.plot-growing {
  position: relative;
}

.progress-bar {
  width: 80%;
  height: 12rpx;
  background: #3e2723;
  border-radius: 6rpx;
  overflow: hidden;
  margin: 8rpx 0;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50, #8bc34a);
  transition: width 0.3s;
}

.time-left {
  font-size: 20rpx;
  color: #8bc34a;
}

/* 成熟状态 */
.plot-mature {
  background: #6d4c41;
}

.mature-anim {
  animation: mature-pulse 1.5s ease-in-out infinite;
}

@keyframes mature-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

/* ==================== 操作按钮栏 ==================== */
.action-bar {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 20rpx;
}

.win98-btn-std {
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #000;
  font-family: 'SimSun', serif;
  min-width: 160rpx;
}

.win98-btn-std:active {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  transform: translate(2rpx, 2rpx);
}

/* ==================== 商店弹窗 ==================== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
}

.shop-window {
  max-height: 80vh;
}

.shop-content {
  height: 500rpx;
  display: flex;
  flex-direction: column;
}

/* ==================== 商店Tab ==================== */
.shop-tabs {
  display: flex;
  border-bottom: 2px solid #808080;
  margin-bottom: 16rpx;
}

.shop-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  border-top: 2px solid transparent;
  border-left: 2px solid transparent;
  border-right: 2px solid transparent;
  color: #000;
}

.shop-tab.active {
  background: #fff;
  border-top: 2px solid #fff;
  border-left: 2px solid #808080;
  border-right: 2px solid #808080;
}

/* ==================== 商品列表 ==================== */
.shop-list {
  flex: 1;
  padding: 8rpx;
}

.shop-section-title {
  font-size: 24rpx;
  color: #808080;
  padding: 16rpx 8rpx 8rpx;
  border-bottom: 1px solid #c0c0c0;
}

.shop-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  margin-bottom: 12rpx;
}

.shop-item:active {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
}

.item-icon {
  font-size: 60rpx;
  margin-right: 16rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
}

.item-desc {
  font-size: 22rpx;
  color: #808080;
}

.item-price {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #d4a017;
}

.price-icon {
  font-size: 24rpx;
}
