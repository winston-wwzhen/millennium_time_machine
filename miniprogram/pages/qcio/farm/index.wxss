/**
 * 农场页面样式 - Win98 风格
 */

/* ==================== 基础样式 ==================== */
.farm-container {
  min-height: 100vh;
  background: #008080;
  padding: 180rpx 20rpx 20rpx;
  box-sizing: border-box;
}

/* ==================== Win98 窗口 ==================== */
.win98-window {
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
}

/* ==================== 标题栏 ==================== */
.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  padding: 8rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.win98-title-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  font-family: 'SimSun', serif;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

/* 按钮样式重写：彻底消除小程序默认干扰 */
.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  padding: 0 !important;
  margin: 0 !important;
  min-height: unset !important;
  min-width: 16px !important;
  line-height: 1 !important;
  box-sizing: border-box;
  border-radius: 0;
}

/* 按钮点击下沉效果 */
.win98-title-controls button:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  box-shadow: inset 1px 1px #0a0a0a, inset -1px -1px #dfdfdf;
  padding: 1px 0 0 1px !important;
}

.win98-btn-close {
  font-size: 16px;
  font-weight: bold;
  color: #000;
  line-height: 14px;
}

/* ==================== 窗口内容 ==================== */
.win98-content {
  padding: 24rpx;
  height: 70vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

/* ==================== 农场信息栏 ==================== */
.farm-info-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #c0c0c0;
  border-top: 2px solid #808080;
  border-left: 2px solid #808080;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  margin-bottom: 24rpx;
  flex-shrink: 0;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #000;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #000080;
}

.info-value.gold {
  color: #d4a017;
}

/* ==================== 操作提示 ==================== */
.farm-tips {
  padding: 16rpx 20rpx;
  background: #c0c0c0;
  border-top: 2px solid #808080;
  border-left: 2px solid #808080;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  margin-bottom: 16rpx;
  text-align: center;
  font-size: 24rpx;
  color: #000;
  flex-shrink: 0;
}

/* ==================== 农场滚动容器 ==================== */
.farm-scroll {
  flex: 1;
  overflow-y: scroll;
  background: #8d6e63;
  border-top: 2px solid #808080;
  border-left: 2px solid #808080;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  margin-bottom: 24rpx;
}

/* ==================== 农场网格 ==================== */
.farm-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 滚动条样式 */
.farm-scroll::-webkit-scrollbar {
  width: 8px;
}

.farm-scroll::-webkit-scrollbar-thumb {
  background: #c0c0c0;
  border: 1px solid #808080;
}

.farm-scroll::-webkit-scrollbar-track {
  background: #5d4037;
}

.farm-plot {
  aspect-ratio: 1;
  background: #5d4037;
  border-top: 2px solid #8d6e63;
  border-left: 2px solid #8d6e63;
  border-right: 2px solid #3e2723;
  border-bottom: 2px solid #3e2723;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  min-height: 180rpx;
}

.farm-plot:active {
  border-top: 2px solid #3e2723;
  border-left: 2px solid #3e2723;
  border-right: 2px solid #8d6e63;
  border-bottom: 2px solid #8d6e63;
}

.farm-plot.locked {
  background: #424242;
  opacity: 0.6;
}

.plot-icon {
  font-size: 80rpx;
  margin-bottom: 12rpx;
}

.plot-crop-icon {
  font-size: 100rpx;
  margin-bottom: 12rpx;
}

.plot-crop-icon.mature {
  animation: mature-pulse 1.5s ease-in-out infinite;
  font-size: 110rpx;
}

/* 生长进度条 */
.progress-bar {
  width: 80%;
  height: 12rpx;
  background: #3e2723;
  border-radius: 6rpx;
  overflow: hidden;
  margin: 8rpx 0;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50, #8bc34a);
  transition: width 0.3s;
}

.time-left {
  font-size: 20rpx;
  color: #8bc34a;
}

/* 成熟动画 */
.mature-anim {
  animation: mature-pulse 1.5s ease-in-out infinite;
}

@keyframes mature-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

/* ==================== 操作按钮栏 ==================== */
.action-bar {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 20rpx;
  background: #c0c0c0;
  border-top: 2px solid #808080;
  border-left: 2px solid #808080;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  flex-shrink: 0;
}

.win98-btn-std {
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #000;
  font-family: 'SimSun', serif;
  min-width: 160rpx;
}

.win98-btn-std:active {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  transform: translate(2rpx, 2rpx);
}

