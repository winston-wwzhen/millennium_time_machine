  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
}

.item-icon {
  font-size: 60rpx;
  margin-right: 16rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
}

.item-desc {
  font-size: 22rpx;
  color: #808080;
}

.item-price {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #d4a017;
}

.price-icon {
  font-size: 24rpx;
}

/* ==================== 收获弹窗 ==================== */
.harvest-window {
  width: 90%;
  max-width: 600rpx;
  height: 680rpx;
  max-height: 55vh;
  box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.5);
}

.harvest-content {
  height: 540rpx;
  padding: 12rpx 16rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(180deg, #ffffff 0%, #f0f0f0 100%);
  overflow: hidden;
  box-sizing: border-box;
}

.harvest-icon-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 12rpx;
  width: 100%;
}

.harvest-crop-icon {
  font-size: 100rpx;
  margin-bottom: 8rpx;
  animation: harvest-bounce 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

@keyframes harvest-bounce {
  0% {
    transform: scale(0) rotate(-15deg);
    opacity: 0;
  }
  40% {
    transform: scale(1.3) rotate(5deg);
  }
  60% {
    transform: scale(0.9) rotate(-3deg);
  }
  80% {
    transform: scale(1.05) rotate(1deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.harvest-crop-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #000080;
  font-family: 'SimSun', serif;
  text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.5);
  margin-bottom: 2rpx;
}

.harvest-quality-section {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-bottom: 12rpx;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #fff9e6 0%, #fff3cd 100%);
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #d4a017;
  border-bottom: 2px solid #d4a017;
  box-shadow: inset 0 2rpx 4rpx rgba(212, 160, 23, 0.1);
}

.quality-label {
  font-size: 22rpx;
  color: #8b4513;
  margin-right: 4rpx;
  font-weight: bold;
}

.quality-star {
  font-size: 28rpx;
  color: #d4d4d4;
  text-shadow: 1px 1px 2rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.quality-star.active {
  color: #ffd700;
  text-shadow: 0 0 8rpx rgba(255, 215, 0, 0.6), 1px 1px 2rpx rgba(0, 0, 0, 0.3);
  animation: star-glow 1.5s ease-in-out infinite alternate;
}

@keyframes star-glow {
  0% {
    transform: scale(1);
    filter: brightness(1);
  }
  100% {
    transform: scale(1.1);
    filter: brightness(1.2);
  }
}

.harvest-divider {
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, transparent, #d4a017, transparent);
  margin-bottom: 12rpx;
  position: relative;
}

.harvest-divider::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 8rpx;
  height: 8rpx;
  background: #d4a017;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 0 0 4rpx rgba(212, 160, 23, 0.5);
}

.harvest-rewards {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.reward-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 16rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #a0a0a0;
  border-bottom: 2px solid #a0a0a0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.reward-row:hover {
  transform: translateX(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.reward-icon {
  font-size: 36rpx;
  width: 50rpx;
  text-align: center;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.15));
  animation: reward-icon-bounce 0.6s ease-out;
}

@keyframes reward-icon-bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-6rpx);
  }
}

.reward-label {
  flex: 1;
  font-size: 24rpx;
  color: #333;
  font-family: 'SimSun', serif;
  font-weight: 500;
}

.reward-value {
  font-size: 30rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ffd700 0%, #ffaa00 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: none;
  filter: drop-shadow(0 1rpx 2rpx rgba(212, 160, 23, 0.3));
}

.harvest-footer {
  padding: 8rpx 16rpx 10rpx;
  display: flex;
  justify-content: center;
  background: linear-gradient(180deg, #f5f5f5 0%, #ebebeb 100%);
  border-top: 1px solid #d0d0d0;
}

.harvest-ok-btn {
  min-width: 140rpx;
  padding: 8rpx 40rpx;
  font-size: 26rpx;
  font-weight: bold;
  background: linear-gradient(180deg, #4caf50 0%, #45a049 100%);
  color: #fff;
  border-top: 2px solid #66bb6a;
  border-left: 2px solid #66bb6a;
  border-right: 2px solid #2e7d32;
  border-bottom: 2px solid #2e7d32;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.3);
  transition: all 0.2s ease;
}

.harvest-ok-btn:active {
  background: linear-gradient(180deg, #45a049 0%, #3d8b40 100%);
  border-top: 2px solid #2e7d32;
  border-left: 2px solid #2e7d32;
  border-right: 2px solid #66bb6a;
  border-bottom: 2px solid #66bb6a;
  box-shadow: 0 2rpx 4rpx rgba(76, 175, 80, 0.2);
  transform: translateY(2rpx);
}

