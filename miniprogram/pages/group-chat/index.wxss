/* 继承全局字体 */
page {
  height: 100%;
  font-family: "宋体", sans-serif;
  overflow: hidden;
}

.desktop {
  width: 100%;
  height: 100%;
  background-color: #008080;
  display: flex;
  align-items: center;
  justify-content: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding-top: 110rpx;
  padding-bottom: 40rpx;
}

.window-frame {
  width: 98%;
  max-width: 680rpx;
  box-sizing: border-box;
  height: 90%;
  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
}

/* 标题栏 */
.chat-title-bar {
  background: linear-gradient(90deg, #87CEEB, #4682B4);
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 4px;
  margin: 3px;
}

/* 群信息区域 */
.group-info {
  display: flex;
  align-items: center;
  gap: 6px;
}

.group-title-avatar {
  font-size: 16px;
}

.title-text {
  color: white;
  font-size: 14px;
  font-weight: bold;
  margin-left: 5px;
}

.btn-close {
  width: 20px;
  height: 18px;
  background: #c0c0c0;
  border: 1px solid;
  border-color: #fff #000 #000 #fff;
  text-align: center;
  line-height: 16px;
  font-weight: bold;
}

/* 提示信息 */
.warning-tip {
  background: #ffffe0;
  color: #555;
  font-size: 10px;
  padding: 3px 5px;
  border-bottom: 1px solid #808080;
  text-align: center;
  margin-bottom: 2px;
}

/* 群成员列表区域 */
.members-section {
  background: #f5f5f5;
  border-bottom: 1px solid #808080;
}

.members-header {
  display: flex;
  align-items: center;
  padding: 6px 10px;
  cursor: pointer;
  background: #e8e8e8;
  border: 1px solid;
  border-color: #fff #808080 #808080 #fff;
}

.members-header:active {
  background: #d0d0d0;
}

.members-toggle {
  font-size: 10px;
  margin-right: 6px;
  color: #666;
}

.members-title {
  font-size: 12px;
  color: #333;
  font-weight: bold;
}

.members-list {
  max-height: 200px;
  overflow-y: auto;
  background: #fff;
  border-top: 1px solid #c0c0c0;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 8px 10px;
  border-bottom: 1px solid #e0e0e0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  margin-right: 10px;
  background: #f0f0f0;
  border: 1px solid #c0c0c0;
}

.member-name {
  font-size: 13px;
  color: #333;
}

/* 聊天记录区 */
.chat-history {
  flex: 1;
  width: 99%;
  background: #fff;
  border: 2px solid;
  border-color: #808080 #fff #fff #808080;
  padding: 10px;
  box-sizing: border-box;
  overflow-y: scroll;
}

.chat-item {
  display: flex;
  margin-bottom: 15px;
  align-items: flex-start;
}

.chat-item.left {
  flex-direction: row;
}

.chat-item.right {
  flex-direction: row;
  justify-content: flex-end;
}

/* 头像 */
.avatar {
  width: 32px;
  height: 32px;
  border: 1px solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
}

.ai-avatar {
  background: #ffcc00;
  margin-right: 8px;
}

.my-avatar {
  background: #00ff00;
  margin-left: 8px;
}

/* 消息内容容器 - 群聊特有 */
.message-content {
  display: flex;
  flex-direction: column;
  max-width: 70%;
}

/* 发言者名字 - 群聊特有 */
.speaker-name {
  font-size: 11px;
  color: #000080;
  margin-bottom: 2px;
  font-weight: bold;
}

/* 气泡 */
.bubble {
  padding: 8px 12px;
  font-size: 15px;
  line-height: 1.4;
  position: relative;
  word-break: break-all;
}

.ai-bubble {
  background: #f0f0f0;
  border: 1px solid #808080;
  box-shadow: 2px 2px 0 #000;
}

.my-bubble {
  background: #e0ffff;
  border: 1px solid #000080;
  box-shadow: 2px 2px 0 #000;
}

/* 输入区 */
.chat-input-area {
  height: 120px;
  display: flex;
  flex-direction: column;
  padding: 0 5px 5px 5px;
}

.chat-input {
  flex: 1;
  width: 100%;
  background: #fff;
  border: 2px solid;
  border-color: #808080 #fff #fff #808080;
  font-size: 16px;
  padding: 5px;
  box-sizing: border-box;
}

.chat-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-top: 8px;
}

.retro-btn {
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  padding: 4px 20px;
  font-size: 14px;
  text-align: center;
}

.retro-btn:active {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  padding: 5px 19px 3px 21px;
}

.primary {
  font-weight: bold;
  color: #000080;
}
