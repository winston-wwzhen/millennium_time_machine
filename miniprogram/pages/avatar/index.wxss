/* 继承全局复古样式，建议将公共样式提取到 app.wxss 或 styles/retro.wxss */
page {
  height: 100%;
  font-family: "宋体", sans-serif;
  overflow: hidden;
}

.desktop {
  width: 100%;
  height: 100%;
  background-color: #008080;
  display: flex;
  align-items: center;
  justify-content: center;
}

.window-frame {
  width: 90%;
  height: 85%; /* 更高的窗口 */
  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 2px 2px 0px rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
}

.title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 4px;
  margin: 3px;
}

.title-text {
  color: white;
  font-size: 14px;
  font-weight: bold;
}

.btn-close {
  width: 20px;
  height: 18px;
  background: #c0c0c0;
  border: 1px solid;
  border-color: #fff #000 #000 #fff;
  text-align: center;
  line-height: 16px;
  font-weight: bold;
}

.menu-bar {
  display: flex;
  gap: 15px;
  padding: 2px 10px;
  font-size: 14px;
  border-bottom: 1px solid #808080;
  margin-bottom: 5px;
}

.window-body {
  padding: 10px;
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

/* 预览区域 */
.preview-area {
  width: 100%;
  height: 0;
  padding-bottom: 75%; /* 4:3 比例 */
  background: #000;
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  position: relative;
  margin-bottom: 10px;
}

.user-photo {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  object-fit: cover;
}

.placeholder {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #00ff00;
  font-family: monospace;
  text-align: center;
}

.border-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 10;
}

/* 滤镜效果 (CSS模拟预览) */
.filter-layer {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 5;
}

.matrix-green {
  background: rgba(0, 255, 0, 0.1);
  box-shadow: inset 0 0 20px rgba(0,255,0,0.5);
}

.old-noise {
  background: rgba(255, 255, 0, 0.1);
  backdrop-filter: sepia(0.5); /* 仅部分真机支持，canvas绘制时需单独实现 */
}

.over-exposure {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: brightness(1.2) contrast(1.2);
}

/* 控制面板 */
.control-panel {
  margin-bottom: 10px;
}

.label {
  font-size: 12px;
  margin: 5px 0;
  color: #333;
}

.border-list {
  white-space: nowrap;
  height: 70px;
  background: #fff;
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  padding: 5px;
  box-sizing: border-box;
}

.border-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 10px;
  width: 50px;
}

.border-preview {
  width: 40px;
  height: 40px;
  border: 4px solid #ddd;
  margin-bottom: 2px;
}

.border-item.active .border-preview {
  border-color: #000080 !important; /* 选中蓝框 */
}

.border-item text {
  font-size: 10px;
}

.filter-options {
  display: flex;
  gap: 5px;
}

/* 按钮通用 */
.retro-btn {
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  padding: 6px 15px;
  font-size: 12px;
  text-align: center;
  active: active;
}

.sm-btn {
  padding: 4px 10px;
  flex: 1;
}

.active-btn {
  /* 模拟按下状态 */
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  background: #d4d0c8;
  font-weight: bold;
}

.btn-hover {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  padding: 7px 14px 5px 16px; 
}

.action-area {
  display: flex;
  justify-content: space-between;
  margin-top: auto;
  gap: 10px;
}

.primary-btn {
  font-weight: bold;
  flex: 1;
}

.status-bar {
  margin-top: 5px;
  border-top: 1px solid #808080;
  padding: 2px 5px;
  font-size: 12px;
  color: #555;
  display: flex;
  justify-content: space-between;
}

.offscreen-canvas {
  position: absolute;
  top: -9999px;
  left: -9999px;
  width: 300px; /* 默认导出宽度 */
  height: 400px;
}