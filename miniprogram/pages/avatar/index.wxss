/* ==================== 全局样式 ==================== */
page {
  height: 100vh;
  background: #008080;
  padding: 5px 5px 5px 5px;
  box-sizing: border-box;
}

.desktop {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ==================== 窗口框架 ==================== */
.window-frame {
  width: 100%;
  height: 100%;
  max-width: 750rpx;
  max-height: 70vh;
  background-color: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
}

/* ==================== 标题栏 ==================== */
.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 2px 3px 2px 6px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 14px;
  font-weight: bold;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* ==================== 菜单栏 ==================== */
.menu-bar {
  display: flex;
  gap: 2px;
  padding: 2px 8px;
  font-size: 12px;
  border-bottom: 1px solid #808080;
  background: #c0c0c0;
}

.menu-item {
  padding: 2px 8px;
  cursor: pointer;
  position: relative;
}

.menu-item.active,
.menu-item:active {
  background: #000080;
  color: white;
}

.menu-text {
  font-size: 12px;
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 60px;
  left: 4px;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 2px 2px 0 rgba(0,0,0,0.3);
  min-width: 150px;
  z-index: 100;
  display: none;
  animation: fadeIn 0.1s ease;
}

.dropdown-menu.show {
  display: block;
}

.dropdown-item {
  padding: 6px 20px;
  font-size: 12px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.dropdown-item:active {
  background: #000080;
  color: white;
}

.dropdown-icon {
  font-size: 14px;
}

.dropdown-line {
  height: 1px;
  background: #808080;
  margin: 4px 0;
  border-top: 1px solid #fff;
}

/* ==================== 主内容区 ==================== */
.window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  padding: 4px;
}

/* ==================== 预览容器 ==================== */
.preview-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.preview-area {
  flex: 1;
  width: 100%;
  min-height: 300rpx;
  background: #000;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  position: relative;
  overflow: hidden;
  margin-bottom: 8px;
}

/* 照片包装容器 - 用于拖拽 */
.user-photo-wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  /* 不设置overflow: hidden，允许照片溢出显示 */
  will-change: transform;
}

.user-photo-wrapper.dragging {
  cursor: grabbing;
}

/* 照片使用 widthFix 模式，宽度100%，高度自动按比例 */
.user-photo {
  width: 100%;
  height: auto;
  display: block;
}

.placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
}

.placeholder-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.placeholder-icon {
  font-size: 48px;
  opacity: 0.6;
}

.placeholder-text {
  font-family: 'Courier New', monospace;
  font-size: 12px;
  color: #00ff00;
  opacity: 0.8;
  letter-spacing: 2px;
}

/* 叠加层 */
.border-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 10;
}

.filter-layer {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 5;
  transition: all 0.3s ease;
}

/* 滤镜效果 */
.filter-layer.sepia {
  background: rgba(112, 66, 20, 0.3);
  box-shadow: inset 0 0 30px rgba(112, 66, 20, 0.5);
}

.filter-layer.matrix-green {
  background: rgba(0, 255, 0, 0.15);
  box-shadow: inset 0 0 20px rgba(0, 255, 0, 0.4);
}

.filter-layer.old-noise {
  background: rgba(255, 255, 0, 0.1);
  box-shadow: inset 0 0 25px rgba(139, 90, 43, 0.4);
}

.filter-layer.over-exposure {
  background: rgba(255, 255, 255, 0.25);
  box-shadow: inset 0 0 30px rgba(255, 255, 255, 0.5);
}

.filter-layer.cold {
  background: rgba(0, 100, 255, 0.15);
  box-shadow: inset 0 0 25px rgba(0, 100, 255, 0.3);
}

.filter-layer.warm {
  background: rgba(255, 100, 0, 0.15);
  box-shadow: inset 0 0 25px rgba(255, 100, 0, 0.3);
}

.filter-layer.blur {
  backdrop-filter: blur(2px);
  -webkit-backdrop-filter: blur(2px);
}

/* 日期水印 */
.date-watermark {
  position: absolute;
  z-index: 15;
  font-family: 'Courier New', monospace;
  font-size: 14px;
  font-weight: bold;
  opacity: 0;
  transition: opacity 0.3s ease;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
}

.date-watermark.show {
  opacity: 1;
}

.date-watermark.position-top-right {
  top: 10px;
  right: 10px;
}

.date-watermark.position-bottom-right {
  bottom: 10px;
  right: 10px;
}

.date-watermark.position-bottom-left {
  bottom: 10px;
  left: 10px;
}

/* 文字叠加层 */
.text-overlay-layer {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 20;
}

.text-overlay-item {
  position: absolute;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
  font-weight: bold;
  transform-origin: center center;
  pointer-events: auto;
}

.text-overlay-item.dragging {
  opacity: 0.8;
  filter: brightness(1.2);
  z-index: 100;
}

/* 闪字层 */
.glitter-text-layer {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 25;
}

.glitter-text {
  position: absolute;
  font-weight: bold;
  text-shadow: 0 0 10px currentColor, 0 0 20px currentColor, 2px 2px 4px rgba(0,0,0,0.8);
  animation: glitter 1.5s ease-in-out infinite;
  pointer-events: auto;
}

.glitter-text.dragging {
  animation: none;
  opacity: 0.8;
  filter: brightness(1.2);
  z-index: 100;
}

@keyframes glitter {
  0%, 100% {
    opacity: 1;
    filter: brightness(1);
  }
  50% {
    opacity: 0.8;
    filter: brightness(1.3);
  }
}

/* 贴纸层 */
.sticker-layer {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 30;
  pointer-events: none;
}

.sticker-item {
  position: absolute;
  transform-origin: center center;
  animation: stickerFloat 3s ease-in-out infinite;
  pointer-events: auto;
}

.sticker-item.dragging {
  animation: none;
  opacity: 0.8;
  filter: brightness(1.2);
  z-index: 100;
}

@keyframes stickerFloat {
  0%, 100% {
    transform: translateY(0) rotate(var(--rotation, 0deg));
  }
  50% {
    transform: translateY(-5px) rotate(var(--rotation, 0deg));
  }
}

.sticker-emoji {
  font-size: 32px;
  filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.5));
}

/* ==================== 快捷工具栏 ==================== */
.quick-toolbar {
  display: flex;
  justify-content: space-around;
  padding: 8px 4px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  margin-bottom: 8px;
}

.quick-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 6px 12px;
  cursor: pointer;
  transition: all 0.1s ease;
}

.quick-btn:active {
  background: #000080;
}

.quick-btn:active .quick-btn-icon,
.quick-btn:active .quick-btn-text {
  color: white;
}

.quick-btn-icon {
  font-size: 22px;
  margin-bottom: 2px;
}

.quick-btn-text {
  font-size: 10px;
  color: #000;
}

/* ==================== Win98 弹窗 ==================== */
.win98-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.win98-dialog {
  width: 85%;
  max-width: 320px;
  max-height: 70vh;
  height: 60vh;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 4px 4px 0 rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
}

.win98-dialog.sticker-dialog {
  max-width: 360px;
  max-height: 80vh;
}

.win98-dialog-title {
  background: linear-gradient(90deg, #000080, #1084d0);
  color: white;
  font-weight: bold;
  font-size: 12px;
  padding: 4px 8px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-dialog-body {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.dialog-scroll {
  flex: 1;
  height: 100%;
}

.win98-dialog-footer {
  display: flex;
  justify-content: center;
  gap: 8px;
  padding: 8px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
}

/* 弹窗网格布局 */
.border-grid,
.filter-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  padding: 12px;
}

.border-option,
.filter-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 4px;
  cursor: pointer;
  transition: all 0.15s ease;
}

.border-option:active,
.filter-option:active {
  background: #000080;
}

.border-option:active .border-option-label,
.filter-option:active .filter-option-label {
  color: white;
}

.border-option.active,
.filter-option.active {
  background: #000080;
}

.border-option.active .border-option-label,
.filter-option.active .filter-option-label {
  color: white;
}

.border-option-preview {
  width: 50px;
  height: 50px;
  border: 3px solid #ddd;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  margin-bottom: 4px;
}

.border-option-label,
.filter-option-label {
  font-size: 11px;
  color: #333;
  text-align: center;
}

.filter-option-icon {
  font-size: 28px;
  margin-bottom: 4px;
}

/* 弹窗内贴纸选项 */
.sticker-option-lg {
  width: 46px;
  height: 46px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 1px solid #999;
  border-radius: 4px;
  font-size: 26px;
  cursor: pointer;
}

.sticker-option-lg:active {
  background: #e0e0ff;
  transform: scale(0.95);
}

/* 弹窗输入区 */
.dialog-input-area {
  padding: 12px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.dialog-input {
  background: #fff;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  padding: 8px;
  font-size: 13px;
}

.dialog-option-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.dialog-option-label {
  font-size: 11px;
  color: #333;
  min-width: 40px;
}

.dialog-slider {
  flex: 1;
}

.color-picker {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.color-option {
  width: 26px;
  height: 26px;
  border-radius: 50%;
  border: 2px solid #999;
  cursor: pointer;
}

.color-option.active {
  border-color: #000;
  box-shadow: 0 0 0 2px rgba(0,0,128,0.3);
}

.font-picker,
.format-picker,
.position-picker {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.font-option,
.format-option,
.position-option {
  padding: 4px 10px;
  background: #fff;
  border: 1px solid #999;
  font-size: 11px;
  cursor: pointer;
}

.font-option.active,
.format-option.active,
.position-option.active {
  background: #000080;
  color: white;
  border-color: #000;
}

/* 弹窗预览 */
.glitter-preview {
  padding: 16px;
  text-align: center;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  background: #f0f0f0;
}

@keyframes shimmer {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.glitter-preview-text {
  font-size: 24px;
  font-weight: bold;
  background: linear-gradient(90deg, #ff1493, #ff69b4, #ff00ff, #ff1493);
  background-size: 200% auto;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: textShine 2s linear infinite;
}

@keyframes textShine {
  to {
    background-position: 200% center;
  }
}

.glitter-preview-placeholder {
  font-size: 14px;
  color: #999;
}

.date-preview-lg {
  padding: 16px;
  text-align: center;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  background: #f0f0f0;
}

.date-preview-lg.active {
  background: #ffffcc;
}

.date-preview-text {
  font-family: 'Courier New', monospace;
  font-size: 18px;
  font-weight: bold;
  color: #ff0000;
  text-shadow: 1px 1px 2px rgba(255,255,255,0.8);
}

/* ==================== 操作按钮区 ==================== */
.action-bar {
  display: flex;
  gap: 8px;
  margin-top: auto;
}

.win98-btn {
  all: unset;
  flex: 1;
  padding: 10px 16px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 12px;
  font-family: "宋体", sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  color: #000;
  cursor: pointer;
}

.win98-btn:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

.win98-btn-primary {
  font-weight: bold;
}

.win98-btn-success {
  font-weight: bold;
}

.win98-action-btn {
  all: unset;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  padding: 8px 16px;
  font-size: 12px;
  font-family: "宋体", sans-serif;
  font-weight: bold;
  color: #000;
  cursor: pointer;
}

.win98-action-btn:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* 弹窗标准按钮 */
.win98-btn-std {
  all: unset;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  padding: 6px 20px;
  font-size: 12px;
  font-family: "宋体", sans-serif;
  color: #000;
  cursor: pointer;
}

.win98-btn-std:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* 弹窗贴纸样式 */
.sticker-category {
  padding: 12px;
  border-bottom: 1px solid #808080;
}

.sticker-category:last-child {
  border-bottom: none;
}

.category-title {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 8px;
  display: block;
}

.sticker-row {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.btn-icon {
  font-size: 14px;
}

/* ==================== 状态栏 ==================== */
.status-bar {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 2px 8px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
  font-size: 11px;
  color: #333;
}

/* ==================== 离屏Canvas ==================== */
.offscreen-canvas {
  position: fixed;
  top: -9999px;
  left: -9999px;
  width: 600px;
  height: 800px;
  pointer-events: none;
}

/* ==================== 动画 ==================== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-5px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ==================== 滚动条样式 ==================== */
::-webkit-scrollbar {
  width: 16px;
  height: 16px;
}

::-webkit-scrollbar-track {
  background: #f0f0f0;
  border: 1px solid #999;
}

::-webkit-scrollbar-thumb {
  background: #c0c0c0;
  border: 2px solid;
  border-color: #fff #999 #999 #fff;
}

::-webkit-scrollbar-button {
  background: #c0c0c0;
  border: 2px solid;
  border-color: #fff #999 #999 #fff;
}
