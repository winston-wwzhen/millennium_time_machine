/* 深青色背景 */
.container {
  height: 100vh;
  background-color: #008080;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 'SimSun', sans-serif; /* 宋体更有那味 */
}

/* 窗口主体 */
.login-window {
  width: 600rpx;
  background-color: #c0c0c0;
  border-top: 2px solid #dfdfdf;
  border-left: 2px solid #dfdfdf;
  border-right: 2px solid #000000;
  border-bottom: 2px solid #000000;
  box-shadow: 4px 4px 10px rgba(0,0,0,0.5);
}

/* 标题栏 */
.title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  padding: 4px 6px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-text {
  color: white;
  font-weight: bold;
  font-size: 14px;
}

.close-btn {
  background: #c0c0c0;
  width: 18px;
  height: 18px;
  text-align: center;
  line-height: 16px;
  border-top: 1px solid #fff;
  border-left: 1px solid #fff;
  border-right: 1px solid #000;
  border-bottom: 1px solid #000;
  font-size: 14px;
  font-weight: bold;
}

/* 内容布局 */
.content {
  display: flex;
  padding: 20px 10px;
}

.icon-area {
  width: 80px;
  display: flex;
  justify-content: center;
  padding-top: 10px;
}

.form-area {
  flex: 1;
}

.instruction {
  font-size: 12px;
  margin-bottom: 15px;
  line-height: 1.4;
}

.input-row {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.label {
  font-size: 12px;
  width: 70px;
}

.input {
  flex: 1;
  background: #fff;
  border-top: 2px solid #404040;
  border-left: 2px solid #404040;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  height: 24px;
  min-height: 24px;
  font-size: 12px;
  padding: 0 4px;
}

/* 按钮区 */
.btn-area {
  display: flex;
  justify-content: flex-end; /* 按钮靠右 */
  padding: 0 20px 15px 0;
  gap: 10px;
}

/* 按钮外层（用于定位） */
.win-btn-wrapper {
  position: relative;
}

/* 按钮本体 */
.win-btn {
  width: 80px !important;
  font-size: 12px;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  border-radius: 0;
  padding: 4px 0;
  min-height: auto;
  font-weight: normal;
  color: #000;
}

.win-btn:active {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  transform: translate(1px, 1px);
}

.win-btn.disabled {
  color: #888;
  text-shadow: 1px 1px 0 #fff;
}

/* [新增] 分隔线 */
.divider {
  display: flex;
  align-items: center;
  margin: 15px 0 10px 0;
}

.line {
  flex: 1;
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #fff;
}

.divider-text {
  padding: 0 8px;
  font-size: 10px;
  color: #666;
}

/* [新增] 微信登录区域 */
.wechat-login-area {
  display: flex;
  justify-content: center;
}

.wechat-btn {
  width: 100% !important; /* 占满宽度 */
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  font-weight: bold !important;
  color: #006400 !important; /* 经典的深绿色文字 */
}