<view class="container">
  <view class="window-frame">
    <view class="title-bar">
      <view class="title"> 签名生成器</view>
      <view class="controls">
        <view class="btn" hover-class="btn-active" bindtap="onMinimize">_</view>
        <view class="btn" hover-class="btn-active" bindtap="onMaximize">□</view>
        <view class="btn close-btn" hover-class="btn-active" bindtap="onClose">×</view>
      </view>
    </view>
    
    <view class="content-area">
      <view class="label">输入你的大白话：</view>
      <textarea 
        class="input-box" 
        placeholder="例如：今天不想上班..." 
        bindinput="onInput" 
        maxlength="100"
      ></textarea>

      <view class="action-box">
        <button 
          class="retro-btn {{isLoading ? 'disabled' : ''}}" 
          bindtap="onTranslate"
          disabled="{{isLoading}}"
        >
          {{isLoading ? '正在注入忧伤...' : '开始转译'}}
        </button>
      </view>

      <view class="result-box" wx:if="{{resultText}}">
        <view class="label">QQ签名预览：</view>
        <view class="output-text" bindtap="onCopy">
          {{resultText}}
        </view>
        <view class="tip" wx:if="{{!isLoading}}">（点击文字复制）</view>
      </view>

    </view>
    
    <view class="status-bar">
      <text>状态: {{isLoading ? '处理中...' : '就绪'}}</text>
      <text class="right">Memory: 256MB</text>
    </view>
  </view>
</view>