/* 继承全局复古样式 */
page {
  height: 100%;
  font-family: "宋体", sans-serif;
  overflow: hidden;
}

.desktop {
  width: 100%;
  height: 100%;
  background-color: #008080;
  display: flex;
  align-items: center;
  justify-content: center;
}

.window-frame {
  width: 90%;
  height: auto;
  min-height: 400px;
  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
}

.title-bar {
  background: linear-gradient(90deg, #800080, #ff69b4); /* 紫色渐变，带点神秘感 */
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 4px;
  margin: 3px;
}

.title-text {
  color: white;
  font-size: 14px;
  font-weight: bold;
}

.btn-close {
  width: 20px;
  height: 18px;
  background: #c0c0c0;
  border: 1px solid;
  border-color: #fff #000 #000 #fff;
  text-align: center;
  line-height: 16px;
  font-weight: bold;
}

.menu-bar {
  display: flex;
  gap: 15px;
  padding: 2px 10px;
  font-size: 14px;
  margin-bottom: 5px;
  border-bottom: 1px solid #808080;
}

.window-body {
  padding: 15px;
  flex: 1;
}

.section-label {
  font-size: 12px;
  margin-bottom: 5px;
  color: #333;
  font-weight: bold;
}

/* 输入框：愤怒红 */
.input-area {
  width: 100%;
  height: 80px;
  background: #fff0f0; /* 淡红背景 */
  border: 2px solid;
  border-color: #808080 #fff #fff #808080;
  padding: 5px;
  box-sizing: border-box;
  font-size: 14px;
  margin-bottom: 15px;
  color: #8b0000;
}

/* 输出框：和平绿 */
.output-area {
  width: 100%;
  min-height: 80px;
  background: #f0fff0; /* 淡绿背景 */
  border: 2px solid;
  border-color: #808080 #fff #fff #808080;
  padding: 10px;
  box-sizing: border-box;
  font-size: 14px;
  color: #006400;
}

.placeholder-text {
  color: #999;
  font-style: italic;
}

.action-area {
  margin-bottom: 15px;
  display: flex;
  justify-content: center;
  height: 35px;
}

.retro-btn {
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  padding: 8px 30px;
  font-size: 14px;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.retro-btn:active {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  padding: 9px 29px 7px 31px;
}

/* 进度条动画 */
.progress-bar-border {
  width: 100%;
  height: 25px;
  border: 1px solid #000;
  padding: 1px;
  background: #fff;
}

.progress-bar-fill {
  height: 100%;
  background: #000080;
  width: 0%;
  animation: loading 1.5s linear forwards;
}

@keyframes loading {
  0% { width: 0%; }
  100% { width: 100%; }
}

.status-bar {
  margin-top: 10px;
  padding: 2px 5px;
  font-size: 12px;
  color: #555;
  border-top: 1px solid #808080;
}