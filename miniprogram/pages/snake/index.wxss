/* 贪吃蛇游戏样式 */
page {
  background: #008080;
  height: 100%;
}

.snake-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 10px;
  box-sizing: border-box;
}

/* 游戏窗口 */
.game-window {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
}

.game-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 10px;
  overflow: hidden;
}

/* 分数栏 */
.score-bar {
  display: flex;
  justify-content: space-around;
  gap: 10px;
  margin-bottom: 10px;
}

.score-item {
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  padding: 8px 15px;
  text-align: center;
  flex: 1;
}

.score-label {
  display: block;
  font-size: 10px;
  color: #808080;
  margin-bottom: 3px;
}

.score-value {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #000080;
  font-family: 'Courier New', monospace;
}

/* 游戏板 */
.game-board {
  position: relative;
  background: #000;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  margin: 0 auto;
}

.grid-cell {
  position: absolute;
  border: 1px solid #1a1a1a;
}

.snake-segment {
  position: absolute;
  border: 1px solid rgba(0,100,0,0.3);
  box-sizing: border-box;
}

.food {
  position: absolute;
  box-shadow: 0 0 5px #ff0000;
  animation: pulse 0.5s infinite alternate;
}

@keyframes pulse {
  from { transform: scale(0.8); }
  to { transform: scale(1.2); }
}

/* 游戏结束遮罩 */
.game-over-overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.game-over-dialog {
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  padding: 20px;
  text-align: center;
}

.dialog-title {
  font-size: 18px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 10px;
}

.final-score {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}

.high-score-display {
  font-size: 14px;
  color: #ff6600;
  margin-bottom: 15px;
}

.restart-btn {
  margin-bottom: 10px;
}

/* 控制按钮 */
.game-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  margin-top: 10px;
}

.control-row {
  display: flex;
  gap: 8px;
}

.control-btn {
  width: 50px;
  height: 50px;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  font-size: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}
