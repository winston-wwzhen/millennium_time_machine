/* 全局样式 */
page {
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
  height: 100vh;
  overflow: hidden;
}

/* 难度选择界面 */
.container {
  padding: 40rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.difficulty-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 0 20rpx rgba(135, 206, 235, 0.8);
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #87ceeb;
  display: block;
}

.difficulty-cards {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  width: 100%;
  max-width: 600rpx;
}

.difficulty-card {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(135, 206, 235, 0.3);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.difficulty-card::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  background: linear-gradient(45deg, transparent, rgba(135, 206, 235, 0.5), transparent);
  border-radius: 20rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.difficulty-card:active::before {
  opacity: 1;
}

.beginner {
  background: linear-gradient(135deg, rgba(135, 206, 235, 0.2), rgba(255, 255, 255, 0.1));
}

.intermediate {
  background: linear-gradient(135deg, rgba(255, 165, 0, 0.2), rgba(255, 255, 255, 0.1));
}

.expert {
  background: linear-gradient(135deg, rgba(255, 69, 0, 0.2), rgba(255, 255, 255, 0.1));
}

.card-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.card-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.card-size {
  font-size: 28rpx;
  color: #87ceeb;
  margin-bottom: 5rpx;
}

.card-danger {
  font-size: 28rpx;
  color: #ff6b6b;
  margin-bottom: 20rpx;
}

.card-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

.card-record {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #ffd700;
  font-weight: bold;
}

.back-button {
  position: absolute;
  bottom: 60rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  border: 2rpx solid rgba(135, 206, 235, 0.5);
}

.back-icon {
  font-size: 36rpx;
  color: #87ceeb;
}

.back-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* 游戏界面 */
.game-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.status-bar {
  display: flex;
  justify-content: space-between;
  width: 100%;
  max-width: 680rpx;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.status-item {
  flex: 1;
  background: rgba(0, 0, 0, 0.6);
  border: 2rpx solid #87ceeb;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  box-shadow: inset 0 2rpx 5rpx rgba(0, 0, 0, 0.5);
}

.status-icon {
  font-size: 32rpx;
}

.status-label {
  font-size: 24rpx;
  color: #87ceeb;
}

.status-value {
  font-size: 32rpx;
  color: #00ff00;
  font-weight: bold;
  text-shadow: 0 0 10rpx #00ff00;
}

/* 游戏棋盘 */
.game-board {
  display: grid;
  gap: 2rpx;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 10rpx;
  position: relative;
}

.cell {
  background: #2a2a2a;
  border: 2rpx solid #444;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.cell:active {
  transform: scale(0.95);
}

.cell.revealed {
  background: #1a1a1a;
  border-color: #333;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.cell.blackhole {
  background: #000;
  animation: blackhole-pulse 1s ease infinite;
}

.cell.marked {
  background: rgba(135, 206, 235, 0.2);
  border-color: #87ceeb;
}

.cell-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.revealed-content {
  font-weight: bold;
}

.mark-icon {
  font-size: 28rpx;
  animation: mark-bounce 0.5s ease;
}

.blackhole-icon {
  font-size: 32rpx;
  animation: blackhole-spin 2s linear infinite;
}

/* 数字颜色 */
.number-1 { color: #0000ff; }
.number-2 { color: #008000; }
.number-3 { color: #ff0000; }
.number-4 { color: #000080; }
.number-5 { color: #800000; }
.number-6 { color: #008080; }
.number-7 { color: #000000; }
.number-8 { color: #808080; }

/* 星星粒子 */
.star-particle {
  width: 10rpx;
  height: 10rpx;
  background: #fff;
  border-radius: 50%;
  animation: star-twinkle 0.6s ease;
  box-shadow: 0 0 10rpx #fff;
}

/* 动画 */
@keyframes star-twinkle {
  0% {
    transform: scale(0) rotate(0deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.5) rotate(180deg);
    opacity: 1;
  }
  100% {
    transform: scale(0) rotate(360deg);
    opacity: 0;
  }
}

@keyframes mark-bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

@keyframes blackhole-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes blackhole-pulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.7);
  }
  50% {
    box-shadow: 0 0 0 20rpx rgba(255, 0, 0, 0);
  }
}

/* 震动动画 */
.shake {
  animation: shake 0.5s ease;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-10rpx); }
  20%, 40%, 60%, 80% { transform: translateX(10rpx); }
}

/* 黑洞吞噬动画 */
.blackhole-animation {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, transparent 30%, rgba(0, 0, 0, 0.8) 70%);
  animation: blackhole-swallow 1s ease-out forwards;
  pointer-events: none;
}

@keyframes blackhole-swallow {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(2);
    opacity: 0;
  }
}

/* 游戏消息 */
.game-message {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.9);
  border: 3rpx solid #87ceeb;
  border-radius: 20rpx;
  padding: 60rpx 80rpx;
  text-align: center;
  z-index: 10;
}

.message-emoji {
  font-size: 100rpx;
  display: block;
  margin-bottom: 20rpx;
}

.message-text {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.message-time {
  font-size: 28rpx;
  color: #87ceeb;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.control-btn {
  background: rgba(135, 206, 235, 0.2);
  border: 2rpx solid #87ceeb;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
}

.control-btn:active {
  background: rgba(135, 206, 235, 0.4);
}

/* 动画层 */
.animation-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 100;
}

.star {
  position: absolute;
  font-size: 40rpx;
  animation: star-fall 3s ease-in forwards;
}

@keyframes star-fall {
  0% {
    transform: translateY(-100rpx) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(720deg);
    opacity: 0;
  }
}