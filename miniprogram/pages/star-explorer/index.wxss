/* miniprogram/pages/star-explorer/index.wxss */

/* 全局复古重置 */
page {
  background-color: #008080;
  font-family: "SimSun", "Songti SC", serif;
  height: 100vh;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.win98-desktop {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 窗口容器 */
.window-container {
  background-color: #C0C0C0;
  border-top: 2rpx solid #DFDFDF;
  border-left: 2rpx solid #DFDFDF;
  border-right: 2rpx solid #000000;
  border-bottom: 2rpx solid #000000;
  box-shadow: 2rpx 2rpx 0 #000000;
  padding: 4rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 10;
}

/* 遮罩层 */
.menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 80;
  background: transparent;
}

/* 标题栏 */
.title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  padding: 4rpx 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 90;
}

.title-text {
  color: white;
  font-weight: bold;
  font-size: 28rpx;
  letter-spacing: 2rpx; /* 增加字间距，更有复古感 */
}

.title-controls {
  display: flex;
  gap: 4rpx;
}

.control-box {
  width: 32rpx;
  height: 32rpx;
  background: #C0C0C0;
  border-top: 2rpx solid #FFF;
  border-left: 2rpx solid #FFF;
  border-right: 2rpx solid #000;
  border-bottom: 2rpx solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1;
}

.control-box:active {
  border-top: 2rpx solid #000;
  border-left: 2rpx solid #000;
  border-right: 2rpx solid #FFF;
  border-bottom: 2rpx solid #FFF;
}

/* ================== 菜单栏样式 ================== */

.menu-bar {
  display: flex;
  background: #C0C0C0;
  padding: 2rpx 0;
  margin-bottom: 4rpx;
  position: relative;
  z-index: 100;
}

.menu-item {
  padding: 4rpx 16rpx;
  position: relative;
}

.menu-item.active {
  background: #000080;
}

.menu-item.active .menu-text {
  color: #FFF;
}

.menu-text {
  font-size: 28rpx;
  color: #000;
}

.menu-item:active {
  background: #000080;
}
.menu-item:active .menu-text {
  color: #FFF;
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  background: #C0C0C0;
  min-width: 280rpx; /* 稍微宽一点容纳火星文 */
  z-index: 101;
  padding: 4rpx;
  box-shadow: 4rpx 4rpx 0 #000;
}

.menu-option {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}

.menu-option:active {
  background: #000080;
}

.menu-option:active .option-text,
.menu-option:active .check-mark {
  color: #FFF;
}

.check-mark {
  width: 30rpx;
  font-size: 24rpx;
  color: #000;
  margin-right: 10rpx;
}

.option-text {
  font-size: 26rpx;
  color: #000;
}

.menu-separator {
  height: 2rpx;
  border-top: 1rpx solid #808080;
  border-bottom: 1rpx solid #FFF;
  margin: 6rpx 4rpx;
}

/* ================== 游戏主体样式 ================== */

.game-window {
  width: 95vw;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.game-body {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
  padding: 12rpx;
  background: #C0C0C0;
  box-sizing: border-box;
  border-top: 2rpx solid #FFF; 
  border-left: 2rpx solid #FFF;
  position: relative;
  z-index: 1;
}

/* 状态栏 */
.status-panel {
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 16rpx;
  margin-bottom: 12rpx;
  background: #C0C0C0;
}

.led-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.led-label {
  font-size: 20rpx;
  color: #555;
  margin-bottom: 2rpx;
}

.led-counter {
  background: #000;
  color: #FF00FF; /* 改为非主流粉紫色 */
  font-family: monospace;
  font-size: 40rpx;
  padding: 0 4rpx;
  border-top: 2rpx solid #808080;
  border-left: 2rpx solid #808080;
  border-right: 2rpx solid #FFF;
  border-bottom: 2rpx solid #FFF;
  font-weight: bold;
  letter-spacing: 2rpx;
  min-width: 70rpx;
  text-align: right;
  text-shadow: 0 0 4rpx #FF00FF; /* 增加一点霓虹光晕 */
}

.face-btn {
  width: 70rpx; /* 稍微宽一点容纳颜文字 */
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx; /* 颜文字小一点 */
  background: #C0C0C0;
  font-weight: bold;
}

/* 滚动容器 */
.board-scroll-container {
  flex: 1;
  width: 100%;
  background: #C0C0C0;
  position: relative;
  border-top: 4rpx solid #808080;
  border-left: 4rpx solid #808080;
  border-right: 4rpx solid #FFF;
  border-bottom: 4rpx solid #FFF;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 3D 效果工具类 */
.bevel-inset {
  border-top: 2rpx solid #808080;
  border-left: 2rpx solid #808080;
  border-right: 2rpx solid #FFF;
  border-bottom: 2rpx solid #FFF;
}

.bevel-outset {
  border-top: 2rpx solid #FFF;
  border-left: 2rpx solid #FFF;
  border-right: 2rpx solid #000;
  border-bottom: 2rpx solid #000;
  background: #C0C0C0;
}

/* 棋盘 Grid */
.game-board {
  display: grid;
  padding: 0;
  gap: 0;
  margin: auto;
}

.cell {
  background: #C0C0C0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.unrevealed {
  border-top: 3rpx solid #FFF;
  border-left: 3rpx solid #FFF;
  border-right: 3rpx solid #808080;
  border-bottom: 3rpx solid #808080;
}

.revealed {
  border: 1rpx solid #808080;
  background: #C0C0C0;
}

.icon {
  font-size: 24rpx;
}

.icon-mine {
  animation: beat 1s infinite;
}

@keyframes beat {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

/* 数字颜色 - 非主流配色 */
.number-1 { color: #0000FF; } /* 深蓝 */
.number-2 { color: #800080; } /* 紫色 */
.number-3 { color: #FF0000; } /* 鲜红 */
.number-4 { color: #008080; } /* 青色 */
.number-5 { color: #800000; } /* 枣红 */
.number-6 { color: #FF00FF; } /* 亮粉 */
.number-7 { color: #000000; } /* 黑 */
.number-8 { color: #808080; } /* 灰 */

/* 底部语录 */
.emo-footer {
  margin-top: 8rpx;
  text-align: center;
  padding: 4rpx;
  border: 2rpx solid #808080;
  background: #000; /* 黑底 */
}

.emo-text {
  font-size: 24rpx;
  color: #00FF00; /* 绿字 */
  font-family: monospace;
}