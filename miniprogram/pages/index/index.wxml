<view class="desktop {{showBlueScreen ? 'blue-screen' : ''}} {{isRefreshing ? 'refreshing' : ''}}" style="background-color: {{desktopBackgrounds[desktopBgIndex]}};" bindlongpress="onDesktopLongPress" bindtap="onDesktopTap" catchtap="onDesktopTap">
  <!-- 蓝屏彩蛋覆盖层 -->
  <view class="blue-screen-overlay" wx:if="{{showBlueScreen}}">
    <view class="bsod-content">
      <text class="bsod-title">Windows</text>
      <text class="bsod-text">出现了一个致命错误</text>
      <text class="bsod-text">按 Ctrl+Alt+Del 重启</text>
      <text class="bsod-code">0x000000ED: UNMOUNTABLE_BOOT_VOLUME</text>
      <text class="bsod-hint">那个年代的噩梦...彩蛋发现！</text>
    </view>
  </view>

  <!-- 网管系统插件 - 右上角面板 -->
  <view class="network-plugin-panel" wx:if="{{showNetworkPlugin}}">
    <view class="plugin-title-bar">
      <text class="plugin-title-text">💰 余额</text>
      <text class="plugin-close-btn" bindtap="onCloseNetworkPlugin">×</text>
    </view>
    <view class="plugin-body" bindtap="onNetworkPluginTap">
      <view class="plugin-row">
        <text class="plugin-row-icon">🌐</text>
        <view class="plugin-row-info">
          <text class="plugin-row-label">网费</text>
          <text class="plugin-row-value">{{userNetFee}}分钟</text>
        </view>
      </view>
      <view class="plugin-row">
        <text class="plugin-row-icon">💎</text>
        <view class="plugin-row-info">
          <text class="plugin-row-label">时光币</text>
          <text class="plugin-row-value">{{userCoins}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 桌面图标区域 - 自动换列布局 -->
  <view class="icon-grid" catchtap="onIconGridTap">
    <block wx:for="{{desktopIcons}}" wx:key="id">
      <view class="desktop-icon" id="{{item.id}}" bindtap="onIconTap" data-path="{{item.path}}">
        <view class="icon-img" wx:if="{{item.isImage}}">
          <!-- 使用懒加载 + 加载中占位符 -->
          <image
            src="{{item.icon}}"
            style="width: 70rpx; height: 70rpx;"
            mode="aspectFit"
            lazy-load="{{true}}"
            show-menu-by-longpress="{{false}}"
            bindload="onIconLoad"
            binderror="onIconError"
          ></image>
        </view>
        <view class="icon-img" wx:else>{{item.icon}}</view>
        <text class="icon-label">{{item.name}}</text>
      </view>
    </block>
    <!-- 隐藏图标彩蛋 -->
    <view class="desktop-icon hidden-icon" wx:if="{{showHiddenIcon}}" bindtap="onHiddenIconTap">
      <view class="icon-img">🎮</view>
      <text class="icon-label">???</text>
    </view>
  </view>

  <!-- 桌面右下角隐藏区域 - 点击触发隐藏图标 -->
  <view class="hidden-trigger" bindtap="toggleHiddenIcon"></view>

  <!-- 桌面助手：小狮子 (Office Assistant 风格) -->
  <view class="desktop-agent {{isDragging ? 'dragging' : ''}} {{isMidnightEgg ? 'midnight-glow' : ''}}" style="transform: translate({{agentTranslateX}}px, {{agentTranslateY}}px);"
        catchtouchstart="onAgentDragStart" catchtouchmove="onAgentDragMove" catchtouchend="onAgentDragEnd">
    <view class="agent-bubble {{showMessage ? 'show' : ''}}" wx:if="{{showMessage}}">
      <text>{{agentMessage}}</text>
    </view>
    <view class="agent-body agent-{{agentMood}}">
      <image src="{{cloudIconUrls.lion}}" style="width: 100%; height: 100%;" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 任务栏 -->
  <view class="taskbar" bindtap="onTaskbarTap">
    <view class="start-button {{showStartMenu ? 'active' : ''}}" bindtap="toggleStartMenu" catchtap="toggleStartMenu">
      <image class="win-logo" src="../../images/borders/border_win98.png" mode="aspectFit"></image>
      <text>Start</text>
    </view>

    <view class="taskbar-divider"></view>

    <view class="task-items">
      <!-- 运行中的任务 -->
    </view>

    <!-- 隐蔽的作者签名 - 任务栏中央 -->
    <view class="author-signature">winston</view>

    <view class="system-tray">
      <view class="network-wrapper">
        <view class="tray-icon network-icon {{networkConnected ? 'online' : 'offline'}}" bindtap="onNetworkIconTap">
          {{networkConnected ? '🌐' : '❌'}}
        </view>
        <!-- 网络信息气泡 -->
        <view class="network-bubble {{showNetworkInfo ? 'show' : ''}}" wx:if="{{showNetworkInfo}}">
          <text class="network-status-text">{{networkConnected ? '33.6K 拨号连接' : '网络未连接'}}</text>
          <text class="network-speed-text" wx:if="{{networkConnected}}">网费: {{userNetFee}} 分钟</text>
          <text class="network-speed-text" wx:if="{{networkConnected}}">速度: 3-5 KB/s</text>
        </view>
      </view>
      <view class="volume-wrapper">
        <view class="tray-icon volume-icon" bindtap="onVolumeIconTap">
          {{soundEnabled ? '🔊' : '🔇'}}
        </view>
        <!-- 音量状态气泡 -->
        <view class="volume-bubble {{showVolumeInfo ? 'show' : ''}}" wx:if="{{showVolumeInfo}}">
          <text class="volume-status-text">{{soundEnabled ? '音量已开启' : '静音模式'}}</text>
        </view>
      </view>
      <view class="tray-icon qcio-icon" bindtap="onQcioIconTap">
        <image src="{{cloudIconUrls.qcio}}" style="width: 28rpx; height: 28rpx;" mode="aspectFit"></image>
      </view>
      <view class="system-time" bindtap="onTimeTap">{{systemTime}}</view>
    </view>
  </view>

  <!-- 开始菜单遮罩 (点击关闭) -->
  <view class="start-menu-mask" wx:if="{{showStartMenu}}" catchtap="toggleStartMenu"></view>

  <!-- 开始菜单 (弹出层) -->
  <view class="start-menu" wx:if="{{showStartMenu}}">
    <!-- 用户横幅 -->
    <view class="user-banner" bindtap="onUserBannerTap">
      <view class="user-avatar">{{userInfo.avatar}}</view>
      <view class="user-info">
        <text class="user-name">{{userInfo.nickname}}</text>
        <text class="user-status">在线</text>
      </view>
    </view>
    <!-- 菜单项 -->
    <view class="menu-items">
      <view class="menu-item submenu {{showSubmenu ? 'selected' : ''}}" catchtap="toggleSubmenu">
        <text class="menu-icon">🎮</text>
        <text class="menu-text">程序</text>
        <text class="submenu-arrow {{showSubmenu ? 'expanded' : ''}}">{{showSubmenu ? '▾' : '▸'}}</text>
      </view>
      <view class="menu-item" catchtap="openCmdConsole">
        <text class="menu-icon">💻</text>
        <text class="menu-text">命令提示符</text>
      </view>
      <view class="menu-item" bindtap="onIconTap" data-path="/pages/my-documents/index">
        <text class="menu-icon">📂</text>
        <text class="menu-text">我的文档</text>
      </view>
      <view class="menu-item" bindtap="onIconTap" data-path="/pages/my-computer/index">
        <text class="menu-icon">💻</text>
        <text class="menu-text">我的电脑</text>
      </view>
      <view class="menu-item" bindtap="onIconTap" data-path="/pages/about/index">
        <text class="menu-icon">⚙️</text>
        <text class="menu-text">设置</text>
      </view>
      <view class="menu-item" bindtap="showAbout">
        <text class="menu-icon">❓</text>
        <text class="menu-text">帮助</text>
      </view>
      <view class="menu-line"></view>
      <view class="menu-item shutdown-item" bindtap="onShutdown">
        <text class="menu-icon">🔌</text>
        <text class="menu-text">关机...</text>
      </view>
    </view>
  </view>

  <!-- 程序子菜单 (独立弹出层) -->
  <view class="submenu-popup {{showSubmenu ? 'show' : ''}}" catchtap="stopPropagation">
    <view class="submenu-item" catchtap="onIconTap" data-path="/pages/mars/index">
      <text class="submenu-icon">🪐</text>
      <text class="submenu-text">火星文转换器</text>
    </view>
    <view class="submenu-item" catchtap="onIconTap" data-path="/pages/translator/index">
      <text class="submenu-icon">💔</text>
      <text class="submenu-text">忧伤合成器</text>
    </view>
    <view class="submenu-item" catchtap="onIconTap" data-path="/pages/star-explorer/index">
      <text class="submenu-icon">💣</text>
      <text class="submenu-text">葬爱心碎</text>
    </view>
    <view class="submenu-item" catchtap="onIconTap" data-path="/pages/avatar/index">
      <text class="submenu-icon">📸</text>
      <text class="submenu-text">非主流相机</text>
    </view>
  </view>

  <!-- 右键菜单遮罩 (点击外部关闭) -->
  <view class="context-menu-mask" wx:if="{{showContextMenu}}" catchtap="hideContextMenu"></view>

  <!-- 右键菜单 (弹出层) -->
  <view class="context-menu" wx:if="{{showContextMenu}}" style="left: {{contextMenuX}}px; top: {{contextMenuY}}px;">
    <view class="context-menu-item" bindtap="refreshDesktop">
      <text class="context-icon">🔄</text> 刷新(E)
    </view>
    <view class="menu-line"></view>
    <view class="context-menu-item" bindtap="showSystemInfo">
      <text class="context-icon">📊</text> 系统信息(I)
    </view>
    <view class="context-menu-item" bindtap="openNetworkSystem">
      <text class="context-icon">⚙️</text> 网管系统(N)
    </view>
    <view class="context-menu-item" bindtap="showAgentSettings">
      <text class="context-icon">🦁</text> 助手设置(A)
    </view>
    <view class="context-menu-item" bindtap="showAbout">
      <text class="context-icon">📱</text> 关于(A)
    </view>
  </view>

  <!-- Win98 错误弹窗 -->
  <view class="win98-overlay" wx:if="{{showErrorDialog}}" bindtap="hideErrorDialog" catchlongtap="stopPropagation">
    <view class="win98-window error-dialog" catchtap="stopPropagation">
      <view class="win98-title-bar">
        <view class="win98-title-text">⚠️ 错误</view>
        <view class="win98-title-controls">
          <button class="win98-btn-close" bindtap="hideErrorDialog">×</button>
        </view>
      </view>
      <view class="win98-window-body">
        <view class="error-dialog-content">
          <view class="error-icon">❌</view>
          <view class="error-messages">
            <text class="error-title">文件已损坏</text>
            <text class="error-text">无法打开该程序。</text>
            <text class="error-text">请尝试重新安装。</text>
            <text class="error-code">错误代码: 0x80070002</text>
          </view>
        </view>
        <view class="dialog-actions">
          <button class="win98-btn-std" bindtap="hideErrorDialog">确定</button>
        </view>
      </view>
    </view>
  </view>

  <!-- 版本过低弹窗（十分动听/慢播未升级） -->
  <view class="win98-overlay" wx:if="{{showVersionTooLowDialog}}" bindtap="hideVersionTooLowDialog" catchlongtap="stopPropagation">
    <view class="win98-window version-low-dialog" catchtap="stopPropagation">
      <view class="win98-title-bar">
        <view class="win98-title-text">⚠️ 版本过低</view>
        <view class="win98-title-controls">
          <button class="win98-btn-close" bindtap="hideVersionTooLowDialog">×</button>
        </view>
      </view>
      <view class="win98-window-body">
        <view class="error-dialog-content">
          <view class="error-icon">⚠️</view>
          <view class="error-messages">
            <text class="error-title">程序版本过低</text>
            <text class="error-text">{{versionLowProgramName}}需要先升级才能运行。</text>
            <text class="error-text">请进入"我的电脑" → "D:\Downloads"</text>
            <text class="error-text">运行对应版本的安装程序。</text>
            <text class="error-code">错误代码: 0x80070005</text>
          </view>
        </view>
        <view class="dialog-actions">
          <button class="win98-btn-std" bindtap="hideVersionTooLowDialog">确定</button>
        </view>
      </view>
    </view>
  </view>

  <!-- 日期弹窗遮罩 (点击外部关闭) -->
  <view class="start-menu-mask" wx:if="{{showDateDialog}}" catchtap="hideDateDialog"></view>

  <!-- 日期弹窗 - Windows风格右下角弹出 -->
  <view class="date-dialog" wx:if="{{showDateDialog}}" catchtap="stopPropagation">
    <view class="date-dialog-content">
      <!-- 日历头部：年月 -->
      <view class="calendar-header">
        <text class="calendar-year">{{calendarYear}}</text>
        <text class="calendar-title">年</text>
        <text class="calendar-month">{{calendarMonth}}</text>
        <text class="calendar-title">月</text>
      </view>

      <!-- 星期标题行 -->
      <view class="weekday-header">
        <text class="weekday-title">日</text>
        <text class="weekday-title">一</text>
        <text class="weekday-title">二</text>
        <text class="weekday-title">三</text>
        <text class="weekday-title">四</text>
        <text class="weekday-title">五</text>
        <text class="weekday-title">六</text>
      </view>

      <!-- 日历网格 -->
      <view class="calendar-grid">
        <block wx:for="{{calendarDays}}" wx:key="index">
          <view class="calendar-day-cell {{item.isToday ? 'today' : ''}}" wx:if="{{item.day !== 0}}">
            {{item.day}}
          </view>
          <view class="calendar-day-cell" wx:else></view>
        </block>
      </view>

      <!-- 日期信息 -->
      <view class="date-info">
        <view class="info-row">
          <text class="info-label">当前:</text>
          <text class="info-value">{{fullDateTime}}</text>
        </view>
        <view class="info-row">
          <text class="info-label">农历:</text>
          <text class="info-value">{{lunarDate}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 用户编辑弹窗遮罩 -->
  <view class="start-menu-mask" wx:if="{{showUserEditDialog}}" catchtap="closeUserEditDialog"></view>

  <!-- 用户编辑弹窗 -->
  <view class="user-edit-dialog" wx:if="{{showUserEditDialog}}" catchtap="stopPropagation">
    <view class="win98-title-bar">
      <view class="win98-title-text">👤 编辑用户信息</view>
      <view class="win98-title-controls">
        <button class="win98-btn-close" bindtap="closeUserEditDialog">×</button>
      </view>
    </view>
    <view class="win98-window-body">
      <view class="user-edit-content">
        <!-- 头像选择 -->
        <view class="edit-section">
          <text class="edit-label">选择头像：</text>
          <view class="avatar-grid">
            <view
              class="avatar-choice {{editAvatar === item ? 'selected' : ''}}"
              wx:for="{{avatarList}}"
              wx:key="index"
              bindtap="selectAvatar"
              data-avatar="{{item}}"
            >
              {{item}}
            </view>
          </view>
        </view>

        <!-- 昵称输入 -->
        <view class="edit-section">
          <text class="edit-label">修改昵称：</text>
          <input
            class="win98-input nickname-input"
            value="{{editNickname}}"
            bindinput="onNicknameInput"
            maxlength="12"
            placeholder="请输入昵称（最多12字）"
          />
        </view>
      </view>

      <view class="dialog-actions">
        <button class="win98-btn-std" bindtap="saveUserInfo">确定</button>
        <button class="win98-btn-std" bindtap="closeUserEditDialog">取消</button>
      </view>
    </view>
  </view>

  <!-- 系统信息弹窗遮罩 -->
  <view class="win98-overlay" wx:if="{{showSystemInfoDialog}}" bindtap="hideSystemInfoDialog" catchlongtap="stopPropagation">
    <view class="win98-window system-info-dialog" catchtap="stopPropagation">
      <view class="win98-title-bar">
        <view class="win98-title-text">📊 系统信息</view>
        <view class="win98-title-controls">
          <button class="win98-btn-close" bindtap="hideSystemInfoDialog">×</button>
        </view>
      </view>
      <view class="win98-window-body">
        <view class="system-info-content">
          <text class="info-title">千禧时光机 v1.0</text>
          <view class="info-list">
            <view class="info-item">
              <text class="info-label">操作系统:</text>
              <text class="info-value">{{systemInfoData.os}}</text>
            </view>
            <view class="info-item">
              <text class="info-label">处理器:</text>
              <text class="info-value">{{systemInfoData.cpu}}</text>
            </view>
            <view class="info-item">
              <text class="info-label">内存:</text>
              <text class="info-value">{{systemInfoData.memory}}</text>
            </view>
            <view class="info-item">
              <text class="info-label">显卡:</text>
              <text class="info-value">{{systemInfoData.gpu}}</text>
            </view>
            <view class="info-item">
              <text class="info-label">显示器:</text>
              <text class="info-value">{{systemInfoData.display}}</text>
            </view>
            <view class="info-item">
              <text class="info-label">当前时间:</text>
              <text class="info-value">{{systemInfoData.time}}</text>
            </view>
            <view class="info-item">
              <text class="info-label">网络状态:</text>
              <text class="info-value">{{systemInfoData.network}}</text>
            </view>
          </view>
        </view>
        <view class="dialog-actions">
          <button class="win98-btn-std" bindtap="hideSystemInfoDialog">确定</button>
        </view>
      </view>
    </view>
  </view>

  <!-- 助手设置弹窗遮罩 -->
  <view class="win98-overlay" wx:if="{{showAgentSettingsDialog}}" bindtap="hideAgentSettingsDialog" catchlongtap="stopPropagation">
    <view class="win98-window agent-settings-dialog" catchtap="stopPropagation">
      <view class="win98-title-bar">
        <view class="win98-title-text">🦁 助手设置</view>
        <view class="win98-title-controls">
          <button class="win98-btn-close" bindtap="hideAgentSettingsDialog">×</button>
        </view>
      </view>
      <view class="win98-window-body">
        <view class="agent-settings-content">
          <text class="settings-text">{{agentSettingsMessage}}</text>
        </view>
        <view class="dialog-actions">
          <button class="win98-btn-std" bindtap="hideAgentSettingsDialog">知道了</button>
        </view>
      </view>
    </view>
  </view>

  <!-- 关于弹窗遮罩 -->
  <view class="win98-overlay" wx:if="{{showAboutDialog}}" bindtap="hideAboutDialog" catchlongtap="stopPropagation">
    <view class="win98-window about-dialog" catchtap="stopPropagation">
      <view class="win98-title-bar">
        <view class="win98-title-text">❓ 千禧时光机 - 帮助</view>
        <view class="win98-title-controls">
          <button class="win98-btn-close" bindtap="hideAboutDialog">×</button>
        </view>
      </view>
      <view class="win98-window-body">
        <scroll-view class="about-content" scroll-y>
          <text class="about-title">千禧时光机 v1.0</text>
          <text class="about-text">一款怀旧风格的微信小程序，带你回到2006年的那个年代。</text>

          <view class="about-section">
            <text class="about-section-title">🖥️ 桌面功能</text>
            <view class="about-features">
              <text class="about-feature">• 双击桌面图标打开程序</text>
              <text class="about-feature">• 右键点击桌面打开菜单（刷新、系统信息等）</text>
              <text class="about-feature">• 拖动小狮子助手到任意位置</text>
              <text class="about-feature">• 点击/长按小狮子触发彩蛋</text>
              <text class="about-feature">• 点击任务栏时间查看日历</text>
            </view>
          </view>

          <view class="about-section">
            <text class="about-section-title">📟 QCIO 社交系统</text>
            <view class="about-features">
              <text class="about-feature">• AI好友随机分配</text>
              <text class="about-feature">• 空间访问、留言、心情日志</text>
              <text class="about-feature">• 等级系统和成长值</text>
              <text class="about-feature">• 每日签到和等级奖励</text>
            </view>
          </view>

          <view class="about-section">
            <text class="about-section-title">💰 双代币系统</text>
            <view class="about-features">
              <text class="about-feature">• 💎 时光币：发现彩蛋获得</text>
              <text class="about-feature">• 🌐 网费：AI功能消耗</text>
              <text class="about-feature">• 在网管系统兑换网费</text>
            </view>
          </view>

          <view class="about-section">
            <text class="about-section-title">🎮 游戏功能</text>
            <view class="about-features">
              <text class="about-feature">• 火星文翻译器</text>
              <text class="about-feature">• 非主流相机</text>
              <text class="about-feature">• 农场系统（种植收获）</text>
            </view>
          </view>

          <view class="about-section">
            <text class="about-section-title">🥚 彩蛋收集</text>
            <view class="about-features">
              <text class="about-feature">• 大量隐藏彩蛋等你发现</text>
              <text class="about-feature">• 在"我的文档"中查看彩蛋大全</text>
              <text class="about-feature">• 显示隐藏文件查看彩蛋秘籍</text>
            </view>
          </view>

          <view class="about-section">
            <text class="about-section-title">⚙️ 其他功能</text>
            <view class="about-features">
              <text class="about-feature">• 我的电脑：浏览虚拟文件</text>
              <text class="about-feature">• 我的文档：彩蛋秘籍</text>
              <text class="about-feature">• 网管系统：代币管理</text>
              <text class="about-feature">• 设置：蓝屏彩蛋</text>
            </view>
          </view>
        </scroll-view>
        <view class="dialog-actions">
          <button class="win98-btn-std" bindtap="hideAboutDialog">确定</button>
        </view>
      </view>
    </view>
  </view>

  <!-- 彩蛋发现弹窗 - 使用通用组件 -->
  <egg-discovery-dialog
    show="{{showEggDiscoveryDialog}}"
    eggName="{{eggDiscoveryData.name}}"
    eggDescription="{{eggDiscoveryData.description}}"
    eggRarity="{{eggDiscoveryData.rarity}}"
    eggRarityName="{{eggDiscoveryData.rarityName}}"
