/* miniprogram/pages/index/index.wxss */

/* 经典 Windows 98 桌面背景色 */
page {
  height: 100vh;
  background-color: #008080;
  font-family: 'Courier New', Courier, monospace;
  overflow: hidden;
  box-sizing: border-box;
  /* 为微信导航栏预留空间 */
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.desktop {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* 图标网格 - 纵向填充，自动换列（Windows 桌面风格） */
.icon-grid {
  flex: 1;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: flex-start;
  padding: 20rpx;
  padding-top: 180rpx;
  gap: 20rpx;
  overflow-y: auto;
}

.desktop-icon {
  width: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.desktop-icon:active .icon-img {
  filter: brightness(0.8);
  transform: translate(1px, 1px); /* 点击下沉效果 */
}
.desktop-icon:active .icon-label {
  background-color: #000080;
  color: #fff;
  border: 1px dotted #fff;
}

.icon-img {
  font-size: 70rpx;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.3));
}

.icon-label {
  color: white;
  font-size: 22rpx;
  text-align: center;
  text-shadow: 2px 2px 0 #000, 0 0 4px rgba(0,0,0,0.8);
  line-height: 1.3;
  padding: 4rpx 8rpx;
  font-weight: 500;
}

/* 桌面助手 (小狮子) - 新增样式 */
.desktop-agent {
  position: absolute;
  right: 30rpx;
  bottom: 100rpx;
  z-index: 50;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* transform 由 JS 动态控制 */
  will-change: transform;
  touch-action: none; /* 阻止默认触摸行为 */
}

.desktop-agent.dragging {
  animation: none;
}

.agent-body {
  font-size: 80rpx;
  filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.3));
  transition: transform 0.3s ease;
}

/* 小狮子的不同心情状态 */
.agent-body.agent-happy {
  animation: bounce 0.5s ease;
}

.agent-body.agent-sleepy {
  animation: sleepy 2s ease-in-out infinite;
  filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.3)) grayscale(0.3);
}

.agent-body.agent-surprised {
  animation: surprise 0.3s ease;
}

.agent-body.agent-normal {
  animation: float 3s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2) rotate(-10deg); }
}

@keyframes sleepy {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

@keyframes surprise {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

.agent-bubble {
  background: #ffffe0;
  border: 1px solid #000;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  margin-bottom: 6rpx;
  position: relative;
  box-shadow: 2px 2px 0 rgba(0,0,0,0.2);
  white-space: nowrap;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.3s ease;
}

.agent-bubble.show {
  opacity: 1;
  transform: scale(1);
}

/* 气泡的小箭头 */
.agent-bubble::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  border-width: 8rpx 8rpx 0;
  border-style: solid;
  border-color: #000 transparent transparent transparent;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* 任务栏 */
.taskbar {
  /* 适配底部安全区 */
  height: calc(80rpx + env(safe-area-inset-bottom));
  padding-bottom: env(safe-area-inset-bottom);

  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  display: flex;
  align-items: center;
  padding-left: 6rpx;
  padding-right: 6rpx;
  box-sizing: border-box;
  z-index: 100;
  position: relative;
  box-shadow: 0 -2px 5px rgba(0,0,0,0.2);
}

.start-button {
  display: flex;
  align-items: center;
  padding: 4rpx 12rpx;
  background-color: #c0c0c0;
  border: 2px outset #fff;
  font-weight: bold;
  font-size: 28rpx;
  margin-right: 12rpx;
  height: 52rpx;
  box-shadow: 1px 1px 0 #000;
  position: relative;
  z-index: 1;
}

.start-button:active, .start-button.active {
  border: 2px inset #fff;
  background-color: #d0d0d0;
  box-shadow: none;
  transform: translate(1px, 1px);
}

.win-logo {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.taskbar-divider {
  width: 2px;
  height: 50rpx;
  border-left: 1px solid #808080;
  border-right: 1px solid #fff;
  margin: 0 10rpx;
}

.task-items {
  flex: 1;
}

.system-tray {
  border: 2px inset #fff;
  padding: 0 14rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
  background: #c0c0c0;
  box-shadow: inset 1px 1px 0 #000;
}

/* 开始菜单 - 样式优化 */
.start-menu {
  position: absolute;
  bottom: calc(82rpx + env(safe-area-inset-bottom));
  left: 6rpx;
  width: 400rpx;
  background-color: #c0c0c0;
  border: 2px outset #fff;
  display: flex;
  z-index: 9999;
  box-shadow: 6px 6px 0 rgba(0,0,0,0.5);
  animation: slideUp 0.15s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(10rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.sidebar {
  width: 70rpx;
  background: linear-gradient(180deg, #000080 0%, #1084d0 15%, #000080 100%);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
}

.os-version {
  color: white;
  transform: rotate(-90deg);
  white-space: nowrap;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.5);
}

.menu-items {
  flex: 1;
  padding: 4rpx;
  display: flex;
  flex-direction: column;
}

.menu-item {
  padding: 18rpx 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  color: #000;
  margin-bottom: 2rpx;
  font-weight: 500;
}

.menu-item:active {
  background-color: #000080;
  color: white;
}

.menu-icon {
  width: 50rpx;
  text-align: center;
  margin-right: 16rpx;
  font-size: 36rpx;
}

.menu-line {
  border-top: 1px solid #808080;
  border-bottom: 1px solid #fff;
  margin: 10rpx 4rpx;
  height: 0;
}

/* 右键菜单 */
.context-menu {
  position: fixed;
  background: #c0c0c0;
  border: 2px outset #fff;
  box-shadow: 4px 4px 0 rgba(0,0,0,0.5);
  z-index: 9998;
  min-width: 200rpx;
  padding: 2rpx;
  animation: contextFadeIn 0.15s ease-out;
}

@keyframes contextFadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.context-menu-item {
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  color: #000;
  margin-bottom: 2rpx;
  font-weight: 500;
}

.context-menu-item:active {
  background-color: #000080;
  color: white;
}

.context-icon {
  width: 40rpx;
  text-align: center;
  margin-right: 12rpx;
  font-size: 32rpx;
}