/* 全局字体与重置 */
page {
  height: 100%;
  font-family: "宋体", "SimSun", sans-serif; /* 尽量用宋体，有像素感 */
  overflow: hidden;
}

/* 1. 桌面背景：经典的 Win98 青色 */
.desktop {
  width: 100%;
  height: 100%;
  background-color: #008080; 
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 2. 主窗口：经典的凸起效果 */
.window-frame {
  width: 85%;
  background-color: #c0c0c0; /* 经典银灰 */
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 1px 1px 0px #dfdfdf inset, -1px -1px 0px #808080 inset;
  padding: 2px;
  display: flex;
  flex-direction: column;
}

/* 标题栏：深蓝渐变 */
.title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 4px;
  margin-bottom: 4px;
}

.title-text {
  color: white;
  font-weight: bold;
  font-size: 14px;
  letter-spacing: 1px;
}

.btn-close {
  width: 20px;
  height: 18px;
  background: #c0c0c0;
  border-top: 1px solid #fff;
  border-left: 1px solid #fff;
  border-right: 1px solid #000;
  border-bottom: 1px solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
  line-height: 14px;
}

/* 窗口内容 */
.window-body {
  padding: 15px;
}

.intro-text {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.intro-sub {
  font-size: 12px;
  color: #555;
  margin-bottom: 20px;
}

/* 宫格菜单 */
.grid-menu {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

/* 菜单按钮：模拟桌面图标 */
.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 15px;
  width: 80px;
}

.menu-item:active .icon-box {
  /* 点击时的按压效果 */
  filter: brightness(0.8);
}

.icon-box {
  font-size: 32px;
  margin-bottom: 5px;
}

.menu-item text {
  font-size: 12px;
  text-align: center;
  /* 模拟图标被选中时的点状边框，这里简化直接用文字 */
}

/* 状态栏 */
.status-bar {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #fff;
  border-bottom: 1px solid #fff;
  background: #c0c0c0;
  padding: 2px 5px;
  font-size: 12px;
  color: #333;
  display: flex;
  gap: 15px;
  margin-top: 10px;
}

/* 3. 底部任务栏 */
.task-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 35px;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  display: flex;
  align-items: center;
  padding: 2px;
  box-sizing: border-box;
}

.btn-start {
  display: flex;
  align-items: center;
  padding: 2px 6px;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  margin-right: 5px;
  font-weight: bold;
  font-size: 14px;
}

.win-logo {
  margin-right: 4px;
  font-size: 16px;
}

/* 任务栏里凹进去的当前任务 */
.task-item {
  flex: 1;
  background: #d4d0c8;
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  padding: 2px 8px;
  font-size: 12px;
  font-weight: bold;
  margin-right: 5px;
  /* 模拟按下状态 */
  background-image: repeating-linear-gradient(
    45deg,
    #c0c0c0 25%, 
    transparent 25%, 
    transparent 75%, 
    #c0c0c0 75%, 
    #c0c0c0
  ), 
  repeating-linear-gradient(
    45deg,
    #c0c0c0 25%, 
    #c0c0c0 25%, 
    #c0c0c0 75%, 
    #c0c0c0 75%, 
    #c0c0c0
  );
}

.task-item.active {
  background: #e0e0e0; /* 激活高亮 */
}

.time-display {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #fff;
  border-bottom: 1px solid #fff;
  padding: 2px 10px;
  font-size: 12px;
}

/* 开始菜单容器 */
.start-menu {
  position: absolute;
  bottom: 38px; /* 任务栏高度 + 间隙 */
  left: 2px;
  width: 180px;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  display: flex;
  z-index: 100;
  box-shadow: 2px 2px 5px rgba(0,0,0,0.5);
}

.start-side-bar {
  width: 25px;
  background: #000080; /* 深蓝条 */
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 5px;
}

.os-ver {
  color: #fff;
  font-weight: bold;
  transform: rotate(-90deg); /* 竖排文字效果 */
  white-space: nowrap;
  font-size: 16px;
  margin-bottom: 10px;
}

.start-list {
  flex: 1;
  padding: 2px;
}

.start-item {
  display: flex;
  align-items: center;
  padding: 8px 10px;
  font-size: 14px;
  color: #000;
}

.start-item:active {
  background: #000080;
  color: #fff;
}

.start-icon {
  margin-right: 10px;
  font-size: 16px;
  width: 20px;
  text-align: center;
}

.divider {
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #fff;
  margin: 4px 2px;
}

/* 补充：开始按钮按下的状态 */
.btn-start.active {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  background: #d4d0c8;
  padding: 3px 5px 1px 7px; /* 位移模拟 */
}

