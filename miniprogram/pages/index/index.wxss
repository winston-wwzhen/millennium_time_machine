/* miniprogram/pages/index/index.wxss */

/* 经典 Windows 98 桌面背景色 */
page {
  height: 100vh;
  background-color: #008080;
  font-family: 'Courier New', Courier, monospace;
  overflow: hidden;
  box-sizing: border-box;
  /* 为微信导航栏预留空间 */
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.desktop {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* 图标网格 - 纵向填充，自动换列（Windows 桌面风格） */
.icon-grid {
  flex: 1;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: flex-start;
  padding: 20rpx;
  padding-top: 180rpx;
  gap: 20rpx;
  overflow-y: auto;
}

.desktop-icon {
  width: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.desktop-icon:active .icon-img {
  filter: brightness(0.8);
  transform: translate(1px, 1px); /* 点击下沉效果 */
}
.desktop-icon:active .icon-label {
  background-color: #000080;
  color: #fff;
  border: 1px dotted #fff;
}

.icon-img {
  font-size: 70rpx;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.3));
}

.icon-label {
  color: white;
  font-size: 22rpx;
  text-align: center;
  text-shadow: 2px 2px 0 #000, 0 0 4px rgba(0,0,0,0.8);
  line-height: 1.3;
  padding: 4rpx 8rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 120rpx;
}

/* 桌面助手 (小狮子) - 新增样式 */
.desktop-agent {
  position: absolute;
  right: 30rpx;
  bottom: 100rpx;
  z-index: 50;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* transform 由 JS 动态控制 */
  will-change: transform;
  touch-action: none; /* 阻止默认触摸行为 */
}

.desktop-agent.dragging {
  animation: none;
}

.agent-body {
  font-size: 80rpx;
  filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.3));
  transition: transform 0.3s ease;
}

/* 小狮子的不同心情状态 */
.agent-body.agent-happy {
  animation: bounce 0.5s ease;
}

.agent-body.agent-sleepy {
  animation: sleepy 2s ease-in-out infinite;
  filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.3)) grayscale(0.3);
}

.agent-body.agent-surprised {
  animation: surprise 0.3s ease;
}

.agent-body.agent-normal {
  animation: float 3s ease-in-out infinite;
}

/* 小狮子跳舞状态 - 彩蛋 */
.agent-body.agent-dancing {
  animation: dance 0.8s ease-in-out infinite;
}

/* 小狮子午夜发光状态 - 彩蛋 */
.desktop-agent.midnight-glow .agent-body {
  filter: drop-shadow(0 0 20rpx rgba(255, 215, 0, 0.8)) drop-shadow(0 0 40rpx rgba(255, 215, 0, 0.6));
  animation: glow-pulse 2s ease-in-out infinite;
}

@keyframes glow-pulse {
  0%, 100% {
    filter: drop-shadow(0 0 20rpx rgba(255, 215, 0, 0.8)) drop-shadow(0 0 40rpx rgba(255, 215, 0, 0.6));
  }
  50% {
    filter: drop-shadow(0 0 30rpx rgba(255, 215, 0, 1)) drop-shadow(0 0 60rpx rgba(255, 215, 0, 0.8));
  }
}

@keyframes bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2) rotate(-10deg); }
}

@keyframes sleepy {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

@keyframes surprise {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

/* 跳舞动画 - 彩蛋专用 */
@keyframes dance {
  0% { transform: translateX(0) rotate(0deg); }
  25% { transform: translateX(-10rpx) rotate(-15deg) scale(1.1); }
  50% { transform: translateX(10rpx) rotate(15deg) scale(1.1); }
  75% { transform: translateX(-10rpx) rotate(-15deg) scale(1.1); }
  100% { transform: translateX(0) rotate(0deg); }
}

.agent-bubble {
  background: #ffffe0;
  border: 1px solid #000;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  margin-bottom: 6rpx;
  position: relative;
  box-shadow: 2px 2px 0 rgba(0,0,0,0.2);
  white-space: nowrap;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.3s ease;
}

.agent-bubble.show {
  opacity: 1;
  transform: scale(1);
}

/* 气泡的小箭头 */
.agent-bubble::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  border-width: 8rpx 8rpx 0;
  border-style: solid;
  border-color: #000 transparent transparent transparent;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* 任务栏 */
.taskbar {
  /* 适配底部安全区 */
  height: calc(80rpx + env(safe-area-inset-bottom));
  padding-bottom: env(safe-area-inset-bottom);

  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  display: flex;
  align-items: center;
  padding-left: 6rpx;
  padding-right: 6rpx;
  box-sizing: border-box;
  z-index: 100;
  position: relative;
  box-shadow: 0 -2px 5px rgba(0,0,0,0.2);
}

.start-button {
  display: flex;
  align-items: center;
  padding: 4rpx 12rpx;
  background-color: #c0c0c0;
  border: 2px outset #fff;
  font-weight: bold;
  font-size: 28rpx;
  margin-right: 12rpx;
  height: 52rpx;
  box-shadow: 1px 1px 0 #000;
  position: relative;
  z-index: 1;
}

.start-button:active, .start-button.active {
  border: 2px inset #fff;
  background-color: #d0d0d0;
  box-shadow: none;
  transform: translate(1px, 1px);
}

.win-logo {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.taskbar-divider {
  width: 2px;
  height: 50rpx;
  border-left: 1px solid #808080;
  border-right: 1px solid #fff;
  margin: 0 10rpx;
}

.task-items {
  flex: 1;
}

.system-tray {
  border: 2px inset #fff;
  padding: 0 14rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
  background: #c0c0c0;
  box-shadow: inset 1px 1px 0 #000;
}

.tray-icon {
  font-size: 28rpx;
  cursor: pointer;
}

/* 网络状态图标 */
.network-icon {
  transition: all 0.3s ease;
  position: relative;
}

.network-icon.online {
  filter: drop-shadow(0 0 2rpx #00ff00);
}

.network-icon.offline {
  filter: drop-shadow(0 0 2rpx #ff0000);
  animation: blink 1s ease-in-out infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

/* 网络图标容器 */
.network-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.volume-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

/* 网络信息气泡 */
.network-bubble {
  position: absolute;
  bottom: 60rpx;
  right: 0;
  background: #ffffe0;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  box-shadow: 2px 2px 0 rgba(0,0,0,0.3);
  padding: 8rpx 12rpx;
  min-width: 220rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  opacity: 0;
  transform: scale(0.8);
  transform-origin: bottom right;
  transition: all 0.2s ease;
  pointer-events: none;
}

.network-bubble.show {
  opacity: 1;
  transform: scale(1);
}

.network-bubble::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  right: 12rpx;
  border-width: 10rpx 10rpx 0;
  border-style: solid;
  border-color: #808080 transparent transparent transparent;
}

.network-status-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #000080;
  font-family: 'SimSun', serif;
  border-bottom: 1px solid #808080;
  padding-bottom: 4rpx;
  margin-bottom: 4rpx;
}

.network-speed-text {
  font-size: 20rpx;
  color: #333;
  font-family: 'SimSun', serif;
}

/* 音量气泡 */
.volume-bubble {
  position: absolute;
  bottom: 60rpx;
  right: 0;
  background: #ffffe0;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  box-shadow: 2px 2px 0 rgba(0,0,0,0.3);
  padding: 8rpx 12rpx;
  min-width: 140rpx;
  opacity: 0;
  transform: scale(0.8);
  transform-origin: bottom right;
  transition: all 0.2s ease;
  pointer-events: none;
}

.volume-bubble.show {
  opacity: 1;
  transform: scale(1);
}

.volume-bubble::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  right: 12rpx;
  border-width: 10rpx 10rpx 0;
  border-style: solid;
  border-color: #808080 transparent transparent transparent;
}

.volume-status-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #000080;
  font-family: 'SimSun', serif;
  text-align: center;
}

/* ==================== 网管系统插件 ==================== */
.network-plugin-panel {
  position: absolute;
  top: 180rpx;
  right: 20rpx;
  width: 220rpx;
  background: #f5f0dc;
  border-radius: 2rpx;
  box-shadow:
    2px 2px 5px rgba(0,0,0,0.15),
    inset 0 0 30px rgba(0,0,0,0.02);
  z-index: 80; /* 比桌面应用(2000+)低，始终在底层 */
  opacity: 0.85;
}

/* 纸质纹理效果 */
.network-plugin-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0,0,0,0.01) 2px,
      rgba(0,0,0,0.01) 4px
    );
  pointer-events: none;
}

.plugin-title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 10rpx;
  border-bottom: 1px solid rgba(0,0,0,0.08);
}

.plugin-title-text {
  color: #6b5d4f;
  font-size: 20rpx;
  font-weight: normal;
  font-family: 'SimSun', serif;
  letter-spacing: 1rpx;
  opacity: 0.8;
}

.plugin-close-btn {
  color: #8b7d6b;
  font-size: 28rpx;
  line-height: 1;
  padding: 0 4rpx;
  cursor: pointer;
  opacity: 0.6;
  transition: opacity 0.15s ease;
}

.plugin-close-btn:active {
  opacity: 1;
}

.plugin-body {
  padding: 10rpx;
}

.plugin-row {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx;
  margin-bottom: 6rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 2rpx;
  border: 1px solid rgba(0,0,0,0.05);
  transition: all 0.15s ease;
}

.plugin-row:last-child {
  margin-bottom: 0;
}

.plugin-row:active {
  background: rgba(107,93,79,0.15);
  border-color: rgba(107,93,79,0.2);
}

.plugin-row-icon {
  font-size: 24rpx;
  flex-shrink: 0;
  opacity: 0.7;
}

.plugin-row-info {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  flex: 1;
  min-width: 0;
}

.plugin-row-label {
  font-size: 18rpx;
  color: #8b7d6b;
  font-family: 'SimSun', serif;
  line-height: 1;
  letter-spacing: 0.5rpx;
  font-weight: 400;
}

.plugin-row-value {
  font-size: 22rpx;
  font-weight: 500;
  color: #5a4d42;
  font-family: 'Arial', sans-serif;
  line-height: 1.2;
  letter-spacing: 0.3rpx;
}

/* 开始菜单遮罩 - 点击外部关闭菜单 */
.start-menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9998;
  background: transparent;
}

/* 开始菜单 - 经典Win98单栏布局 */
.start-menu {
  position: absolute;
  bottom: calc(82rpx + env(safe-area-inset-bottom));
  left: 6rpx;
  width: 320rpx;
  max-height: 70vh;
  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #808080;
  border-bottom: 2px solid #808080;
  box-shadow: 4px 4px 0 rgba(0,0,0,0.4);
  display: flex;
  flex-direction: column;
  z-index: 9999;
  animation: slideUp 0.12s ease-out;
  overflow: hidden;
}

@keyframes slideUp {
  from {
    transform: translateY(8rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 用户横幅 */
.user-banner {
  background: linear-gradient(180deg, #000080, #1084d0);
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  border-bottom: 1px solid #808080;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  background: #fff;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #fff;
  border-bottom: 1px solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: inset 1px 1px 0 #0a0a0a, inset -1px -1px 0 #dfdfdf;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.user-name {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.3);
}

.user-status {
  color: #a0d0ff;
  font-size: 18rpx;
}

/* 菜单项容器 */
.menu-items {
  padding: 6rpx;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

/* 菜单项 */
.menu-item {
  padding: 10rpx 14rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  color: #000;
  margin-bottom: 2rpx;
}

.menu-item:active {
  background-color: #000080;
  color: white;
}

.menu-item.selected {
  background-color: #000080;
  color: white;
}

.menu-item:active .menu-icon,
.menu-item:active .menu-text,
.menu-item:active .submenu-arrow {
  color: white;
}

.menu-item.selected .menu-icon,
.menu-item.selected .menu-text,
.menu-item.selected .submenu-arrow {
  color: white;
}

.menu-icon {
  width: 38rpx;
  text-align: center;
  margin-right: 10rpx;
  font-size: 28rpx;
  flex-shrink: 0;
}

.menu-text {
  flex: 1;
  font-family: 'SimSun', serif;
}

/* 子菜单样式 */
.submenu {
  position: relative;
}

.submenu-arrow {
  font-size: 18rpx;
  color: #666;
  transition: transform 0.15s ease;
  margin-left: 6rpx;
}

.submenu-arrow.expanded {
  transform: rotate(90deg);
}

/* 程序子菜单 - 独立弹出层 */
.submenu-popup {
  position: absolute;
  bottom: calc(240rpx + env(safe-area-inset-bottom));
  left: 330rpx;
  width: 200rpx;
  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #808080;
  border-bottom: 2px solid #808080;
  box-shadow: 4px 4px 0 rgba(0,0,0,0.4);
  display: none;
  z-index: 10000;
  animation: slideInRight 0.12s ease-out;
  padding: 6rpx;
}

.submenu-popup.show {
  display: block;
}

@keyframes slideInRight {
  from {
    transform: translateX(-8rpx);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

.submenu-item {
  padding: 10rpx 14rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  color: #000;
  margin-bottom: 2rpx;
  font-family: 'SimSun', serif;
}

.submenu-item:active {
  background-color: #000080;
  color: white;
}

.submenu-icon {
  width: 34rpx;
  text-align: center;
  margin-right: 8rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

.submenu-text {
  flex: 1;
}

/* 关机项特殊样式 */
.shutdown-item {
  margin-top: 4rpx;
}

/* 分隔线 */
.menu-line {
  border-top: 1px solid #808080;
  border-bottom: 1px solid #fff;
  margin: 6rpx 10rpx;
  height: 0;
}

/* 右键菜单 */
.context-menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9997;
  background: transparent;
}

.context-menu {
  position: fixed;
  background: #c0c0c0;
  border: 2px outset #fff;
  box-shadow: 4px 4px 0 rgba(0,0,0,0.5);
  z-index: 9998;
  min-width: 200rpx;
  padding: 2rpx;
  animation: contextFadeIn 0.15s ease-out;
}

@keyframes contextFadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.context-menu-item {
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  color: #000;
  margin-bottom: 2rpx;
  font-weight: 500;
}

.context-menu-item:active {
  background-color: #000080;
  color: white;
}

.context-icon {
  width: 40rpx;
  text-align: center;
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* Win98 错误弹窗 */
.win98-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 20000;
}

.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

.win98-window-body {
  padding: 0;
  display: flex;
  flex-direction: column;
}

.error-dialog {
  width: 320px;
}

.error-dialog-content {
  padding: 20px 16px;
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.error-icon {
  font-size: 40px;
  flex-shrink: 0;
}

.error-messages {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.error-title {
  font-size: 14px;
  font-weight: bold;
  color: #000;
  font-family: 'SimSun', serif;
}

.error-text {
  font-size: 12px;
  color: #333;
  font-family: 'SimSun', serif;
  line-height: 1.5;
}

.error-code {
  font-size: 11px;
  color: #cc0000;
  font-family: 'Courier New', monospace;
  margin-top: 4px;
}

.dialog-actions {
  display: flex;
  justify-content: center;
  padding: 8px 16px 12px;
  background: #c0c0c0;
}

.win98-btn-std {
  font-size: 12px;
  color: #000;
  height: 24px;
  padding: 0 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
