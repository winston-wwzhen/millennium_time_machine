/* miniprogram/pages/index/index.wxss */

/* 经典 Windows 98 桌面背景色 */
page {
  height: 100vh;
  background-color: #008080;
  font-family: 'Courier New', Courier, monospace;
  overflow: hidden;
  box-sizing: border-box;
  /* 为微信导航栏预留空间 */
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.desktop {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* 图标网格 - 纵向填充布局 */
.icon-grid {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-auto-flow: column; /* 纵向填充，先填满第一列 */
  grid-auto-rows: max-content;
  padding-left: 10rpx;
  padding-right: 10rpx;
  /* 为微信导航栏预留更多空间 */
  padding-top: 180rpx;
  column-gap: 20rpx;
  row-gap: 5rpx;
  overflow-y: auto;
  align-content: start;
}

.desktop-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  justify-content: flex-start;
}

.desktop-icon:active .icon-img {
  filter: brightness(0.8);
  transform: translate(1px, 1px); /* 点击下沉效果 */
}
.desktop-icon:active .icon-label {
  background-color: #000080;
  color: #fff;
  border: 1px dotted #fff;
}

.icon-img {
  font-size: 70rpx;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.3));
}

.icon-label {
  color: white;
  font-size: 22rpx;
  text-align: center;
  text-shadow: 2px 2px 0 #000, 0 0 4px rgba(0,0,0,0.8);
  line-height: 1.3;
  padding: 4rpx 8rpx;
  font-weight: 500;
}

/* 桌面小部件 (便签) - 样式优化 */
.widget-container {
  position: absolute;
  /* 修改位置，不让它太靠上 */
  top: 160rpx; 
  right: 40rpx;
  pointer-events: none; /* 让点击穿透 */
  z-index: 10;
}

.sticky-note {
  background-color: #ffffcc;
  color: #000;
  padding: 24rpx;
  width: 240rpx;
  font-size: 24rpx;
  font-family: 'Comic Sans MS', 'Courier New', cursive; 
  box-shadow: 4px 4px 5px rgba(0,0,0,0.3);
  transform: rotate(2deg);
  border: 1px solid #e0e0a0;
  /* 增加一点纹理 */
  background-image: linear-gradient(#f9f9f9 1px, transparent 1px);
  background-size: 100% 1.2em;
}

/* 桌面助手 (小狮子) - 新增样式 */
.desktop-agent {
  position: absolute;
  bottom: calc(100rpx + env(safe-area-inset-bottom));
  right: 30rpx;
  z-index: 50;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: float 3s ease-in-out infinite;
}

.agent-body {
  font-size: 80rpx;
  filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.3));
}

.agent-bubble {
  background: #ffffe0;
  border: 1px solid #000;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  margin-bottom: 6rpx;
  position: relative;
  box-shadow: 2px 2px 0 rgba(0,0,0,0.2);
  white-space: nowrap;
}

/* 气泡的小箭头 */
.agent-bubble::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  border-width: 8rpx 8rpx 0;
  border-style: solid;
  border-color: #000 transparent transparent transparent;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* 任务栏 */
.taskbar {
  /* 适配底部安全区 */
  height: calc(80rpx + env(safe-area-inset-bottom));
  padding-bottom: env(safe-area-inset-bottom);

  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  display: flex;
  align-items: center;
  padding-left: 6rpx;
  padding-right: 6rpx;
  box-sizing: border-box;
  z-index: 100;
  position: relative;
  box-shadow: 0 -2px 5px rgba(0,0,0,0.2);
}

.start-button {
  display: flex;
  align-items: center;
  padding: 4rpx 12rpx;
  background-color: #c0c0c0;
  border: 2px outset #fff;
  font-weight: bold;
  font-size: 28rpx;
  margin-right: 12rpx;
  height: 52rpx;
  box-shadow: 1px 1px 0 #000;
  position: relative;
  z-index: 1;
}

.start-button:active, .start-button.active {
  border: 2px inset #fff;
  background-color: #d0d0d0;
  box-shadow: none;
  transform: translate(1px, 1px);
}

.win-logo {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.taskbar-divider {
  width: 2px;
  height: 50rpx;
  border-left: 1px solid #808080;
  border-right: 1px solid #fff;
  margin: 0 10rpx;
}

.task-items {
  flex: 1;
}

.system-tray {
  border: 2px inset #fff;
  padding: 0 14rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
  background: #c0c0c0;
  box-shadow: inset 1px 1px 0 #000;
}

/* 开始菜单 - 样式优化 */
.start-menu {
  position: absolute;
  bottom: calc(82rpx + env(safe-area-inset-bottom));
  left: 6rpx;
  width: 400rpx;
  background-color: #c0c0c0;
  border: 2px outset #fff;
  display: flex;
  z-index: 9999;
  box-shadow: 6px 6px 0 rgba(0,0,0,0.5);
  animation: slideUp 0.15s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(10rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.sidebar {
  width: 70rpx;
  background: linear-gradient(180deg, #000080 0%, #1084d0 15%, #000080 100%);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
}

.os-version {
  color: white;
  transform: rotate(-90deg);
  white-space: nowrap;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.5);
}

.menu-items {
  flex: 1;
  padding: 4rpx;
  display: flex;
  flex-direction: column;
}

.menu-item {
  padding: 18rpx 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  color: #000;
  margin-bottom: 2rpx;
  font-weight: 500;
}

.menu-item:active {
  background-color: #000080;
  color: white;
}

.menu-icon {
  width: 50rpx;
  text-align: center;
  margin-right: 16rpx;
  font-size: 36rpx;
}

.menu-line {
  border-top: 1px solid #808080;
  border-bottom: 1px solid #fff;
  margin: 10rpx 4rpx;
  height: 0;
}

/* 彩蛋对话框 */
.easter-egg-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.easter-egg-dialog {
  width: 500rpx;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.5);
  animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes popIn {
  from {
    transform: scale(0.5);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.dialog-header {
  background: linear-gradient(90deg, #000080, #1084d0);
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.dialog-icon {
  font-size: 48rpx;
}

.dialog-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.5);
}

.dialog-body {
  padding: 40rpx 24rpx;
  background: #c0c0c0;
}

.egg-message {
  font-size: 28rpx;
  color: #000;
  line-height: 1.6;
  text-align: center;
  display: block;
}

.dialog-footer {
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  background: #c0c0c0;
}