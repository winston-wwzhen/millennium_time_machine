/* ==================== 蓝屏彩蛋样式 ==================== */

/* 桌面蓝屏状态 */
.desktop.blue-screen {
  background-color: #0000FF !important;
}

/* 桌面刷新状态 - Win98风格闪烁效果 */
.desktop.refreshing {
  animation: desktopFlash 0.4s ease-in-out;
}

@keyframes desktopFlash {
  0% {
    opacity: 1;
    filter: brightness(1);
  }
  25% {
    opacity: 0.3;
    filter: brightness(1.5);
  }
  50% {
    opacity: 0.1;
    filter: brightness(2);
    background-color: #ffffff !important;
  }
  75% {
    opacity: 0.3;
    filter: brightness(1.5);
  }
  100% {
    opacity: 1;
    filter: brightness(1);
  }
}

/* 刷新时图标网格淡出淡入效果 */
.desktop.refreshing .icon-grid {
  animation: gridFade 0.8s ease-in-out;
}

@keyframes gridFade {
  0% {
    opacity: 1;
  }
  30% {
    opacity: 0.2;
  }
  70% {
    opacity: 0.2;
  }
  100% {
    opacity: 1;
  }
}

