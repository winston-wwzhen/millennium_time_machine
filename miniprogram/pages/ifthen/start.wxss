/* 如果当时.exe - Win98 风格 */
page {
  height: 100vh;
  background: #008080;
  box-sizing: border-box;
}

.desktop {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 90px;
}

/* Win98 窗口 */
.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
  width: 98%;
  max-width: 700px;
  height: 85%;
}

/* 标题栏 */
.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

/* 窗口主体 */
.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 16px;
  overflow-y: auto;
}

/* 游戏标题区域 */
.game-header {
  display: flex;
  align-items: center;
  padding: 10px 12px;
  background: #ffffff;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  margin-bottom: 10px;
}

.game-icon {
  font-size: 32px;
  margin-right: 10px;
}

.game-title {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title-main {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 2px;
}

.title-sub {
  font-size: 10px;
  color: #000080;
  font-style: italic;
}

/* 游戏说明区域 */
.info-section {
  padding: 12px;
  background: #ffffff;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.info-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  text-align: center;
}

.info-desc {
  font-size: 12px;
  color: #000080;
  text-align: center;
  font-style: italic;
  line-height: 1.5;
}

.info-detail {
  font-size: 11px;
  color: #666;
  text-align: center;
  line-height: 1.5;
}

.info-note {
  font-size: 10px;
  color: #808080;
  text-align: center;
}

/* 设置区域 */
.setting-section {
  margin-bottom: 12px;
  padding: 8px;
  background: #ffffe0;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
}

.setting-label {
  font-size: 11px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 6px;
}

/* 年份选择器 */
.year-selector {
  padding: 8px;
  background: #ffffff;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  margin-bottom: 6px;
}

.year-display {
  text-align: center;
  padding: 4px 8px;
  background: #000080;
  margin-bottom: 8px;
}

.year-value {
  font-size: 24px;
  font-weight: bold;
  color: white;
}

.year-unit {
  font-size: 12px;
  color: white;
  margin-left: 2px;
}

.year-slider-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin: 8px 0;
}

.year-btn {
  width: 22px;
  height: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
  color: #000;
  background: #c0c0c0;
  border-top: 2px solid #ffffff;
  border-left: 2px solid #ffffff;
  border-right: 2px solid #808080;
  border-bottom: 2px solid #808080;
  flex-shrink: 0;
  cursor: pointer;
}

.year-btn:active {
  border-top: 2px solid #808080;
  border-left: 2px solid #808080;
  border-right: 2px solid #ffffff;
  border-bottom: 2px solid #ffffff;
  padding-top: 2px;
  padding-left: 2px;
}

.year-btn.disabled {
  color: #808080;
  opacity: 0.5;
}

.year-slider {
  flex: 1;
}

.year-range {
  display: flex;
  justify-content: space-between;
  font-size: 10px;
  color: #666;
  margin-top: 8px;
}

.age-preview {
  padding: 4px 8px;
  background: #ffffc0;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  text-align: center;
  font-size: 10px;
  color: #000080;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 8px;
}

.gender-option {
  flex: 1;
  padding: 8px;
  text-align: center;
  background: #e0e0e0;
  border: 1px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
}

.gender-option.selected {
  background: #000080;
  color: white;
  border-color: #808080 #ffffff #ffffff #808080;
}

.gender-icon {
  display: block;
  font-size: 28px;
  margin-bottom: 4px;
}

.gender-text {
  display: block;
  font-size: 11px;
}

/* 按钮区域 */
.action-bar {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 12px;
  background: #c0c0c0;
}

/* Win98 按钮样式 */
.win98-btn-std {
  font-size: 12px;
  color: #000;
  height: 28px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
}

.win98-btn-std:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

.win98-btn-primary {
  background: #000080;
  color: white;
}

.win98-btn-primary:active {
  background: #000080;
}

/* 状态栏 */
.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
}

/* 玩法说明弹窗 */
.instructions-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 998;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.instructions-overlay.visible {
  opacity: 1;
  pointer-events: auto;
}

.instructions-window {
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
  max-width: 400px;
  width: 100%;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.instructions-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 12px;
  overflow-y: auto;
}

.instructions-section {
  margin-bottom: 12px;
  padding-bottom: 12px;
  border-bottom: 1px dashed #808080;
}

.instructions-section:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.instructions-heading {
  font-size: 13px;
  font-weight: bold;
  color: #000080;
  display: block;
  margin-bottom: 6px;
}

.instructions-text {
  font-size: 11px;
  color: #000000;
  line-height: 1.6;
  display: block;
  margin-bottom: 4px;
}

.instructions-actions {
  display: flex;
  gap: 8px;
  padding: 10px 12px 12px;
  border-top: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  justify-content: center;
}
