/* 结局收集页面 - Win98 风格 */
page {
  height: 100vh;
  background: #008080;
  box-sizing: border-box;
  overflow: hidden;
}

.desktop {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 90px;
  overflow: hidden;
}

/* Win98 窗口 */
.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
  width: 98%;
  max-width: 700px;
  height: 96%;
  overflow: hidden;
}

/* 标题栏 */
.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

/* 窗口主体 */
.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 12px;
  overflow: hidden;
}

/* 统计区域 */
.stats-section {
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  padding: 10px;
  margin-bottom: 10px;
}

.stats-title {
  font-size: 11px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 10px;
  text-align: center;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10px;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f0f0f0;
  border: 1px solid #808080;
  padding: 8px 12px;
  min-width: 80px;
}

.stat-label {
  font-size: 9px;
  color: #808080;
  margin-bottom: 4px;
}

.stat-value {
  font-size: 18px;
  font-weight: bold;
  color: #000080;
}

.stat-total,
.stat-percent,
.stat-unit {
  font-size: 10px;
  color: #808080;
  margin-left: 2px;
}

/* 类型统计网格 */
.type-stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 6px;
}

.type-stat-box {
  display: flex;
  align-items: center;
  gap: 6px;
  background: #ffffff;
  border: 1px solid #808080;
  padding: 6px 8px;
}

.type-stat-icon {
  font-size: 16px;
}

.type-stat-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.type-stat-label {
  font-size: 8px;
  color: #666;
}

.type-stat-count {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
}

.type-stat-box.type-special {
  background: linear-gradient(135deg, #fff9c4 0%, #fff59d 100%);
}

.type-stat-box.type-good {
  background: linear-gradient(135deg, #c8e6c9 0%, #a5d6a7 100%);
}

.type-stat-box.type-normal {
  background: linear-gradient(135deg, #e0e0e0 0%, #d0d0d0 100%);
}

.type-stat-box.type-bad {
  background: linear-gradient(135deg, #ffcdd2 0%, #ef9a9a 100%);
}

/* 历史记录区域 */
.history-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: hidden;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 4px;
  background: #000080;
  color: white;
  padding: 4px 8px;
  font-size: 10px;
  font-weight: bold;
  margin-bottom: 5px;
}

.section-title {
  font-size: 10px;
}

.section-count {
  font-size: 9px;
  opacity: 0.8;
}

.history-scroll {
  flex: 1;
  overflow-y: auto;
  background: #ffffff;
  border: 1px solid #808080;
}

.history-list {
  padding: 8px;
}

.history-item {
  display: flex;
  gap: 8px;
  padding: 8px;
  background: #f5f5f5;
  border: 1px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  margin-bottom: 8px;
}

.history-item-left {
  flex-shrink: 0;
}

.history-icon {
  font-size: 24px;
}

.history-item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.history-title-row {
  display: flex;
  align-items: center;
  gap: 8px;
  justify-content: space-between;
}

.history-title {
  font-size: 11px;
  font-weight: bold;
  color: #000;
  flex: 1;
}

.history-tag {
  font-size: 8px;
  padding: 2px 6px;
  border: 1px solid #808080;
  flex-shrink: 0;
}

.history-tag.type-special {
  background: #fff9c4;
  color: #8b4513;
  font-weight: bold;
}

.history-tag.type-good {
  background: #c8e6c9;
  color: #006400;
}

.history-tag.type-normal {
  background: #e0e0e0;
  color: #666;
}

.history-tag.type-bad {
  background: #ffcdd2;
  color: #8b0000;
}

.history-meta {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.meta-text {
  font-size: 9px;
  color: #666;
  background: #e8e8e8;
  padding: 2px 6px;
  border: 1px solid #d0d0d0;
}

.history-time {
  border-top: 1px dotted #c0c0c0;
  padding-top: 4px;
}

.time-text {
  font-size: 8px;
  color: #999;
}

/* 加载更多/没有更多 */
.load-more,
.no-more {
  text-align: center;
  padding: 12px 0;
}

.load-text,
.no-more-text {
  font-size: 9px;
  color: #808080;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 12px;
}

.empty-text {
  font-size: 12px;
  color: #666;
  margin-bottom: 6px;
}

.empty-hint {
  font-size: 10px;
  color: #999;
}

/* 按钮区域 */
.action-bar {
  display: flex;
  gap: 8px;
  padding: 10px 12px;
  background: #c0c0c0;
}

/* Win98 按钮样式 */
.win98-btn-std {
  font-size: 12px;
  color: #000;
  height: 28px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  flex: 1;
}

.win98-btn-std:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

.win98-btn-primary {
  background: #000080;
  color: white;
}

.win98-btn-primary:active {
  background: #000080;
}

/* 状态栏 */
.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
}

/* 结局详情弹窗 - Win98 风格 */
.ending-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.ending-overlay.visible {
  opacity: 1;
  pointer-events: auto;
}

.ending-card {
  background: #c0c0c0;
  border: 3px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  max-width: 320px;
  width: 100%;
  max-height: 70vh;
  overflow-y: auto;
  box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
}

.ending-header {
  background: linear-gradient(180deg, #000080 0%, #000040 100%);
  padding: 10px 30px 10px 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
  border-bottom: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  position: relative;
}

.ending-icon {
  font-size: 36px;
}

.ending-title {
  font-size: 16px;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
}

.win98-close-btn {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  width: 20px;
  height: 20px;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
  color: #000000;
  cursor: pointer;
}

.win98-close-btn:active {
  border-color: #808080 #ffffff #ffffff #808080;
}

.ending-content {
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.ending-desc {
  font-size: 13px;
  color: #000000;
  line-height: 1.6;
}

.ending-tag {
  display: inline-block;
  padding: 3px 8px;
  font-size: 11px;
  font-weight: bold;
  text-align: center;
  border: 2px solid;
}

.ending-tag.type-special {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  border-color: #daa520;
  color: #5c4a00;
}

.ending-tag.type-good {
  background: #98fb98;
  border-color: #32cd32;
  color: #006400;
}

.ending-tag.type-normal {
  background: #87ceeb;
  border-color: #4682b4;
  color: #003366;
}

.ending-tag.type-bad {
  background: #ffa07a;
  border-color: #ff6347;
  color: #8b0000;
}

.ending-actions {
  padding: 10px;
  display: flex;
  justify-content: center;
  gap: 8px;
  border-top: 1px solid #808080;
}

.win98-btn-share {
  flex: 1;
}

/* 海报预览弹窗 - Win98 风格 */
.poster-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.poster-overlay.visible {
  opacity: 1;
  pointer-events: auto;
}

.poster-preview-card {
  background: #c0c0c0;
  border: 3px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  max-width: 400px;
  width: 100%;
  max-height: 85vh;
  overflow: hidden;
  box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
}

.poster-preview-body {
  flex: 1;
  overflow-y: auto;
  background: #ffffff;
  padding: 10px;
}

.poster-image {
  width: 100%;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
}

.poster-actions {
  padding: 10px;
  display: flex;
  gap: 8px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
}

.poster-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
}
