/* 继承全局字体 */
page {
  height: 100%;
  font-family: "宋体", sans-serif;
  overflow: hidden;
}

.desktop {
  width: 100%;
  height: 100%;
  background-color: #008080; /* 青色背景 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.window-frame {
  width: 90%;
  background-color: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 2px 2px 0px rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
}

.title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 4px;
  margin: 3px;
}

.title-text {
  color: white;
  font-size: 14px;
  font-weight: bold;
}

.btn-close {
  width: 20px;
  height: 18px;
  background: #c0c0c0;
  border: 1px solid;
  border-color: #fff #000 #000 #fff;
  text-align: center;
  line-height: 16px;
  font-weight: bold;
}

/* 菜单栏 */
.menu-bar {
  display: flex;
  gap: 15px;
  padding: 2px 10px;
  font-size: 14px;
  margin-bottom: 5px;
}

.window-body {
  padding: 10px;
}

.label {
  font-size: 14px;
  margin-bottom: 5px;
  color: #333;
}

/* 输入框：凹陷效果 */
.input-area {
  width: 100%;
  height: 80px;
  background: #fff;
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  padding: 5px;
  box-sizing: border-box;
  font-size: 16px;
  margin-bottom: 15px;
}

/* 按钮：凸起效果 */
.action-area {
  display: flex;
  justify-content: center;
  margin-bottom: 15px;
}

.retro-btn {
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  padding: 8px 20px;
  font-size: 14px;
  font-weight: bold;
}

.btn-hover {
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  padding: 9px 19px 7px 21px; /* 模拟按压位移 */
}

/* 输出区域：凹陷效果 */
.output-area {
  width: 100%;
  min-height: 80px;
  background: #fff;
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  border-right: 2px solid #fff;
  border-bottom: 2px solid #fff;
  padding: 10px;
  box-sizing: border-box;
  font-size: 16px;
  color: #000080; /* 深蓝色字，更有那味 */
}

.status-bar {
  margin-top: 5px;
  border-top: 1px solid #808080;
  padding: 2px 5px;
  font-size: 12px;
  color: #555;
}