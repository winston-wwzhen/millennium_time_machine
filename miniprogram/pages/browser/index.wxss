/* 全局布局 */
page {
  height: 100vh;
  background-color: #c0c0c0;
  font-family: 'Courier New', Courier, monospace;
  overflow: hidden;
  
  /* 使用 Flex 布局管理垂直空间，比单纯的 height: 100% 更稳定 */
  display: flex;
  flex-direction: column;
  box-sizing: border-box;

  /* * 顶部避让逻辑：
   * status-bar-height (状态栏) + 44px (标准胶囊按钮区域高度)
   * 这样浏览器窗口正好从胶囊按钮下方开始
   */
  padding-top: calc(env(safe-area-inset-top) + 44px);
  /* 底部避让逻辑：适配全面屏底部的 Home Indicator */
  padding-bottom: env(safe-area-inset-bottom);
}

.win98-window {
  /* Flex: 1 让窗口自动占据页面剩余的所有空间 */
  flex: 1;
  display: flex;
  flex-direction: column;
  /* 用户调整：增加额外的顶部间距，确保窗口完全避开胶囊按钮并产生悬浮感 */
  margin-top: 80rpx;
  padding: 2px;
  box-sizing: border-box;
  
  /* 增加阴影，使其看起来更像浮在桌面上的窗口 */
  box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
  border: 2px solid #fff;
  border-right-color: #000;
  border-bottom-color: #000;
  background-color: #c0c0c0;
  
  /* 确保内部滚动，防止窗口溢出 */
  overflow: hidden;
}

/* 1. 标题栏 */
.title-bar {
  display: flex;
  background: linear-gradient(90deg, #000080, #1084d0);
  padding: 4px;
  color: white;
  align-items: center;
  height: 28px;
  flex-shrink: 0; /* 防止被压缩 */
  justify-content: space-between; /* 确保标题和按钮两端对齐 */
}

.title-icon {
  margin-right: 5px;
  font-size: 14px;
}

.title-text { 
  flex: 1; 
  font-weight: bold; 
  font-size: 14px; 
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis;
  line-height: 20px; /* 垂直居中 */
}

.title-controls {
  display: flex;
  gap: 2px;
  align-items: center;
}

.control-btn {
  width: 18px; 
  height: 18px;
  background-color: #c0c0c0;
  border: 1px outset #fff;
  color: black;
  display: flex; /* 使用 flex 居中文字 */
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: bold;
  line-height: 1;
  padding-bottom: 2px; /* 微调文字位置 */
  box-sizing: border-box;
}

.control-btn:active { 
  border-style: inset; 
  padding-top: 2px; /* 按下时文字下沉效果 */
  padding-bottom: 0;
}

.control-btn.close {
  margin-left: 2px; /* 关闭按钮稍微分开一点 */
}

/* 2. 工具栏 */
.toolbar {
  display: flex;
  padding: 4px;
  gap: 4px;
  border-bottom: 1px solid #808080;
  align-items: center;
  flex-shrink: 0; /* 防止被压缩 */
}

.tool-btn {
  border: 1px outset #fff;
  padding: 2px 8px;
  font-size: 16px;
  background: #c0c0c0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tool-btn:active { border-style: inset; }
.tool-btn.disabled { color: #808080; border-style: solid; border-color: #c0c0c0; }

.tool-separator { width: 1px; height: 20px; background: #808080; border-right: 1px solid #fff; }

.address-input-wrapper {
  flex: 1;
  background: white;
  border: 1px inset #fff;
  height: 24px;
  padding: 0 4px;
  display: flex; align-items: center;
}
.address-input { font-size: 12px; width: 100%; }

/* 3. 视口与通用 */
.viewport {
  flex: 1;
  background: white;
  border: 2px inset #fff;
  margin: 2px;
  position: relative;
  display: flex; flex-direction: column;
  overflow: hidden;
  height: 0; /* 配合flex:1 确保滚动正常 */
}

.web-content { flex: 1; overflow-y: auto; }

.loading-bar-container { padding: 20px; text-align: center; }
.loading-track { height: 15px; border: 1px inset #fff; background: #fff; margin-top: 5px; }
.loading-progress { height: 100%; background: #000080; transition: width 0.2s; }

/* 底部状态栏 */
.status-bar {
  height: 20px;
  background: #c0c0c0;
  border-top: 1px solid #fff;
  display: flex; align-items: center; padding: 0 5px; font-size: 11px;
  flex-shrink: 0; /* 防止被压缩 */
}
.status-text { flex: 1; }
.status-progress-bar { height: 10px; background: #000080; width: 50px; border: 1px inset #fff; }

/* ============ SCENE A: Portal Styles ============ */
.page-home { padding: 15px; }
.hero-section { text-align: center; margin-bottom: 20px; }
.hero-logo { width: 80px; height: 80px; margin: 10px 0; }
.blink-text { animation: blink 1s infinite; color: red; font-weight: bold; }
@keyframes blink { 50% { opacity: 0; } }
.daily-quote { display: block; font-style: italic; color: #666; font-size: 12px; }
.retro-hr { border-bottom: 1px solid #808080; border-top: 1px solid #fff; margin: 15px 0; height: 0; }

.link-item {
  display: flex; align-items: center; margin-bottom: 15px; padding: 5px;
  border: 1px dashed transparent; cursor: pointer;
}
.link-item:active { background: #ffffcc; border-color: #000; }
.special-link { background: #e0e0ff; border: 1px solid #000080; }
.link-icon { font-size: 24px; margin-right: 10px; }
.link-title { display: block; color: #0000ff; text-decoration: underline; font-weight: bold; }
.link-desc { font-size: 12px; color: #666; }