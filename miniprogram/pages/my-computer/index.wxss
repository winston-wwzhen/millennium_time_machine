/* 我的电脑 - Win98 风格 */
page {
  height: 100vh;
  background: #008080;
  box-sizing: border-box;
  padding: 65px 5px 5px 5px;
}

.desktop {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
  width: 90%;
  max-width: 600px;
  height: 80%;
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow: hidden;
}

.toolbar {
  display: flex;
  gap: 8px;
  padding: 2px 8px;
  font-size: 11px;
}

.toolbar-item {
  padding: 2px 8px;
  cursor: pointer;
}

.toolbar-item:active {
  background: #000080;
  color: white;
}

.toolbar-divider {
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #ffffff;
  margin: 4px 0;
}

.address-bar {
  display: flex;
  align-items: center;
  padding: 4px 8px;
  gap: 8px;
  font-size: 11px;
}

.address-label {
  color: #000;
}

.address-input {
  flex: 1;
  background: #fff;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  padding: 2px 8px;
  font-size: 11px;
}

.drives-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  padding: 16px;
}

.drive-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100px;
  padding: 8px;
}

.drive-item:active {
  background: #000080;
}

.drive-icon {
  font-size: 40px;
  margin-bottom: 4px;
}

.drive-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.drive-label {
  font-size: 11px;
  color: #000;
  margin-bottom: 2px;
}

.drive-size {
  font-size: 10px;
  color: #666;
  margin-bottom: 4px;
}

/* C盘容量条 */
.capacity-bar {
  width: 100%;
  height: 12px;
  background: #ffffff;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  margin: 4px 0;
}

.capacity-used {
  height: 100%;
  background: linear-gradient(180deg, #0000ff, #000080);
}

.capacity-text {
  font-size: 9px;
  color: #cc0000;
  font-weight: bold;
  text-align: center;
}

.system-info {
  margin-top: auto;
  padding: 16px;
  background: #ffffe0;
  border-top: 1px solid #808080;
}

.info-title {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 8px;
}

.info-row {
  display: flex;
  font-size: 11px;
  margin-bottom: 4px;
}

.info-label {
  width: 80px;
  color: #000;
}

.info-value {
  flex: 1;
  color: #333;
}

.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
}

/* 驱动器弹窗样式 */
.win98-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.drive-dialog {
  width: 260px;
}

/* 驱动器弹窗主体 - 去除多余内边距和flex扩展 */
.drive-dialog .win98-window-body {
  padding: 0;
  flex: unset;
}

.drive-dialog-content {
  padding: 10px 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.drive-dialog-icon {
  font-size: 32px;
  margin-bottom: 6px;
  line-height: 1;
}

.drive-dialog-message {
  font-size: 11px;
  color: #000;
  white-space: pre-line;
  line-height: 1.5;
  font-family: 'SimSun', serif;
  margin: 0;
}

.dialog-actions {
  display: flex;
  justify-content: center;
  padding: 6px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
}

.win98-btn-std {
  font-size: 12px;
  color: #000;
  height: 22px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
}

.win98-btn-std:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}
