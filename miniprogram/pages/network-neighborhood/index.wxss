/* 网上邻居 - Win98 风格 */
page {
  height: 100vh;
  background: #008080;
  box-sizing: border-box;
  padding: 65px 5px 5px 5px;
}

.desktop {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
  width: 90%;
  max-width: 600px;
  height: 80%;
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow-y: auto;
}

.toolbar {
  display: flex;
  gap: 8px;
  padding: 2px 8px;
  font-size: 11px;
}

.toolbar-item {
  padding: 2px 8px;
  cursor: pointer;
}

.toolbar-item:active {
  background: #000080;
  color: white;
}

.toolbar-divider {
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #ffffff;
  margin: 4px 0;
}

.address-bar {
  display: flex;
  align-items: center;
  padding: 4px 8px;
  gap: 8px;
  font-size: 11px;
}

.address-label {
  color: #000;
}

.address-input {
  flex: 1;
  background: #fff;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  padding: 2px 8px;
  font-size: 11px;
}

/* 拨号动画面板 */
.network-status-panel {
  padding: 20px;
  background: #ffffe0;
  border: 1px solid #808080;
  margin: 10px;
}

.dialing-animation {
  display: flex;
  flex-direction: column;
  gap: 10px;
  align-items: center;
}

.dialing-text {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
}

.progress-bar-container {
  width: 100%;
  height: 20px;
  background: #fff;
  border: 2px inset #808080;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #000080 0%, #1084d0 100%);
  transition: width 0.3s ease;
}

.dialing-status {
  font-size: 12px;
  color: #333;
  text-align: center;
}

.dialing-percent {
  font-size: 12px;
  color: #000080;
  font-weight: bold;
}

/* 网络网格 */
.network-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  padding: 20px;
  justify-content: flex-start;
}

.network-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90px;
  padding: 10px;
}

.network-item:active {
  background: #000080;
}

.network-item:active .network-label,
.network-item:active .network-desc {
  color: white;
}

.network-item.disconnect:active {
  background: #cc0000;
}

.network-icon {
  font-size: 40px;
  margin-bottom: 8px;
}

.network-icon.online {
  filter: drop-shadow(0 0 5px #00ff00);
  animation: pulse 2s ease-in-out infinite;
}

.network-icon.offline {
  filter: grayscale(0.5);
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.network-label {
  font-size: 11px;
  color: #000;
  margin-bottom: 2px;
  text-align: center;
}

.network-desc {
  font-size: 10px;
  color: #666;
  text-align: center;
}

/* 连接信息面板 */
.connection-info {
  margin-top: 10px;
  padding: 16px;
  background: #ffffe0;
  border-top: 1px solid #808080;
}

.info-title {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 10px;
}

.info-row {
  display: flex;
  font-size: 11px;
  margin-bottom: 4px;
}

.info-label {
  width: 80px;
  color: #000;
}

.info-value {
  flex: 1;
  color: #333;
}

.info-value.connected {
  color: #00aa00;
  font-weight: bold;
}

/* 未连接提示 */
.offline-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 20px;
  margin: 20px;
  background: #ffffe0;
  border: 1px dashed #808080;
}

.tip-icon {
  font-size: 20px;
}

.tip-text {
  font-size: 12px;
  color: #666;
}

/* 状态栏 */
.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-icon {
  font-size: 12px;
}
