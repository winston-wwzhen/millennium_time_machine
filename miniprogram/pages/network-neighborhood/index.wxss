/* 网管系统 - Win98 风格 */
page {
  height: 100vh;
  background: #008080;
  box-sizing: border-box;
  padding: 65px 5px 5px 5px;
}

.desktop {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
  width: 90%;
  max-width: 600px;
  height: 80%;
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow-y: auto;
}

.toolbar {
  display: flex;
  gap: 8px;
  padding: 2px 8px;
  font-size: 11px;
}

.toolbar-item {
  padding: 2px 8px;
  cursor: pointer;
}

.toolbar-item:active {
  background: #000080;
  color: white;
}

.toolbar-divider {
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #ffffff;
  margin: 4px 0;
}

.address-bar {
  display: flex;
  align-items: center;
  padding: 4px 8px;
  gap: 8px;
  font-size: 11px;
}

.address-label {
  color: #000;
}

.address-input {
  flex: 1;
  background: #fff;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  padding: 2px 8px;
  font-size: 11px;
}

/* 拨号动画面板 */
.network-status-panel {
  padding: 20px;
  background: #ffffe0;
  border: 1px solid #808080;
  margin: 10px;
}

.dialing-animation {
  display: flex;
  flex-direction: column;
  gap: 10px;
  align-items: center;
}

.dialing-text {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
}

.progress-bar-container {
  width: 100%;
  height: 20px;
  background: #fff;
  border: 2px inset #808080;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #000080 0%, #1084d0 100%);
  transition: width 0.3s ease;
}

.dialing-status {
  font-size: 12px;
  color: #333;
  text-align: center;
}

.dialing-percent {
  font-size: 12px;
  color: #000080;
  font-weight: bold;
}

/* 网络网格 */
.network-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  padding: 20px;
  justify-content: flex-start;
}

.network-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90px;
  padding: 10px;
}

.network-item:active {
  background: #000080;
}

.network-item:active .network-label,
.network-item:active .network-desc {
  color: white;
}

.network-item.disconnect:active {
  background: #cc0000;
}

.network-icon {
  font-size: 40px;
  margin-bottom: 8px;
}

.network-icon.online {
  filter: drop-shadow(0 0 5px #00ff00);
  animation: pulse 2s ease-in-out infinite;
}

.network-icon.offline {
  filter: grayscale(0.5);
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.network-label {
  font-size: 11px;
  color: #000;
  margin-bottom: 2px;
  text-align: center;
}

.network-desc {
  font-size: 10px;
  color: #666;
  text-align: center;
}

/* 连接信息面板 */
.connection-info {
  margin-top: 10px;
  padding: 16px;
  background: #ffffe0;
  border-top: 1px solid #808080;
}

.info-title {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 10px;
}

.info-row {
  display: flex;
  font-size: 11px;
  margin-bottom: 4px;
}

.info-label {
  width: 80px;
  color: #000;
}

.info-value {
  flex: 1;
  color: #333;
}

.info-value.connected {
  color: #00aa00;
  font-weight: bold;
}

/* 未连接提示 */
.offline-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 20px;
  margin: 20px;
  background: #ffffe0;
  border: 1px dashed #808080;
}

.tip-icon {
  font-size: 20px;
}

.tip-text {
  font-size: 12px;
  color: #666;
}

/* 状态栏 */
.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-icon {
  font-size: 12px;
}

/* 双代币余额面板 */
.balance-panel {
  margin: 10px;
  padding: 16px;
  background: #ffffe0;
  border: 2px inset #808080;
}

.balance-title {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 12px;
}

.balance-row {
  display: flex;
  gap: 10px;
  margin-bottom: 12px;
}

.balance-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px;
  background: #fff;
  border: 2px inset #c0c0c0;
}

.balance-icon {
  font-size: 24px;
}

.balance-info {
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 10px;
  color: #666;
}

.balance-value {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
}

.balance-hint {
  padding: 8px;
  background: #fffacd;
  border: 1px dashed #808080;
  font-size: 10px;
  color: #666;
  text-align: center;
  margin-bottom: 10px;
}

.exchange-btn {
  width: 100%;
  padding: 8px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 12px;
  color: #000;
  font-weight: bold;
}

.exchange-btn:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
  background: #a0a0a0;
}

/* 兑换对话框 */
.exchange-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.exchange-dialog {
  width: 85%;
  max-width: 350px;
  background: #c0c0c0;
  border-top: 2px solid #ffffff;
  border-left: 2px solid #ffffff;
  border-right: 2px solid #808080;
  border-bottom: 2px solid #808080;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
}

.exchange-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 4px 8px;
  background: linear-gradient(90deg, #000080, #1084d0);
}

.exchange-title {
  color: white;
  font-weight: bold;
  font-size: 13px;
}

.exchange-close {
  all: unset;
  width: 18px;
  height: 16px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 14px;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.exchange-balance-info {
  padding: 12px;
  background: #ffffe0;
  border-bottom: 1px solid #808080;
  text-align: center;
}

.exchange-balance-text {
  font-size: 12px;
  color: #000080;
  font-weight: bold;
}

.exchange-options {
  padding: 10px;
  max-height: 250px;
  overflow-y: auto;
}

.exchange-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  margin-bottom: 8px;
  background: #fff;
  border: 2px outset #ffffff;
  cursor: pointer;
}

.exchange-option.selected {
  background: #000080;
  border: 2px inset #808080;
}

.exchange-option.selected .option-label,
.exchange-option.selected .option-cost,
.exchange-option.selected .option-check {
  color: white;
}

.option-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.option-label {
  font-size: 13px;
  font-weight: bold;
  color: #000;
}

.option-cost {
  font-size: 11px;
  color: #666;
}

.option-check {
  font-size: 16px;
  color: #00aa00;
  font-weight: bold;
}

.exchange-actions {
  display: flex;
  gap: 10px;
  padding: 10px;
  border-top: 1px solid #808080;
}

.exchange-btn-cancel,
.exchange-btn-confirm {
  flex: 1;
  padding: 8px;
  font-size: 12px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
}

.exchange-btn-confirm {
  background: #000080;
  color: white;
}

.exchange-btn-cancel:active,
.exchange-btn-confirm:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}
