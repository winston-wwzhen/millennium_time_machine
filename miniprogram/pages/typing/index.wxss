/* 打字练习游戏样式 */
page {
  background: #008080;
  height: 100%;
}

.typing-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 10px;
  box-sizing: border-box;
}

.game-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15px;
  overflow: hidden;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  justify-content: space-around;
  gap: 10px;
  margin-bottom: 10px;
}

.stat-item {
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  padding: 8px 15px;
  text-align: center;
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 10px;
  color: #808080;
  margin-bottom: 3px;
}

.stat-value {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #000080;
  font-family: 'Courier New', monospace;
}

/* 最佳记录 */
.best-records {
  text-align: center;
  margin-bottom: 10px;
  padding: 5px;
  background: linear-gradient(90deg, #000080, #1084d0);
  color: #fff;
  font-size: 12px;
  border-radius: 3px;
}

.record-text {
  font-family: 'Courier New', monospace;
}

/* 文字显示区 */
.text-display {
  flex: 1;
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  padding: 15px;
  margin-bottom: 10px;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.passage-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 10px;
  padding-bottom: 8px;
  border-bottom: 1px dashed #808080;
}

.text-content {
  font-family: 'Courier New', monospace;
  font-size: 16px;
  line-height: 1.8;
  flex: 1;
  word-wrap: break-word;
}

.char {
  padding: 1px 0;
  transition: all 0.1s;
}

.char.correct {
  color: #008000;
  background-color: #e0ffe0;
}

.char.wrong {
  color: #ff0000;
  background-color: #ffe0e0;
  text-decoration: line-through;
}

.char.current {
  background-color: #ffff00;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { background-color: #ffff00; }
  51%, 100% { background-color: #ffffaa; }
}

/* 输入区 */
.input-area {
  margin-bottom: 10px;
}

.typing-input {
  width: 100%;
  min-height: 80px;
  background: #ffffff;
  border: 2px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  padding: 10px;
  font-family: 'Courier New', monospace;
  font-size: 16px;
  box-sizing: border-box;
}

.typing-input:focus {
  outline: none;
  border-color: #000080;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  gap: 10px;
}

.control-buttons button {
  flex: 1;
}

/* 完成遮罩 */
.finish-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.finish-dialog {
  background: #c0c0c0;
  border: 2px solid;
  border-color: #ffffff #808080 #808080 #ffffff;
  padding: 25px;
  text-align: center;
  animation: popIn 0.3s ease-out;
  min-width: 280px;
}

@keyframes popIn {
  from {
    transform: scale(0.5);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.finish-header {
  font-size: 24px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 15px;
}

.finish-stats {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 15px;
}

.finish-stat {
  font-size: 16px;
  color: #333;
  font-family: 'Courier New', monospace;
}

.finish-message {
  font-size: 18px;
  color: #ff6600;
  font-weight: bold;
  padding-top: 10px;
  border-top: 1px solid #808080;
}
