/* 回收站 - Win98 风格 */
page {
  height: 100vh;
  background: #008080;
  box-sizing: border-box;
  padding: 65px 5px 5px 5px;
}

.desktop {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
  width: 90%;
  max-width: 600px;
  height: 80%;
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow: hidden;
}

.toolbar {
  display: flex;
  gap: 8px;
  padding: 2px 8px;
  font-size: 11px;
}

.toolbar-item {
  padding: 2px 8px;
  cursor: pointer;
}

.toolbar-item:active {
  background: #000080;
  color: white;
}

.toolbar-divider {
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #ffffff;
  margin: 4px 0;
}

.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40px;
}

.empty-icon {
  font-size: 60px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-text {
  font-size: 14px;
  color: #000;
  margin-bottom: 8px;
}

.empty-hint {
  font-size: 11px;
  color: #808080;
}

.trash-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  padding: 16px;
  flex: 1;
  overflow-y: auto;
}

.trash-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80px;
  padding: 8px;
}

.trash-item:active {
  background: #000080;
}

.trash-icon {
  font-size: 40px;
  margin-bottom: 4px;
  opacity: 0.7;
}

.trash-label {
  font-size: 11px;
  color: #000;
  text-align: center;
  margin-bottom: 2px;
}

.trash-date {
  font-size: 9px;
  color: #808080;
}

.tip-box {
  background: #ffffe0;
  border: 1px solid #000;
  padding: 8px;
  margin: 8px;
  font-size: 11px;
}

.tip-text {
  color: #000080;
}

.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
}
