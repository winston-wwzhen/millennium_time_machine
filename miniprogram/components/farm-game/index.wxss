/* 复古网页白色背景 */
.page-game {
  background-color: #fff;
  color: #000;
  min-height: 100%;
  padding: 10px;
  box-sizing: border-box;
  font-family: 'Courier New', Courier, monospace;
}

/* 游戏头部状态栏 */
.game-header {
  display: flex; 
  justify-content: space-between; 
  align-items: center;
  background: #000080;
  color: white;
  padding: 4px 8px;
  border: 2px outset #fff;
  margin-bottom: 10px;
}
.stat-item { margin-right: 15px; font-weight: bold; font-size: 13px; }
.stat-item.coins { color: #ffff00; }
.game-title { font-weight: bold; font-size: 14px; text-transform: uppercase; }

/* 游戏消息栏 */
.game-msg {
  font-size: 12px; 
  color: #000; 
  background-color: #ffffcc;
  border: 1px solid #000;
  padding: 6px;
  margin-bottom: 15px;
  box-shadow: 2px 2px 0 #c0c0c0;
}

/* 农田网格容器 */
.farm-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
  margin-bottom: 20px;
  background-color: #c0c0c0;
  padding: 10px;
  border: 2px inset #fff;
}

/* 单个地块 */
.plot-cell {
  background-color: #5d4037;
  border: 2px inset #8d6e63;
  height: 100px;
  position: relative;
  display: flex; justify-content: center; align-items: center;
  overflow: hidden;
}
.plot-cell:active { background-color: #4e342e; }

/* 地块状态 */
.plot-cell.status-0 { opacity: 0.9; }
.plot-cell.status-1 { box-shadow: inset 0 0 10px rgba(0,0,0,0.5); }
.plot-cell.status-2 { 
  border-color: #ffff00; 
  box-shadow: inset 0 0 15px #ffff00; 
}

/* 像素网格纹理 */
.grid-lines {
  position: absolute; top:0; left:0; right:0; bottom:0;
  background-image: 
    linear-gradient(rgba(0,0,0,0.2) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0,0,0,0.2) 1px, transparent 1px);
  background-size: 20px 20px; 
  pointer-events: none;
}

.dirt-hint {
  color: #8d6e63;
  font-weight: bold;
  font-size: 10px;
  text-shadow: 1px 1px 0 #3e2723;
}

.emoji-seed { font-size: 28px; filter: grayscale(0.3); }
.emoji-fruit { font-size: 44px; filter: drop-shadow(2px 2px 0 rgba(0,0,0,0.5)); }

.shake-anim { animation: shake 1s infinite; }
@keyframes shake { 0%, 100% { transform: rotate(0); } 25% { transform: rotate(-5deg); } 75% { transform: rotate(5deg); } }

/* 游戏操作按钮 */
.game-controls { display: flex; gap: 10px; }
.game-btn {
  flex: 1; 
  background: #c0c0c0; 
  border: 2px outset #fff; 
  color: #000;
  font-size: 13px; 
  padding: 8px 0; 
  border-radius: 0;
  font-weight: bold;
  box-shadow: 1px 1px 0 #000;
}
.game-btn:active { border-style: inset; transform: translate(1px, 1px); box-shadow: none; }

.visit-btn { color: #000080; }
.home-btn { color: #800000; }

/* 商店弹窗 */
.shop-modal {
  position: absolute; top:0; left:0; right:0; bottom:0;
  background: rgba(0,0,0,0.4);
  display: flex; justify-content: center; align-items: center;
  z-index: 100;
}
.shop-window { 
  width: 85%; 
  background: #c0c0c0; 
  border: 2px outset #fff; 
  box-shadow: 4px 4px 0 rgba(0,0,0,0.5);
  padding: 3px;
}
.shop-title {
  background: #000080; 
  color: white; 
  padding: 4px 6px; 
  font-weight: bold;
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 2px;
}
.seed-list { 
  background: #fff;
  border: 2px inset #fff;
  padding: 5px;
  max-height: 250px;
  overflow-y: auto;
}
.seed-item {
  display: flex; justify-content: space-between; align-items: center; 
  padding: 8px 5px;
  border-bottom: 1px dotted #888;
  color: #000;
}
.seed-item:last-child { border-bottom: none; }
.seed-item:active { background: #000080; color: #fff; }
.seed-item .cost { color: #008000; font-weight: bold; }
.seed-item:active .cost { color: #ffff00; }