/* ==================== 驱动器网格 ==================== */

.drives-grid {
  display: flex;
  flex-direction: column;
  gap: 0;
  padding: 16px;
  width: 100%;
  box-sizing: border-box;
}

/* 刷新动画 - Win98风格闪烁 */
.drives-grid.refreshing {
  animation: refreshSpin 0.5s ease-in-out;
}

@keyframes refreshSpin {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.3;
  }
  100% {
    opacity: 1;
  }
}

/* C盘 - 独占第一行 */
.drive-item.drive-c {
  width: 100%;
  max-width: 100%;
  flex-direction: row;
  justify-content: flex-start;
  padding: 16px 16px 8px 48px;
  box-sizing: border-box;
}

.drive-item.drive-c .drive-icon {
  margin-right: 16px;
  margin-bottom: 0;
  cursor: pointer;
}

.drive-item.drive-c .drive-info {
  align-items: flex-start;
}

