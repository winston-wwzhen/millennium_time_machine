/* 我的电脑 - Win98 风格窗口组件 */

/* ==================== 基础样式 ==================== */

/* 遮罩层 */
.my-computer-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  transition: opacity 0.3s ease;
}

.my-computer-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.my-computer-overlay.hide {
  opacity: 0;
  pointer-events: none;
}

/* Win98 窗口 */
.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a, 0 10px 30px rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  width: 85%;
  max-width: 650px;
  max-height: 80vh;
}

/* 标题栏 */
.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
  cursor: pointer;
}

.win98-title-controls button:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* 菜单栏 */
.menu-bar {
  display: flex;
  gap: 2px;
  padding: 2px 4px;
  background: #c0c0c0;
  border-bottom: 1px solid #808080;
}

.menu-item {
  font-size: 12px;
  color: #000;
  padding: 2px 8px;
  font-family: 'SimSun', sans-serif;
}

.menu-small {
  font-size: 11px;
  padding: 2px 6px;
}

.menu-item:active {
  background: #000080;
  color: white;
}

/* 文件菜单下拉 */
.menu-dropdown-wrapper {
  position: relative;
  display: inline-block;
}

.menu-dropdown-trigger {
  display: flex;
  align-items: center;
  cursor: pointer;
  padding: 2px 6px;
  min-width: 40px;
}

.menu-arrow {
  font-size: 8px;
  margin-left: 2px;
}

.menu-dropdown-content {
  position: absolute;
  top: 100%;
  left: 0;
  background: #f0f0f0;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  z-index: 100;
  min-width: 100px;
  padding: 2px 0;
}

.menu-dropdown-item {
  display: flex;
  align-items: center;
  padding: 5px 10px;
  font-size: 11px;
  cursor: pointer;
  font-family: 'SimSun', sans-serif;
  white-space: nowrap;
  border-bottom: 1px dotted #c0c0c0;
}

.menu-dropdown-item:last-child {
  border-bottom: none;
}

.menu-dropdown-item:active {
  background: #000080;
  color: white;
}

.menu-item-icon {
  margin-right: 8px;
  font-size: 12px;
}

/* 菜单分隔线 */
.menu-dropdown-separator {
  height: 1px;
  background: #c0c0c0;
  margin: 4px 0;
  border-top: 1px solid #ffffff;
}

/* 禁用菜单项 */
.menu-dropdown-item.menu-disabled {
  color: #808080;
  cursor: not-allowed;
}

.menu-dropdown-item.menu-disabled:active {
  background: transparent;
  color: #808080;
}

/* 菜单快捷键 - 隐藏显示 */
.menu-shortcut {
  display: none;
}

/* 窗口主体 */
.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}

