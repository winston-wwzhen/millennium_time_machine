/* 我的电脑 - Win98 风格窗口组件 */

/* ==================== 基础样式 ==================== */

/* 遮罩层 */
.my-computer-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  transition: opacity 0.3s ease;
}

.my-computer-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.my-computer-overlay.hide {
  opacity: 0;
  pointer-events: none;
}

/* Win98 窗口 */
.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a, 0 10px 30px rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  width: 85%;
  max-width: 650px;
  max-height: 80vh;
}

/* 标题栏 */
.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
  cursor: pointer;
}

.win98-title-controls button:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* 菜单栏 */
.menu-bar {
  display: flex;
  gap: 4px;
  padding: 2px 4px;
  background: #c0c0c0;
  border-bottom: 1px solid #808080;
}

.menu-item {
  font-size: 12px;
  color: #000;
  padding: 2px 8px;
  font-family: 'SimSun', sans-serif;
}

.menu-item:active {
  background: #000080;
  color: white;
}

/* 文件菜单下拉 */
.menu-dropdown-wrapper {
  position: relative;
  display: inline-block;
}

.menu-dropdown-trigger {
  display: flex;
  align-items: center;
  cursor: pointer;
  padding: 2px 8px;
  min-width: 60px;
}

.menu-arrow {
  font-size: 8px;
  margin-left: 2px;
}

.menu-dropdown-content {
  position: absolute;
  top: 100%;
  left: 0;
  background: #f0f0f0;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  z-index: 100;
  min-width: 110px;
  padding: 2px 0;
}

.menu-dropdown-item {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  font-size: 11px;
  cursor: pointer;
  font-family: 'SimSun', sans-serif;
  white-space: nowrap;
  border-bottom: 1px dotted #c0c0c0;
}

.menu-dropdown-item:last-child {
  border-bottom: none;
}

.menu-dropdown-item:active {
  background: #000080;
  color: white;
}

.menu-item-icon {
  margin-right: 8px;
  font-size: 12px;
}

/* 窗口主体 */
.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}

/* 标准按钮 */
.win98-btn-std {
  font-size: 12px;
  color: #000;
  height: 22px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  cursor: pointer;
}

.win98-btn-std:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* 状态栏 */
.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
  flex-shrink: 0;
}

/* ==================== 弹窗通用样式 ==================== */

.win98-dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2100;
}

.dialog-actions {
  display: flex;
  justify-content: center;
  gap: 8px;
  padding: 6px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
}

/* ==================== 驱动器网格 ==================== */

.drives-grid {
  display: flex;
  flex-direction: column;
  gap: 0;
  padding: 16px;
  width: 100%;
  box-sizing: border-box;
}

/* C盘 - 独占第一行 */
.drive-item.drive-c {
  width: 100%;
  max-width: 100%;
  flex-direction: row;
  justify-content: flex-start;
  padding: 16px 16px 8px 48px;
  box-sizing: border-box;
}

.drive-item.drive-c .drive-icon {
  margin-right: 16px;
  margin-bottom: 0;
  cursor: pointer;
}

.drive-item.drive-c .drive-info {
  align-items: flex-start;
}

/* 分割线 */
.drive-divider {
  width: 100%;
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #ffffff;
  margin: 8px 0;
}

/* 第二行驱动器容器 */
.drives-row-secondary {
  display: flex;
  gap: 16px;
  justify-content: center;
  padding-top: 8px;
}

.drive-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(50% - 8px);
  min-width: 120px;
  padding: 8px;
}

.drive-item .drive-icon {
  cursor: pointer;
}

.drive-item .drive-icon:active {
  opacity: 0.7;
}

.drive-icon {
  font-size: 40px;
  margin-bottom: 4px;
}

.drive-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.drive-label {
  font-size: 11px;
  color: #000;
  margin-bottom: 2px;
}

.drive-size {
  font-size: 10px;
  color: #666;
  margin-bottom: 4px;
}

/* 容量条 */
.capacity-bar {
  width: 100%;
  max-width: 200px;
  height: 12px;
  background: #ffffff;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  margin: 4px 0;
  box-sizing: border-box;
}

.capacity-used {
  height: 100%;
  background: linear-gradient(180deg, #0000ff, #000080);
}

.capacity-text {
  font-size: 9px;
  color: #333;
  font-weight: bold;
  text-align: center;
}

/* ==================== 系统信息面板 ==================== */

.system-info-panel {
  margin-top: 16px;
  padding: 12px;
  background: #e0e0e0;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  box-sizing: border-box;
  width: 100%;
}

.system-info-row {
  display: flex;
  font-size: 11px;
  margin-bottom: 4px;
  font-family: 'SimSun', serif;
}

.system-info-row:last-child {
  margin-bottom: 0;
}

.system-info-label {
  width: 70px;
  color: #000;
  flex-shrink: 0;
}

.system-info-value {
  flex: 1;
  color: #333;
}

