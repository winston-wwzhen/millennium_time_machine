}

/* C盘容量警告样式（>= 90%） */
.capacity-text.capacity-warning {
  color: #ff0000;
  animation: capacityBlink 2s ease-in-out infinite;
}

@keyframes capacityBlink {
  0%, 100% {
    opacity: 1;
  }
  50% {
