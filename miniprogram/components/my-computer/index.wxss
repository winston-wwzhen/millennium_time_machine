/* ==================== 彩蛋发现弹窗 ==================== */

.egg-discovery-dialog {
  width: 300px;
  max-width: 85%;
}

.egg-discovery-dialog.legendary {
  width: 340px;
}

.egg-discovery-dialog .win98-window-body {
  padding: 0;
  flex: unset;
}

.egg-discovery-content {
  padding: 16px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.egg-discovery-icon {
  font-size: 56px;
  margin-bottom: 12px;
}

.egg-discovery-name {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 8px;
  text-align: center;
}

.egg-discovery-description {
  font-size: 11px;
  color: #333;
  text-align: center;
  margin-bottom: 12px;
  line-height: 1.5;
}

.egg-discovery-rarity {
  font-size: 12px;
  font-weight: bold;
  padding: 4px 12px;
  border-radius: 4px;
  margin-bottom: 8px;
}

.egg-discovery-rarity.common {
  color: #666;
  background: #e0e0e0;
}

.egg-discovery-rarity.rare {
  color: #0066cc;
  background: #cce5ff;
}

.egg-discovery-rarity.epic {
  color: #9900cc;
  background: #e5ccff;
}

.egg-discovery-rarity.legendary {
  color: #cc6600;
  background: #ffe5cc;
  animation: legendary-glow 1s ease-in-out infinite alternate;
}

@keyframes legendary-glow {
  from {
    box-shadow: 0 0 5px #ffcc00;
  }
  to {
    box-shadow: 0 0 20px #ffcc00, 0 0 30px #ff9900;
  }
}

