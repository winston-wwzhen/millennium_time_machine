/* 我的电脑 - Win98 风格窗口组件 */

/* 遮罩层 */
.my-computer-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  transition: opacity 0.3s ease;
}

.my-computer-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.my-computer-overlay.hide {
  opacity: 0;
  pointer-events: none;
}

/* Win98 窗口 */
.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a, 0 10px 30px rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  width: 85%;
  max-width: 600px;
  max-height: 80vh;
}

/* 标题栏 */
.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
  cursor: pointer;
}

.win98-title-controls button:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* 菜单栏 */
.menu-bar {
  display: flex;
  gap: 4px;
  padding: 2px 4px;
  background: #c0c0c0;
  border-bottom: 1px solid #808080;
}

.menu-item {
  font-size: 12px;
  color: #000;
  padding: 2px 8px;
  font-family: 'SimSun', sans-serif;
}

.menu-item:active {
  background: #000080;
  color: white;
}

/* 窗口主体 */
.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow-y: auto;
  overflow-x: hidden;
}

/* 驱动器网格 */
.drives-grid {
  display: flex;
  flex-direction: column;
  gap: 0;
  padding: 16px;
}

/* C盘 - 独占第一行 */
.drive-item.drive-c {
  width: 90%;
  flex-direction: row;
  justify-content: flex-start;
  padding: 16px 16px 8px 48px;
  cursor: pointer;
}

.drive-item.drive-c .drive-icon {
  margin-right: 16px;
  margin-bottom: 0;
}

.drive-item.drive-c .drive-info {
  align-items: flex-start;
}

/* 分割线 */
.drive-divider {
  width: 100%;
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #ffffff;
  margin: 8px 0;
}

/* 第二行驱动器容器 */
.drives-row-secondary {
  display: flex;
  gap: 16px;
  justify-content: center;
  padding-top: 8px;
}

.drive-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(50% - 8px);
  min-width: 120px;
  padding: 8px;
  cursor: pointer;
}

.drive-item:active {
  background: #000080;
}

.drive-icon {
  font-size: 40px;
  margin-bottom: 4px;
}

.drive-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.drive-label {
  font-size: 11px;
  color: #000;
  margin-bottom: 2px;
}

.drive-size {
  font-size: 10px;
  color: #666;
  margin-bottom: 4px;
}

/* 容量条 */
.capacity-bar {
  width: 200px;
  max-width: 50%;
  height: 12px;
  background: #ffffff;
  border: 1px solid;
  border-color: #808080 #ffffff #ffffff #808080;
  margin: 4px 0;
}

.capacity-used {
  height: 100%;
  background: linear-gradient(180deg, #0000ff, #000080);
}

.capacity-text {
  font-size: 9px;
  color: #cc0000;
  font-weight: bold;
  text-align: center;
}

/* 系统信息 */
.system-info {
  margin-top: auto;
  padding: 16px;
  background: #ffffe0;
  border-top: 1px solid #808080;
}

.info-title {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 8px;
}

.info-row {
  display: flex;
  font-size: 11px;
  margin-bottom: 4px;
}

.info-label {
  width: 80px;
  color: #000;
}

.info-value {
  flex: 1;
  color: #333;
}

/* 状态栏 */
.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
  flex-shrink: 0;
}

/* 驱动器弹窗样式 */
.win98-dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2100;
}

.drive-dialog {
  width: 260px;
  height: auto;
  max-width: 85%;
}

.drive-dialog .win98-window-body {
  padding: 0;
  flex: unset;
}

.drive-dialog-content {
  padding: 10px 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.drive-dialog-icon {
  font-size: 32px;
  margin-bottom: 6px;
  line-height: 1;
}

.drive-dialog-message {
  font-size: 11px;
  color: #000;
  white-space: pre-line;
  line-height: 1.5;
  font-family: 'SimSun', serif;
  margin: 0;
}

.dialog-actions {
  display: flex;
  justify-content: center;
  padding: 6px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
}

.win98-btn-std {
  font-size: 12px;
  color: #000;
  height: 22px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  cursor: pointer;
}

.win98-btn-std:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* 帮助弹窗样式 */
.help-dialog {
  width: 380px;
  max-width: 90%;
  max-height: 70vh;
}

.help-dialog .win98-window-body {
  padding: 0;
  flex: unset;
}

.help-content {
  max-height: 400px;
  padding: 12px 16px;
  display: flex;
  flex-direction: column;
}

.help-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 8px;
  font-family: 'SimSun', serif;
}

.help-text {
  font-size: 12px;
  color: #333;
  margin-bottom: 16px;
  line-height: 1.6;
  font-family: 'SimSun', serif;
}

.help-section {
  margin-bottom: 16px;
}

.help-section-title {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 8px;
  display: block;
  font-family: 'SimSun', serif;
}

.help-features {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding-left: 8px;
}

.help-feature {
  font-size: 11px;
  color: #333;
  line-height: 1.5;
  font-family: 'SimSun', serif;
}
