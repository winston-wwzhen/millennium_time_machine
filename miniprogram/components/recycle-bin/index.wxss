/* 回收站 - Win98 风格 */
.recycle-bin-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: none;
  box-sizing: border-box;
}

.recycle-bin-overlay.show {
  pointer-events: auto;
}

.recycle-bin-overlay.hide {
  display: none;
}

.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a;
  display: flex;
  flex-direction: column;
  width: 90%;
  max-width: 600px;
  height: 520px;
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow: hidden;
}

.toolbar {
  display: flex;
  gap: 8px;
  padding: 2px 8px;
  font-size: 11px;
}

.toolbar-item {
  padding: 2px 8px;
  cursor: pointer;
}

.toolbar-item:active {
  background: #000080;
  color: white;
}

.toolbar-divider {
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #ffffff;
  margin: 4px 0;
}

.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40px;
}

.empty-icon {
  font-size: 60px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-text {
  font-size: 14px;
  color: #000;
  margin-bottom: 8px;
}

.empty-hint {
  font-size: 11px;
  color: #808080;
}

.trash-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  padding: 16px;
  flex: 1;
  overflow-y: auto;
  align-content: flex-start;
}

.trash-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 95px;
  padding: 6px;
  box-sizing: border-box;
}

.trash-item:active {
  background: #000080;
}

.trash-icon {
  font-size: 32px;
  margin-bottom: 2px;
  opacity: 0.7;
}

.trash-label {
  font-size: 10px;
  color: #000;
  text-align: center;
  word-break: break-all;
  margin-bottom: 2px;
  line-height: 1.3;
  max-height: 13px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.trash-date {
  font-size: 8px;
  color: #808080;
  margin-bottom: 3px;
}

.file-actions {
  display: flex;
  flex-direction: column;
  gap: 4px;
  width: 100%;
  margin-top: 4px;
}

.action-btn {
  font-size: 10px;
  font-family: 'SimSun', sans-serif;
  line-height: 1.4;
  padding: 2px 6px;
  text-align: center;
  color: #000080;
  cursor: pointer;
  border: none;
  background: transparent;
}

.action-btn:active {
  color: #ff0000;
  text-decoration: underline;
}

.action-btn.disabled {
  color: #808080;
  cursor: default;
}

.delete-btn {
  color: #000080;
}

.delete-btn:active {
  color: #ff0000;
}

.restore-btn {
  color: #000080;
  font-weight: normal;
}

.restore-btn:active {
  color: #ff0000;
}

.tip-box {
  background: #ffffe0;
  border: 1px solid #000;
  padding: 8px;
  margin: 8px;
  font-size: 11px;
}

.tip-text {
  color: #000080;
}

.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
}

/* 帮助弹窗样式 */
.win98-dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.win98-dialog-overlay.show {
  display: flex;
}

.win98-dialog-overlay.hide {
  display: none;
}

.help-dialog {
  width: 380px;
  max-width: 90%;
  max-height: 70vh;
}

.help-dialog .win98-window-body {
  padding: 0;
  flex: unset;
}

.help-content {
  max-height: 400px;
  padding: 12px 16px;
  display: flex;
  flex-direction: column;
}

.help-title {
  font-size: 14px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 8px;
  font-family: 'SimSun', serif;
}

.help-text {
  font-size: 12px;
  color: #333;
  margin-bottom: 16px;
  line-height: 1.6;
  font-family: 'SimSun', serif;
}

.help-section {
  margin-bottom: 16px;
}

.help-section-title {
  font-size: 12px;
  font-weight: bold;
  color: #000080;
  margin-bottom: 8px;
  display: block;
  font-family: 'SimSun', serif;
}

.help-features {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding-left: 8px;
}

.help-feature {
  font-size: 11px;
  color: #333;
  line-height: 1.5;
  font-family: 'SimSun', serif;
}

.dialog-actions {
  display: flex;
  justify-content: center;
  padding: 6px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
}

.win98-btn-std {
  font-size: 12px;
  color: #000;
  height: 22px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
}

.win98-btn-std:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

/* 确认弹窗样式 */
.confirm-dialog {
  width: 320px;
  max-width: 90%;
}

.confirm-dialog .win98-window-body {
  padding: 0;
  flex: unset;
}

.confirm-content {
  display: flex;
  align-items: flex-start;
  padding: 20px;
  gap: 12px;
}

.confirm-icon {
  font-size: 32px;
  flex-shrink: 0;
}

.confirm-message {
  font-size: 12px;
  color: #000;
  line-height: 1.6;
  font-family: 'SimSun', serif;
  flex: 1;
}

.confirm-dialog .dialog-actions {
  display: flex;
  justify-content: center;
  gap: 12px;
  padding: 10px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
}
