/* ==================== CMD 命令提示符窗口 ==================== */

.cmd-console-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cmd-console-window {
  width: 700px;
  max-width: 95%;
  height: 520px;
  max-height: 85vh;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #fff #000 #000 #fff;
  box-shadow: 6px 6px 15px rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
}

/* 控制台标题栏 */
.cmd-title-bar {
  background: linear-gradient(180deg, #1084d0 0%, #000080 100%);
  display: flex;
  align-items: center;
  padding: 3px 5px;
  border-bottom: 1px solid #000;
}

.cmd-title-icon {
  font-size: 14px;
  margin-right: 5px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
  flex: 1;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
}

.win98-btn-close::after {
  content: "×";
  font-size: 14px;
  font-weight: bold;
}

/* 控制台菜单栏 */
.cmd-menu-bar {
  display: flex;
  background: #c0c0c0;
  padding: 3px 8px;
  border-bottom: 1px solid #808080;
}

.cmd-menu-item {
  font-size: 11px;
  color: #000;
  padding: 2px 10px;
  cursor: pointer;
}

/* 控制台内容区域 */
.cmd-content {
  flex: 1;
  background: #000;
  padding: 8px 10px;
  margin: 3px 4px 2px 4px;
  overflow-y: auto;
  overflow-x: hidden;
  min-height: 0;
  border-left: 2px inset #808080;
  border-right: 2px inset #808080;
  box-sizing: border-box;
}

.cmd-output {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.cmd-line {
  font-size: 13px;
  line-height: 1.5;
  font-family: 'Consolas', 'Lucida Console', 'Courier New', monospace;
  white-space: pre-wrap;
  word-break: break-all;
  overflow-wrap: break-word;
  word-wrap: break-word;
  display: block;
  margin-bottom: 1px;
  max-width: 100%;
}

/* 不同类型输出的样式 - 更接近真实CMD */
.cmd-line-system { color: #c0c0c0; }
.cmd-line-command { color: #c0c0c0; }
.cmd-line-output { color: #c0c0c0; }
.cmd-line-error { color: #ff6b6b; }
.cmd-line-warning { color: #ffd93d; }
.cmd-line-secret { color: #a855f7; }
.cmd-line-info { color: #6bcfff; }
.cmd-line-hint { color: #4ade80; }

/* 输入区域 */
.cmd-input-area {
  display: flex;
  align-items: center;
  padding: 6px 8px;
  background: #c0c0c0;
  border-top: 2px inset #808080;
  border-left: 2px inset #808080;
  border-right: 2px inset #808080;
  border-bottom: 2px inset #808080;
}

.cmd-prompt {
  font-size: 13px;
  color: #000;
  font-family: 'Consolas', 'Lucida Console', 'Courier New', monospace;
  margin-right: 5px;
  white-space: nowrap;
  font-weight: bold;
}

.cmd-input {
  flex: 1;
  font-size: 13px;
  color: #000;
  background: #fff;
  border: 2px inset #808080;
  padding: 3px 6px;
  font-family: 'Consolas', 'Lucida Console', 'Courier New', monospace;
  min-width: 0;
}

/* 滚动条提示 */
.cmd-scrollbar-hint {
  padding: 4px 8px;
  background: #c0c0c0;
  border-top: 1px solid #808080;
  text-align: center;
  font-size: 11px;
  color: #666;
  font-family: 'SimSun', serif;
}
