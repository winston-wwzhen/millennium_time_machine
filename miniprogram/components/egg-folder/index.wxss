/* 彩蛋文件夹组件 - Win98 风格 */

/* 遮罩层 */
.egg-folder-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2100;
  transition: opacity 0.3s ease;
}

.egg-folder-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.egg-folder-overlay.hide {
  opacity: 0;
  pointer-events: none;
}

.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a, 0 10px 30px rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  width: 90%;
  max-width: 550px;
  max-height: 85vh;
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
  cursor: pointer;
}

.win98-title-controls button:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 4px;
  overflow-y: auto;
  position: relative;
}

.toolbar {
  display: flex;
  gap: 8px;
  padding: 2px 8px;
  font-size: 11px;
}

.toolbar-item {
  padding: 2px 8px;
  cursor: pointer;
}

.toolbar-item.active,
.toolbar-item:active {
  background: #000080;
  color: white;
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 33px;
  left: 140px;
  background: #c0c0c0;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  box-shadow: 2px 2px 0 rgba(0,0,0,0.3);
  min-width: 100px;
  z-index: 100;
  display: none;
}

.dropdown-menu.show {
  display: block;
}

.dropdown-item {
  padding: 6px 16px;
  font-size: 12px;
  cursor: pointer;
}

.dropdown-item:active {
  background: #000080;
  color: white;
}

.dropdown-text {
  font-size: 12px;
}

.toolbar-divider {
  height: 1px;
  background: #808080;
  border-bottom: 1px solid #ffffff;
  margin: 4px 0;
}

.files-grid {
  display: flex;
  gap: 16px;
  padding: 16px;
  justify-content: flex-start;
}

.file-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80px;
  padding: 8px;
}

.file-item:active {
  background: #000080;
}

.hidden-file {
  opacity: 0.8;
}

.file-icon {
  font-size: 40px;
  margin-bottom: 4px;
}

.file-label {
  font-size: 11px;
  color: #000;
  text-align: center;
  word-break: break-all;
}

.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
  flex-shrink: 0;
}
