.level-badge {
  display: inline-flex;
  align-items: center;
  gap: 4rpx;
}

.level-icon {
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.size-small .level-icon {
  font-size: 24rpx;
}

.size-medium .level-icon {
  font-size: 32rpx;
}

.size-large .level-icon {
  font-size: 44rpx;
}

.level-title {
  font-size: 22rpx;
  color: #999;
}
