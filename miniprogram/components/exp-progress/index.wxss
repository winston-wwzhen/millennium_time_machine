.exp-progress {
  width: 100%;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #666;
  text-align: center;
}
