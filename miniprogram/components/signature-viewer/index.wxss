/* 非主流签名查看器组件 - Win98 记事本风格 */

/* 遮罩层 */
.signature-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2200;
  transition: opacity 0.3s ease;
}

.signature-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.signature-overlay.hide {
  opacity: 0;
  pointer-events: none;
}

.win98-window {
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  box-shadow: inset 1px 1px #dfdfdf, inset -1px -1px #0a0a0a, 0 10px 30px rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  width: 90%;
  max-width: 480px;
  max-height: 80vh;
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080, #1084d0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2px 3px 2px 6px;
  height: 20px;
}

.win98-title-text {
  color: white;
  font-weight: bold;
  font-size: 12px;
  font-family: 'SimSun', 'Courier New', monospace;
}

.win98-title-controls {
  display: flex;
  gap: 2px;
}

.win98-title-controls button {
  all: unset;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 16px;
  height: 14px;
  background: #c0c0c0;
  border-top: 1px solid #ffffff;
  border-left: 1px solid #ffffff;
  border-right: 1px solid #808080;
  border-bottom: 1px solid #808080;
  font-size: 10px;
  color: #000;
  padding: 0;
  margin: 0;
  cursor: pointer;
}

.win98-title-controls button:active {
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

.menu-bar {
  display: flex;
  gap: 16px;
  padding: 2px 8px;
  background: #c0c0c0;
  border-bottom: 1px solid #808080;
  font-size: 11px;
}

.menu-item {
  cursor: pointer;
}

.menu-item:active {
  background: #000080;
  color: white;
}

.win98-window-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 8px 12px;
  overflow-y: auto;
  background: #ffffff;
  margin: 2px;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  border-right: 1px solid #ffffff;
  border-bottom: 1px solid #ffffff;
}

.signature-content {
  display: flex;
  flex-direction: column;
  font-family: 'SimSun', 'Courier New', monospace;
  font-size: 12px;
  line-height: 1.6;
  color: #000000;
}

.signature-title {
  color: #000000;
  font-size: 12px;
  text-align: center;
  white-space: pre;
  font-weight: bold;
}

.signature-line {
  color: #000000;
  font-size: 11px;
  white-space: pre-wrap;
  word-break: break-all;
}

.signature-category {
  color: #000080;
  font-size: 11px;
  text-align: center;
  font-weight: bold;
  margin-top: 8px;
  margin-bottom: 4px;
}

.signature-hint {
  color: #008000;
  font-size: 10px;
  font-style: italic;
}

.status-bar {
  border-top: 1px solid #808080;
  padding: 2px 8px;
  font-size: 11px;
  background: #c0c0c0;
  flex-shrink: 0;
}

.status-bar text {
  font-family: 'SimSun', 'Courier New', monospace;
}
