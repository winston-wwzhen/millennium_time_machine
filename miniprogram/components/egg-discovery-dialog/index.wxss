/* 彩蛋发现弹窗 - Win98 风格 */
.egg-discovery-dialog {
  width: 500rpx;
  max-width: 90%;
  /* 添加入场动画：从中心放大并带有弹性效果 */
  animation: popIn 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* 入场动画：从中心放大 */
@keyframes popIn {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.egg-discovery-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
}

.egg-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  /* 添加脉冲动画，让图标更显眼 */
  animation: pulse 2s ease-in-out infinite;
}

/* 脉冲动画：吸引注意力 */
@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 6rpx 30rpx rgba(255, 217, 155, 0.5);
  }
}

.egg-icon-emoji {
  font-size: 60rpx;
  /* 添加轻微旋转动画 */
  animation: wiggle 3s ease-in-out infinite;
}

/* 轻微摆动动画 */
@keyframes wiggle {
  0%, 100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-5deg);
  }
  75% {
    transform: rotate(5deg);
  }
}

.egg-discovery-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.egg-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 15rpx;
  text-align: center;
}

.egg-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
  line-height: 1.6;
}

.egg-rarity-badge {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin-bottom: 15rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.egg-rarity-badge.rarity-common {
  background: linear-gradient(135deg, #909399 0%, #606266 100%);
}

.egg-rarity-badge.rarity-rare {
  background: linear-gradient(135deg, #409EFF 0%, #1065e8 100%);
}

.egg-rarity-badge.rarity-epic {
  background: linear-gradient(135deg, #A855F7 0%, #7e22ce 100%);
}

.egg-rarity-badge.rarity-legendary {
  background: linear-gradient(135deg, #F59E0B 0%, #d97706 100%);
}

.rarity-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.egg-reward {
  font-size: 28rpx;
  color: #e6a23c;
  font-weight: bold;
}

/* 通用 Win98 风格弹窗样式 */
.win98-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.3s;
}

.win98-overlay.hide {
  opacity: 0;
  pointer-events: none;
}

.win98-overlay.show {
  opacity: 1;
}

.win98-window {
  background: #c0c0c0;
  border: 2rpx solid #fff;
  border-right-color: #404040;
  border-bottom-color: #404040;
  box-shadow: 4rpx 4rpx 0 rgba(0, 0, 0, 0.5);
}

.win98-title-bar {
  background: linear-gradient(90deg, #000080 0%, #1084d0 100%);
  padding: 8rpx 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.win98-title-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.win98-title-controls {
  display: flex;
  gap: 10rpx;
}

.win98-btn-close {
  width: 40rpx;
  height: 40rpx;
  padding: 0;
  background: #c0c0c0;
  border: 2rpx solid #fff;
  border-right-color: #404040;
  border-bottom-color: #404040;
  font-size: 32rpx;
  line-height: 36rpx;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.1s;
}

.win98-btn-close:active {
  border: 2rpx solid #404040;
  border-right-color: #fff;
  border-bottom-color: #fff;
}

.win98-window-body {
  padding: 20rpx;
}

.win98-btn-std {
  background: #c0c0c0;
  border: 2rpx solid #fff;
  border-right-color: #404040;
  border-bottom-color: #404040;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  color: #000;
  cursor: pointer;
  transition: all 0.1s;
  user-select: none;
}

.win98-btn-std:active {
  border: 2rpx solid #404040;
  border-right-color: #fff;
  border-bottom-color: #fff;
}

.dialog-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
