/* 慢播 - 2005年风格视频播放器界面 */

/* 遮罩层 */
.manbo-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s ease;
  pointer-events: none;
}

.manbo-overlay.show {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

/* 窗口容器 */
.manbo-window {
  position: absolute;
  width: 700rpx;
  height: 880rpx;
}

.window-frame {
  width: 700rpx;
  height: 880rpx;
  background: linear-gradient(180deg, #e8e8e8 0%, #d0d0d0 100%);
  border-radius: 10rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

/* 标题栏 */
.title-bar {
  height: 60rpx;
  background: linear-gradient(180deg, #0a246a 0%, #0a3d8a 50%, #0a246a 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15rpx;
}

.title-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10rpx;
  cursor: move;
}

.app-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.app-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

.title-controls {
  display: flex;
  gap: 8rpx;
}

.title-controls .win98-btn-close {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(180deg, #e8e8e8 0%, #d0d0d0 100%);
  border: 1px solid #808080;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #000;
  line-height: 44rpx;
  cursor: pointer;
}

.title-controls .win98-btn-close:active {
  background: linear-gradient(180deg, #d0d0d0 0%, #b8b8b8 100%);
}

/* 主内容区 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 8rpx;
  gap: 8rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 播放区域 */
.play-area {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 演示版本提示 */
.demo-notice {
  background: linear-gradient(90deg, #fff3cd 0%, #ffe8a1 50%, #fff3cd 100%);
  border: 2px solid #ffc107;
  border-radius: 6rpx;
  padding: 10rpx 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(255, 193, 7, 0.4);
}

.notice-icon {
  font-size: 22rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.notice-text {
  font-size: 22rpx;
  color: #856404;
  font-weight: bold;
  letter-spacing: 1rpx;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.1);
  }
}

.play-screen {
  position: relative;
  height: 320rpx;
  background: #000;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  box-shadow: inset 0 0 20rpx rgba(0, 0, 0, 0.8);
  overflow: hidden;
}

.screen-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.screen-default {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.screen-text {
  font-size: 50rpx;
  filter: drop-shadow(0 0 20rpx rgba(255, 255, 255, 0.5));
}

.screen-subtitle {
  font-size: 20rpx;
  color: #00d4ff;
  font-weight: bold;
  letter-spacing: 4rpx;
}

.screen-status {
  font-size: 18rpx;
  color: #808080;
}

/* 居中播放按钮覆盖层 */
.play-button-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  cursor: pointer;
  transition: background 0.3s;
}

.play-button-overlay:active {
  background: rgba(0, 0, 0, 0.4);
}

.center-play-button {
  width: 120rpx;
  height: 120rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.5);
  transition: transform 0.2s, background 0.2s;
}

.center-play-button:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.8);
}

.center-play-icon {
  font-size: 50rpx;
  color: #fff;
  margin-left: 6rpx; /* 视觉修正，让播放图标更居中 */
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.6);
}

/* 播放控制 */
.play-controls {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  padding: 8rpx 0;
}

.ctrl-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(180deg, #f0f0f0 0%, #d8d8d8 100%);
  border: 2px solid #a0a0a0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  cursor: pointer;
}

.ctrl-btn-disabled {
  opacity: 0.5;
}

.ctrl-btn.play-btn {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(180deg, #4a9eff 0%, #2a7edf 100%);
  border-color: #1a6ebf;
  color: #fff;
  font-size: 32rpx;
}

.ctrl-btn.play-btn.loading {
  animation: loading-pulse 1s ease-in-out infinite;
}

@keyframes loading-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

/* 进度条区域 */
.progress-bar-area {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.time-text {
  font-size: 20rpx;
  color: #333;
  min-width: 80rpx;
  text-align: center;
  font-family: 'Consolas', monospace;
  flex-shrink: 0;
}

.progress-track {
  flex: 1;
  height: 16rpx;
  background: #a0a0a0;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  width: 0%;
  height: 100%;
  background: linear-gradient(90deg, #4a9eff 0%, #2a7edf 100%);
}

/* 播放列表区域 */
.playlist-area {
  flex: 1;
  background: #fff;
  border: 2px solid #a0a0a0;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  min-height: 200rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.playlist-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 12rpx;
  background: linear-gradient(180deg, #e8e8e8 0%, #d8d8d8 100%);
  border-bottom: 1px solid #a0a0a0;
  box-sizing: border-box;
}

.playlist-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.playlist-count {
  font-size: 20rpx;
  color: #666;
}

.playlist-content {
  flex: 1;
  padding: 15rpx 12rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 视频卡片横向滚动容器 */
.video-scroll-container {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.video-cards-wrapper {
  display: inline-flex;
  gap: 12rpx;
  padding: 4rpx;
  height: 100%;
  align-items: center;
}

/* 视频卡片 */
.video-card {
  flex-shrink: 0;
  width: 200rpx;
  height: 140rpx;
  background: linear-gradient(180deg, #f8f8f8 0%, #e8e8e8 100%);
  border: 2px solid #a0a0a0;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx;
  box-sizing: border-box;
  cursor: pointer;
  transition: all 0.2s ease;
}

.video-card.selected {
  background: linear-gradient(180deg, #e8f4ff 0%, #d0e8ff 100%);
  border-color: #4a9eff;
  box-shadow: 0 0 10rpx rgba(74, 158, 255, 0.3);
}

.video-card:active {
  transform: scale(0.95);
}

.video-card-thumb {
  width: 100%;
  height: 80rpx;
  border-radius: 6rpx;
  object-fit: cover;
}

.video-card-icon {
  font-size: 40rpx;
}

.video-card-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  text-align: center;
  width: 100%;
  overflow: hidden;
}

.video-card-name {
  font-size: 20rpx;
  color: #333;
  font-weight: bold;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.3;
  max-height: 52rpx;
}

.video-card-meta {
  font-size: 16rpx;
  color: #999;
  white-space: nowrap;
}

.empty-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  text-align: center;
}

.hint-icon {
  font-size: 50rpx;
  opacity: 0.3;
}

.hint-text {
  font-size: 22rpx;
  color: #999;
}

.hint-subtext {
  font-size: 18rpx;
  color: #bbb;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  background: #e8e8e8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15rpx;
  border-top: 1px solid #a0a0a0;
  font-size: 20rpx;
  color: #666;
  box-sizing: border-box;
}

/* 警告弹窗 */
.warning-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.warning-overlay.show {
  opacity: 1;
  visibility: visible;
}

.warning-dialog {
  width: 550rpx;
  background: linear-gradient(180deg, #f8f8f8 0%, #e8e8e8 100%);
  border: 2px solid #a0a0a0;
  border-radius: 12rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.4);
  overflow: hidden;
  animation: dialogSlideIn 0.3s ease;
}

@keyframes dialogSlideIn {
  from {
    transform: translateY(-50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.warning-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 25rpx 30rpx;
  background: linear-gradient(180deg, #fff8e8 0%, #ffe8b8 100%);
  border-bottom: 2px solid #ffd080;
}

.warning-icon {
  font-size: 48rpx;
}

.warning-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #cc6600;
}

.warning-content {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
}

.warning-motto {
  font-size: 24rpx;
  color: #999;
  font-style: italic;
  text-align: center;
  margin-top: 10rpx;
  padding-top: 20rpx;
  border-top: 1px solid #e0e0e0;
}

.warning-actions {
  display: flex;
  gap: 15rpx;
  padding: 0 30rpx 30rpx;
}

.warning-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.warning-btn.secondary {
  background: linear-gradient(180deg, #e8e8e8 0%, #d0d0d0 100%);
  border: 1px solid #a0a0a0;
  color: #333;
}

.warning-btn.primary {
  background: linear-gradient(180deg, #4a9eff 0%, #2a7edf 100%);
  color: #fff;
}

.warning-btn:active {
  opacity: 0.8;
}

/* 怀念弹窗 */
.nostalgia-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1100;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  padding: 40rpx;
  box-sizing: border-box;
}

.nostalgia-overlay.show {
  opacity: 1;
  visibility: visible;
}

.nostalgia-dialog {
  width: 580rpx;
  max-width: 100%;
  max-height: 75vh;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #fff #808080 #808080 #fff;
  border-radius: 8rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.5);
  animation: dialogSlideIn 0.3s ease;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

@keyframes dialogSlideIn {
  from {
    transform: scale(0.95);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* Win98标题栏 */
.win98-title-bar {
  height: 52rpx;
  background: linear-gradient(180deg, #1084d0 0%, #000080 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 12rpx;
}

.win98-title-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.win98-title-icon {
  font-size: 28rpx;
}

.win98-title-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

.win98-title-controls {
  display: flex;
  gap: 6rpx;
}

.win98-btn-close {
  width: 36rpx;
  height: 36rpx;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #fff #808080 #808080 #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #000;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 1rpx 1rpx 0 #000;
}

.win98-btn-close:active {
  border-color: #808080 #fff #fff #808080;
  box-shadow: none;
}

/* Win98内容区 */
.win98-content {
  flex: 1;
  padding: 25rpx 20rpx;
  max-height: 55vh;
  overflow-y: auto;
  background: #c0c0c0;
}

.nostalgia-text {
  font-size: 26rpx;
  color: #000;
  line-height: 1.8;
  white-space: pre-line;
  font-family: 'SimSun', 'PMingLiU', serif;
  text-align: justify;
  text-indent: 2em;
  word-break: break-all;
}

/* Win98底部 */
.win98-footer {
  padding: 20rpx;
  background: #c0c0c0;
  display: flex;
  justify-content: center;
  border-top: 1px solid #808080;
}

.win98-button {
  min-width: 160rpx;
  height: 60rpx;
  background: #c0c0c0;
  border: 2px solid;
  border-color: #fff #808080 #808080 #fff;
  padding: 0 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
  color: #000;
  cursor: pointer;
  box-shadow: 2rpx 2rpx 0 #000;
}

.win98-button:active {
  border-color: #808080 #fff #fff #808080;
  box-shadow: none;
  transform: translate(1rpx, 1rpx);
}
